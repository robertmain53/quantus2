      "biweekly_half_monthly": {
        "label": "Bi‑weekly (half of monthly payment every two weeks)",
        "description": "Accelerated approach: compute the monthly base payment and apply half of that amount every two weeks. This typically results in 26 half‑payments which equals 13 full monthly payments per year and often shortens payoff time compared with 12 monthly payments.",
        "variables": {
          "monthly_periods": {
            "expression": "12",
            "dependencies": [],
            "label": "Monthly periods per year",
            "unit": "per year",
            "format": "integer",
            "display": false
          },
          "monthly_rate": {
