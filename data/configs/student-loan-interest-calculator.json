{
  "version": "1.0.0",
  "metadata": {
    "title": "Student Loan Interest & Bi‑Weekly Payment Calculator (Advanced)",
    "description": "Compare monthly vs bi‑weekly payment schedules, estimate interest paid and payoff time, and model extra payments. Includes both direct 26‑payment bi‑weekly and accelerated half‑monthly bi‑weekly approaches."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_direct_26",
    "methods": {
      "monthly_standard": {
        "label": "Monthly amortization (standard)",
        "description": "Standard monthly amortization using periodic interest and fixed monthly payment. Estimates payoff when extra payments are applied to each monthly payment.",
        "variables": {
          "periods_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "per year",
            "format": "integer",
            "display": true
          },
          "periodic_rate": {
            "expression": "annual_rate/100/periods_per_year",
            "dependencies": [
              "annual_rate",
              "periods_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "total_payments": {
            "expression": "term_years * periods_per_year",
            "dependencies": [
              "term_years",
              "periods_per_year"
            ],
            "label": "Total scheduled payments",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "base_payment": {
            "expression": "principal * periodic_rate / (1 - pow(1 + periodic_rate, -total_payments))",
            "dependencies": [
              "principal",
              "periodic_rate",
              "total_payments"
            ],
            "label": "Calculated base payment (per period)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_per_period": {
            "expression": "base_payment + extra_payment",
            "dependencies": [
              "base_payment",
              "extra_payment"
            ],
            "label": "Payment applied each period",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_payments_formula": {
            "expression": "ceil( log(payment_per_period / (payment_per_period - principal * periodic_rate)) / log(1 + periodic_rate) )",
            "dependencies": [
              "payment_per_period",
              "principal",
              "periodic_rate"
            ],
            "label": "Estimated number of payments until payoff",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "total_paid_actual": {
            "expression": "payment_per_period * payoff_payments_formula",
            "dependencies": [
              "payment_per_period",
              "payoff_payments_formula"
            ],
            "label": "Estimated total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_paid": {
            "expression": "total_paid_actual - principal",
            "dependencies": [
              "total_paid_actual",
              "principal"
            ],
            "label": "Estimated interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_time_years": {
            "expression": "payoff_payments_formula / periods_per_year",
            "dependencies": [
              "payoff_payments_formula",
              "periods_per_year"
            ],
            "label": "Estimated payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "base_payment",
            "label": "Base payment (monthly)",
            "variable": "base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payoff_time_years",
            "label": "Estimated payoff time (years)",
            "variable": "payoff_time_years",
            "format": "decimal"
          },
          {
            "id": "interest_paid",
            "label": "Estimated interest paid",
            "variable": "interest_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_paid_actual",
            "label": "Estimated total paid",
            "variable": "total_paid_actual",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
