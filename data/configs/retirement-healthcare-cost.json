    "glossary": [
      {
        "term": "Present value",
        "definition": "The current-dollar equivalent of a future series of payments, calculated by discounting future amounts using a real return (after tax) assumption."
      },
      {
        "term": "Health-cost inflation",
        "definition": "The annual rate at which medical prices and spending are expected to grow; often differs from general inflation."
      },
      {
        "term": "Long-term care (LTC)",
        "definition": "Services and support for personal care needs over an extended period, such as in-home care or nursing facilities; often large, episodic expenses."
      },
      {
        "term": "Nominal cost",
        "definition": "A dollar amount expressed in the future year when payment occurs, without discounting to present value."
      },
      {
        "term": "Probability of need",
        "definition": "A decimal between 0 and 1 representing the chance that an event (for example, requiring LTC) will occur during the planning horizon."
      }
    ]
  },
