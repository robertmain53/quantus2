{
  "version": "1.0.0",
  "metadata": {
    "title": "Business Loan Extra Payments Calculator (Recurring & Lump Sum)",
    "description": "Interactive calculator to estimate how recurring extra payments and one-time lump sums change payoff time, total interest paid, and monthly/period payments for business loans. Includes both recurring extra-per-period and immediate lump-sum workflows and a combined option."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "recurring_extra",
    "methods": {
      "recurring_extra": {
        "label": "Recurring extra payments",
        "description": "Apply an additional fixed extra payment each scheduled period in addition to the regular amortizing payment.",
        "variables": {
          "r": {
            "expression": "annual_rate_percent / 100 / payment_frequency",
            "dependencies": [
              "annual_rate_percent",
              "payment_frequency"
            ],
            "label": "Periodic interest rate",
            "unit": "",
            "format": "decimal",
            "display": true
          },
          "n": {
            "expression": "term_years * payment_frequency",
            "dependencies": [
              "term_years",
              "payment_frequency"
            ],
            "label": "Total number of scheduled payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "scheduled_payment": {
            "expression": "loan_amount * r / (1 - pow(1 + r, -n))",
            "dependencies": [
              "loan_amount",
              "r",
              "n"
            ],
            "label": "Scheduled payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "scheduled_payment + extra_payment_amount",
            "dependencies": [
              "scheduled_payment",
              "extra_payment_amount"
            ],
            "label": "Scheduled payment plus recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payments_to_payoff": {
            "expression": "-log(1 - r * loan_amount / payment_with_extra) / log(1 + r)",
            "dependencies": [
              "r",
              "loan_amount",
              "payment_with_extra"
            ],
            "label": "Number of payments to payoff with extra",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "total_paid_with_extra": {
            "expression": "payment_with_extra * payments_to_payoff",
            "dependencies": [
              "payment_with_extra",
              "payments_to_payoff"
            ],
            "label": "Total amount paid (payments only) with recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "original_total_paid": {
            "expression": "scheduled_payment * n",
            "dependencies": [
              "scheduled_payment",
              "n"
            ],
            "label": "Total amount paid without extras",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "interest_saved": {
            "expression": "original_total_paid - total_paid_with_extra",
            "dependencies": [
              "original_total_paid",
              "total_paid_with_extra"
            ],
            "label": "Estimated interest saved",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "periods_saved": {
            "expression": "n - payments_to_payoff",
            "dependencies": [
              "n",
              "payments_to_payoff"
            ],
            "label": "Number of scheduled periods saved",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "payoff_time_years": {
            "expression": "payments_to_payoff / payment_frequency",
            "dependencies": [
              "payments_to_payoff",
              "payment_frequency"
            ],
            "label": "Estimated payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled payment (no extras)",
            "variable": "scheduled_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Payment with recurring extra",
            "variable": "payment_with_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payments_to_payoff",
            "label": "Payments until payoff (periods)",
            "variable": "payments_to_payoff",
            "unit": "periods",
            "format": "decimal"
          },
          {
            "id": "payoff_time_years",
            "label": "Payoff time (years)",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "interest_saved",
            "label": "Estimated interest saved",
            "variable": "interest_saved",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "periods_saved",
            "label": "Scheduled periods saved",
            "variable": "periods_saved",
            "unit": "periods",
            "format": "decimal"
          }
        ]
      },
      "lump_sum_at_start": {
        "label": "One-time lump sum at start",
        "description": "Apply a one-time lump-sum principal reduction immediately before the first scheduled payment.",
        "variables": {
          "r": {
            "expression": "annual_rate_percent / 100 / payment_frequency",
            "dependencies": [
              "annual_rate_percent",
              "payment_frequency"
            ],
            "label": "Periodic interest rate",
            "unit": "",
            "format": "decimal",
            "display": true
          },
          "n": {
            "expression": "term_years * payment_frequency",
            "dependencies": [
              "term_years",
              "payment_frequency"
            ],
            "label": "Total number of scheduled payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "scheduled_payment": {
            "expression": "loan_amount * r / (1 - pow(1 + r, -n))",
            "dependencies": [
              "loan_amount",
              "r",
              "n"
            ],
            "label": "Scheduled payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "principal_after_lump": {
            "expression": "max(loan_amount - lump_sum_amount, 0)",
            "dependencies": [
              "loan_amount",
              "lump_sum_amount"
            ],
            "label": "Principal remaining after lump sum",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payments_to_payoff_lump": {
            "expression": "-log(1 - r * principal_after_lump / scheduled_payment) / log(1 + r)",
            "dependencies": [
              "r",
              "principal_after_lump",
              "scheduled_payment"
            ],
            "label": "Payments to payoff after lump",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "total_paid_with_lump": {
            "expression": "scheduled_payment * payments_to_payoff_lump + lump_sum_amount",
            "dependencies": [
              "scheduled_payment",
              "payments_to_payoff_lump",
              "lump_sum_amount"
            ],
            "label": "Total amount paid including lump sum",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "original_total_paid": {
            "expression": "scheduled_payment * n",
            "dependencies": [
              "scheduled_payment",
              "n"
            ],
            "label": "Total amount paid without extras",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "interest_saved": {
            "expression": "original_total_paid - total_paid_with_lump",
            "dependencies": [
              "original_total_paid",
              "total_paid_with_lump"
            ],
            "label": "Estimated interest saved (lump sum)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_time_years": {
            "expression": "payments_to_payoff_lump / payment_frequency",
            "dependencies": [
              "payments_to_payoff_lump",
              "payment_frequency"
            ],
            "label": "Estimated payoff time (years) after lump",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled payment (no extras)",
            "variable": "scheduled_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "principal_after_lump",
            "label": "Principal after lump sum",
            "variable": "principal_after_lump",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payments_to_payoff_lump",
            "label": "Payments until payoff (periods) after lump",
            "variable": "payments_to_payoff_lump",
            "unit": "periods",
            "format": "decimal"
          },
          {
            "id": "payoff_time_years",
            "label": "Payoff time (years) after lump",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "interest_saved",
            "label": "Estimated interest saved (lump)",
            "variable": "interest_saved",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "combined": {
        "label": "Lump sum at start + recurring extra",
        "description": "Reduce principal immediately by a lump sum and then apply recurring extra payments each period.",
        "variables": {
          "r": {
            "expression": "annual_rate_percent / 100 / payment_frequency",
            "dependencies": [
              "annual_rate_percent",
              "payment_frequency"
            ],
            "label": "Periodic interest rate",
            "unit": "",
            "format": "decimal",
            "display": true
          },
          "n": {
            "expression": "term_years * payment_frequency",
            "dependencies": [
              "term_years",
              "payment_frequency"
            ],
            "label": "Total number of scheduled payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "scheduled_payment": {
            "expression": "loan_amount * r / (1 - pow(1 + r, -n))",
            "dependencies": [
              "loan_amount",
              "r",
              "n"
            ],
            "label": "Scheduled payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "principal_after_lump": {
            "expression": "max(loan_amount - lump_sum_amount, 0)",
            "dependencies": [
              "loan_amount",
              "lump_sum_amount"
            ],
            "label": "Principal after lump sum",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "scheduled_payment + extra_payment_amount",
            "dependencies": [
              "scheduled_payment",
              "extra_payment_amount"
            ],
            "label": "Payment including recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payments_to_payoff_combined": {
            "expression": "-log(1 - r * principal_after_lump / payment_with_extra) / log(1 + r)",
            "dependencies": [
              "r",
              "principal_after_lump",
              "payment_with_extra"
            ],
            "label": "Payments to payoff after lump + recurring extras",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "total_paid_combined": {
            "expression": "payment_with_extra * payments_to_payoff_combined + lump_sum_amount",
            "dependencies": [
              "payment_with_extra",
              "payments_to_payoff_combined",
              "lump_sum_amount"
            ],
            "label": "Total paid including lump and recurring extras",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "original_total_paid": {
            "expression": "scheduled_payment * n",
            "dependencies": [
              "scheduled_payment",
              "n"
            ],
            "label": "Total amount paid without extras",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "interest_saved": {
            "expression": "original_total_paid - total_paid_combined",
            "dependencies": [
              "original_total_paid",
              "total_paid_combined"
            ],
            "label": "Estimated interest saved (combined)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_time_years": {
            "expression": "payments_to_payoff_combined / payment_frequency",
            "dependencies": [
              "payments_to_payoff_combined",
              "payment_frequency"
            ],
            "label": "Estimated payoff time (years) combined",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled payment (no extras)",
            "variable": "scheduled_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "principal_after_lump",
            "label": "Principal after lump sum",
            "variable": "principal_after_lump",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Payment with recurring extra",
            "variable": "payment_with_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payments_to_payoff_combined",
            "label": "Payments until payoff (periods) combined",
            "variable": "payments_to_payoff_combined",
            "unit": "periods",
            "format": "decimal"
          },
          {
            "id": "payoff_time_years",
            "label": "Payoff time (years) combined",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "interest_saved",
            "label": "Estimated interest saved (combined)",
            "variable": "interest_saved",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
  "form": {
