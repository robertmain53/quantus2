    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate; the stated annual interest rate for the loan."
      },
      {
        "term": "Periodic rate",
        "definition": "Interest rate per payment period, calculated as APR divided by number of payments per year."
      },
      {
        "term": "Scheduled payment",
        "definition": "The fixed payment per period required to amortize the loan over the original term without extra payments."
      },
      {
        "term": "Recurring extra payment",
        "definition": "An additional fixed amount added to each scheduled payment and applied directly to principal."
      },
      {
        "term": "Lump sum",
        "definition": "A one-time principal payment applied at a specific time (this tool models it at loan start)."
      },
      {
        "term": "Prepayment penalty",
        "definition": "A fee some lenders charge for paying off a loan early; this calculator does not include such fees."
      }
    ]
  },
