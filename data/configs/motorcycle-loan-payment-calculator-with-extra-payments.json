{
  "version": "1.0.0",
  "metadata": {
    "title": "Motorcycle Loan Payment Calculator with Extra Payments",
    "description": "Calculate standard monthly payments, model one-time or recurring extra payments, estimate payoff date, interest saved, and compare scenarios. Designed for monthly-pay loans (convert annual APR to monthly rate). Includes accuracy caveats and references to engineering and quality standards."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "recurring_extra",
    "methods": {
      "standard": {
        "label": "Standard Amortization (no extra payments)",
        "description": "Computes the monthly payment, total paid and total interest for the entered principal, APR and term assuming level monthly payments.",
        "variables": {
          "monthly_rate": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Monthly interest rate (decimal)",
            "unit": "",
            "format": "decimal",
            "display": true
          },
          "n": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of monthly payments",
            "unit": "months",
            "format": "integer",
            "display": true
          },
          "monthly_payment": {
            "expression": "principal * monthly_rate / (1 - pow(1+monthly_rate, -n))",
            "dependencies": [
              "principal",
              "monthly_rate",
              "n"
            ],
            "label": "Monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_payment": {
            "expression": "monthly_payment * n",
            "dependencies": [
              "monthly_payment",
              "n"
            ],
            "label": "Total paid (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_payment - principal",
            "dependencies": [
              "total_payment",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_payment",
            "label": "Monthly payment",
            "variable": "monthly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n",
            "label": "Number of payments (months)",
            "variable": "n",
            "format": "integer",
            "unit": "months"
          },
          {
            "id": "total_payment",
            "label": "Total amount paid",
            "variable": "total_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "recurring_extra": {
        "label": "Recurring Extra Payments (start at month)",
        "description": "Models recurring extra payments added to the monthly payment beginning at a chosen month and continuing until payoff. Calculates new payoff time and interest saved versus the standard schedule.",
        "variables": {
          "monthly_rate": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Monthly interest rate (decimal)",
            "unit": "",
            "format": "decimal",
            "display": false
          },
          "n": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Original number of monthly payments",
            "unit": "months",
            "format": "integer",
            "display": false
          },
          "standard_payment": {
            "expression": "principal * monthly_rate / (1 - pow(1+monthly_rate, -n))",
            "dependencies": [
              "principal",
              "monthly_rate",
              "n"
            ],
            "label": "Standard monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "balance_after_start": {
            "expression": "principal*pow(1+monthly_rate, extra_start_month) - standard_payment * ((pow(1+monthly_rate, extra_start_month)-1)/monthly_rate)",
            "dependencies": [
              "principal",
              "monthly_rate",
              "standard_payment",
              "extra_start_month"
            ],
            "label": "Remaining balance at start of extra payments",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "payment_with_extra": {
            "expression": "standard_payment + extra_amount_recurring",
            "dependencies": [
              "standard_payment",
              "extra_amount_recurring"
            ],
            "label": "Monthly payment including recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_months_from_start": {
            "expression": "-ln(1 - monthly_rate * balance_after_start / payment_with_extra) / ln(1+monthly_rate)",
            "dependencies": [
              "monthly_rate",
              "balance_after_start",
              "payment_with_extra"
            ],
            "label": "Months needed from start of extra payments to payoff",
            "unit": "months",
            "format": "decimal",
            "display": false
          },
          "payoff_months_total": {
            "expression": "extra_start_month + payoff_months_from_start",
            "dependencies": [
              "extra_start_month",
              "payoff_months_from_start"
            ],
            "label": "Total months to payoff with recurring extras",
            "unit": "months",
            "format": "decimal",
            "display": true
          },
          "new_total_payment": {
            "expression": "standard_payment * extra_start_month + payment_with_extra * payoff_months_from_start",
            "dependencies": [
              "standard_payment",
              "extra_start_month",
              "payment_with_extra",
              "payoff_months_from_start"
            ],
            "label": "Total amount paid under recurring-extra schedule",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "standard_total_payment": {
            "expression": "standard_payment * n",
            "dependencies": [
              "standard_payment",
              "n"
            ],
            "label": "Total amount paid under standard schedule",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "interest_saved": {
            "expression": "standard_total_payment - new_total_payment",
            "dependencies": [
              "standard_total_payment",
              "new_total_payment"
            ],
            "label": "Interest saved by making recurring extras",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "months_saved": {
            "expression": "n - payoff_months_total",
            "dependencies": [
              "n",
              "payoff_months_total"
            ],
            "label": "Months saved versus original schedule",
            "unit": "months",
            "format": "decimal",
            "display": true
          },
          "new_total_interest": {
            "expression": "new_total_payment - principal",
            "dependencies": [
              "new_total_payment",
              "principal"
            ],
            "label": "Total interest paid under recurring-extra schedule",
            "unit": "currency",
            "format": "currency",
            "display": false
          }
        },
        "outputs": [
          {
            "id": "payment_with_extra",
            "label": "Monthly payment including extra",
            "variable": "payment_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_months_total",
            "label": "Total months to payoff",
            "variable": "payoff_months_total",
            "unit": "months",
            "format": "decimal"
          },
          {
            "id": "months_saved",
            "label": "Months saved",
            "variable": "months_saved",
            "unit": "months",
            "format": "decimal"
          },
          {
            "id": "interest_saved",
            "label": "Interest saved",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "one_time_extra": {
        "label": "One-time Extra Payment",
        "description": "Apply a one-time principal payment at a chosen month and recalculate remaining term and interest. Useful to model lump-sum reductions such as trade-in or bonus payments.",
        "variables": {
          "monthly_rate": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Monthly interest rate (decimal)",
            "unit": "",
            "format": "decimal",
            "display": false
          },
          "n": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Original number of monthly payments",
            "unit": "months",
            "format": "integer",
            "display": false
          },
          "standard_payment": {
            "expression": "principal * monthly_rate / (1 - pow(1+monthly_rate, -n))",
            "dependencies": [
              "principal",
              "monthly_rate",
              "n"
            ],
            "label": "Standard monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "balance_after_k": {
            "expression": "principal*pow(1+monthly_rate, extra_month) - standard_payment * ((pow(1+monthly_rate, extra_month)-1)/monthly_rate)",
            "dependencies": [
              "principal",
              "monthly_rate",
              "standard_payment",
              "extra_month"
            ],
            "label": "Balance immediately before the one-time extra payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "new_balance": {
            "expression": "balance_after_k - extra_amount_one_time",
            "dependencies": [
              "balance_after_k",
              "extra_amount_one_time"
            ],
            "label": "Remaining principal after applying one-time extra",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "n_rem": {
            "expression": "-ln(1 - monthly_rate * new_balance / standard_payment) / ln(1+monthly_rate)",
            "dependencies": [
              "monthly_rate",
              "new_balance",
              "standard_payment"
            ],
            "label": "Remaining months after one-time extra",
            "unit": "months",
            "format": "decimal",
            "display": false
          },
          "payoff_months_total": {
            "expression": "extra_month + n_rem",
            "dependencies": [
              "extra_month",
              "n_rem"
            ],
            "label": "Total months to payoff after one-time extra",
            "unit": "months",
            "format": "decimal",
            "display": true
          },
          "new_total_payment": {
            "expression": "standard_payment * extra_month + standard_payment * n_rem + extra_amount_one_time",
            "dependencies": [
              "standard_payment",
              "extra_month",
              "n_rem",
              "extra_amount_one_time"
            ],
            "label": "Total paid including the one-time extra",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "standard_total_payment": {
            "expression": "standard_payment * n",
            "dependencies": [
              "standard_payment",
              "n"
            ],
            "label": "Total paid under standard schedule",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "interest_saved": {
            "expression": "standard_total_payment - new_total_payment",
            "dependencies": [
              "standard_total_payment",
              "new_total_payment"
            ],
            "label": "Interest saved by applying the one-time extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "months_saved": {
            "expression": "n - payoff_months_total",
            "dependencies": [
              "n",
              "payoff_months_total"
            ],
            "label": "Months saved",
            "unit": "months",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payoff_months_total",
            "label": "Total months to payoff",
            "variable": "payoff_months_total",
            "unit": "months",
            "format": "decimal"
          },
          {
            "id": "months_saved",
            "label": "Months saved",
            "variable": "months_saved",
            "unit": "months",
            "format": "decimal"
          },
          {
            "id": "interest_saved",
            "label": "Interest saved",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
