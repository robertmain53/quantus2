{
  "version": "1.0.0",
  "metadata": {
    "title": "Take Home Pay Calculator (Advanced)",
    "description": "Estimate your net take-home pay from salary or hourly wages after typical pre-tax deductions and common payroll taxes. Designed for configurable scenarios and clear accuracy caveats for compliance and calibration."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "annual_salary",
    "methods": {
      "annual_salary": {
        "label": "Annual salary (direct entry)",
        "description": "Enter an annual salary and adjust tax rates, deductions, and pay frequency.",
        "variables": {
          "annual_gross": {
            "expression": "annual_salary",
            "dependencies": [
              "annual_salary"
            ],
            "label": "Annual gross pay",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "gross_period": {
            "expression": "annual_gross / periods_per_year",
            "dependencies": [
              "annual_gross",
              "periods_per_year"
            ],
            "label": "Gross per pay period",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "taxable_income": {
            "expression": "annual_gross - pre_tax_annual - standard_deduction",
            "dependencies": [
              "annual_gross",
              "pre_tax_annual",
              "standard_deduction"
            ],
            "label": "Estimated taxable income (annual)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "federal_tax": {
            "expression": "taxable_income * federal_tax_rate",
            "dependencies": [
              "taxable_income",
              "federal_tax_rate"
            ],
            "label": "Estimated federal tax (annual)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "state_tax": {
            "expression": "taxable_income * state_tax_rate",
            "dependencies": [
              "taxable_income",
              "state_tax_rate"
            ],
            "label": "Estimated state tax (annual)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "social_security": {
            "expression": "taxable_income * social_security_rate",
            "dependencies": [
              "taxable_income",
              "social_security_rate"
            ],
            "label": "Estimated Social Security (annual)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "medicare": {
            "expression": "taxable_income * medicare_rate",
            "dependencies": [
              "taxable_income",
              "medicare_rate"
            ],
            "label": "Estimated Medicare (annual)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_taxes": {
            "expression": "federal_tax + state_tax + social_security + medicare",
            "dependencies": [
              "federal_tax",
              "state_tax",
              "social_security",
              "medicare"
            ],
            "label": "Total estimated taxes (annual)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "net_annual": {
            "expression": "annual_gross - pre_tax_annual - total_taxes - post_tax_annual",
            "dependencies": [
              "annual_gross",
              "pre_tax_annual",
              "total_taxes",
              "post_tax_annual"
            ],
            "label": "Estimated net pay (annual)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "net_period": {
            "expression": "net_annual / periods_per_year",
            "dependencies": [
              "net_annual",
              "periods_per_year"
            ],
            "label": "Estimated net pay per period",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "net_period",
            "label": "Take-home per period",
            "variable": "net_period",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "net_annual",
            "label": "Take-home (annual)",
            "variable": "net_annual",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_taxes",
            "label": "Total estimated taxes (annual)",
            "variable": "total_taxes",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "taxable_income",
            "label": "Estimated taxable income (annual)",
            "variable": "taxable_income",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "hourly_wage": {
        "label": "Hourly wage",
        "description": "Enter hourly rate and typical hours per pay period; the tool annualizes for tax estimation.",
        "variables": {
          "annual_gross": {
            "expression": "hourly_rate * hours_per_period * periods_per_year",
            "dependencies": [
              "hourly_rate",
              "hours_per_period",
              "periods_per_year"
            ],
            "label": "Annual gross pay (annualized)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "gross_period": {
            "expression": "annual_gross / periods_per_year",
            "dependencies": [
