  "form": {
    "fields": [
      {
        "id": "pay_type",
        "label": "Pay type",
        "type": "select",
        "default": "salary",
        "options": [
          {
            "label": "Annual salary",
            "value": "salary"
          },
          {
            "label": "Hourly wage",
            "value": "hourly"
          }
