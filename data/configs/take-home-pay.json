    "glossary": [
      {
        "term": "Gross pay",
        "definition": "Total pay before deductions or taxes."
      },
      {
        "term": "Net pay (take-home)",
        "definition": "Gross pay minus pre-tax deductions, taxes, and post-tax deductions; amount deposited to employee."
      },
      {
        "term": "Pre-tax deductions",
        "definition": "Amounts subtracted from gross pay before tax calculation, such as retirement contributions and certain health premiums."
      },
      {
        "term": "Taxable income",
        "definition": "The portion of income subject to tax after allowed deductions (here approximated as gross minus pre-tax deductions and a standard deduction)."
      },
      {
        "term": "Withholding rate",
        "definition": "A decimal representing the fraction of taxable income withheld for a particular tax (e.g., 0.12 = 12%)."
      }
    ],
    "summary": [
      "This advanced calculator supports salary and hourly scenarios with adjustable deduction and tax-rate inputs. It is designed for clarity, auditability, and user control over assumptions.",
      "For regulatory compliance and production deployment, adopt authoritative rates and refer to official calculators or tax professionals for filing accuracy."
    ]
