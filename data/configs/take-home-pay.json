      {
        "id": "pre_tax_annual",
        "label": "Total pre-tax deductions (annual, e.g. retirement, commuter)",
        "type": "number",
        "default": 0,
        "min": 0,
        "step": 1
      },
      {
        "id": "post_tax_annual",
        "label": "Total post-tax deductions (annual)",
        "type": "number",
        "default": 0,
        "min": 0,
        "step": 1
