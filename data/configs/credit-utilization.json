{
  "version": "1.0.0",
  "metadata": {
    "title": "Credit Utilization Calculator",
    "description": "Estimate your credit utilization by totals or by individual accounts. Includes overall utilization, highest per-account utilization, and gap to a target utilization. Built with clear accuracy caveats and standards references."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "by_totals",
    "methods": {
      "by_totals": {
        "label": "By Totals (quick)",
        "description": "Calculate utilization using a single total credit limit and total balance. Use when you know aggregate figures.",
        "variables": {
          "total_limit": {
            "expression": "total_credit_limit",
            "dependencies": [
              "total_credit_limit"
            ],
            "label": "Total credit limit",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_balance": {
            "expression": "total_credit_balance",
            "dependencies": [
              "total_credit_balance"
            ],
            "label": "Total revolving balance",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "utilization_pct": {
            "expression": "total_limit>0 ? (total_balance/total_limit)*100 : 0",
            "dependencies": [
              "total_limit",
              "total_balance"
            ],
            "label": "Overall utilization",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "gap_to_target_pct": {
            "expression": "desired_target_utilization - utilization_pct",
            "dependencies": [
              "desired_target_utilization",
              "utilization_pct"
            ],
            "label": "Gap to target utilization",
            "unit": "%",
            "format": "percent",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "overall_utilization",
            "label": "Overall utilization (%)",
            "variable": "utilization_pct",
            "unit": "%",
            "format": "percent"
          },
          {
            "id": "gap_to_target",
            "label": "Gap to your target (%)",
            "variable": "gap_to_target_pct",
            "unit": "%",
            "format": "percent"
          },
          {
            "id": "reported_total_limit",
            "label": "Total credit limit",
            "variable": "total_limit",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "reported_total_balance",
            "label": "Total revolving balance",
            "variable": "total_balance",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "by_cards": {
        "label": "By Individual Accounts (detailed)",
        "description": "Enter up to six card or account limits and balances to compute per-account utilization, overall utilization derived from sums, and the highest account utilization.",
        "variables": {
          "sum_limits": {
            "expression": "card1_limit+card2_limit+card3_limit+card4_limit+card5_limit+card6_limit",
            "dependencies": [
              "card1_limit",
              "card2_limit",
              "card3_limit",
              "card4_limit",
              "card5_limit",
              "card6_limit"
            ],
            "label": "Sum of card limits",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "sum_balances": {
            "expression": "card1_balance+card2_balance+card3_balance+card4_balance+card5_balance+card6_balance",
            "dependencies": [
              "card1_balance",
              "card2_balance",
              "card3_balance",
              "card4_balance",
              "card5_balance",
              "card6_balance"
            ],
            "label": "Sum of card balances",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "overall_utilization_pct": {
            "expression": "sum_limits>0 ? (sum_balances/sum_limits)*100 : 0",
            "dependencies": [
              "sum_limits",
              "sum_balances"
            ],
            "label": "Overall utilization (from accounts)",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "per_card_util1": {
            "expression": "card1_limit>0 ? (card1_balance/card1_limit)*100 : 0",
            "dependencies": [
              "card1_limit",
              "card1_balance"
            ],
            "label": "Card 1 utilization",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "per_card_util2": {
            "expression": "card2_limit>0 ? (card2_balance/card2_limit)*100 : 0",
            "dependencies": [
              "card2_limit",
              "card2_balance"
            ],
            "label": "Card 2 utilization",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "per_card_util3": {
            "expression": "card3_limit>0 ? (card3_balance/card3_limit)*100 : 0",
            "dependencies": [
              "card3_limit",
              "card3_balance"
            ],
            "label": "Card 3 utilization",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "per_card_util4": {
            "expression": "card4_limit>0 ? (card4_balance/card4_limit)*100 : 0",
            "dependencies": [
              "card4_limit",
              "card4_balance"
            ],
            "label": "Card 4 utilization",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "per_card_util5": {
            "expression": "card5_limit>0 ? (card5_balance/card5_limit)*100 : 0",
            "dependencies": [
              "card5_limit",
              "card5_balance"
            ],
            "label": "Card 5 utilization",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "per_card_util6": {
            "expression": "card6_limit>0 ? (card6_balance/card6_limit)*100 : 0",
            "dependencies": [
              "card6_limit",
              "card6_balance"
            ],
            "label": "Card 6 utilization",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "highest_account_util_pct": {
            "expression": "max(per_card_util1,per_card_util2,per_card_util3,per_card_util4,per_card_util5,per_card_util6)",
            "dependencies": [
              "per_card_util1",
              "per_card_util2",
              "per_card_util3",
              "per_card_util4",
              "per_card_util5",
              "per_card_util6"
            ],
            "label": "Highest account utilization",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "gap_to_target_pct": {
            "expression": "desired_target_utilization - overall_utilization_pct",
            "dependencies": [
              "desired_target_utilization",
              "overall_utilization_pct"
            ],
            "label": "Gap to target utilization",
            "unit": "%",
            "format": "percent",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "overall_utilization_accounts",
            "label": "Overall utilization (%)",
            "variable": "overall_utilization_pct",
            "unit": "%",
            "format": "percent"
          },
          {
            "id": "highest_account_utilization",
            "label": "Highest account utilization (%)",
            "variable": "highest_account_util_pct",
            "unit": "%",
            "format": "percent"
          },
          {
            "id": "gap_to_target_accounts",
            "label": "Gap to your target (%)",
            "variable": "gap_to_target_pct",
            "unit": "%",
            "format": "percent"
          },
          {
            "id": "sum_of_limits",
            "label": "Sum of account limits",
            "variable": "sum_limits",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "sum_of_balances",
            "label": "Sum of account balances",
            "variable": "sum_balances",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
