    "glossary": [
      {
        "term": "Credit utilization",
        "definition": "The percentage of available revolving credit you are currently using; calculated as balances divided by credit limits."
      },
      {
        "term": "Revolving credit",
        "definition": "Credit that allows you to borrow up to a preset limit and repay over time, such as credit cards."
      },
      {
        "term": "Per-account utilization",
        "definition": "The utilization calculated individually for a single credit account."
      }
    ],
    "summary": [
      "Use the totals method when you have aggregate figures. Use the accounts method to locate high-utilization cards that may disproportionately affect scoring.",
      "This calculator is an estimator only. For authoritative values, refer to your credit report and statements."
    ]
