{
  "version": "1.0.0",
  "metadata": {
    "title": "Auto Loan Extra Payments Calculator — Bi‑Weekly & Monthly Scenarios",
    "description": "Compare bi‑weekly and monthly auto loan schedules and see the effect of per‑payment extra amounts or an occasional lump sum on payoff time and interest. Designed for clarity, numerical traceability, and conservative accuracy notes."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_per_payment_extra",
    "methods": {
      "biweekly_per_payment_extra": {
        "label": "Bi‑weekly schedule with per‑payment extra",
        "description": "Compute bi‑weekly scheduled payment and the effect of adding a fixed extra amount to each bi‑weekly payment.",
        "variables": {
          "periods_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Periods per year",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_rate_pct/100/periods_per_year",
            "dependencies": [
              "annual_rate_pct",
              "periods_per_year"
            ],
            "label": "Periodic interest rate (per bi‑weekly)",
            "format": "decimal",
            "display": false
          },
          "n_payments": {
            "expression": "term_years*periods_per_year",
            "dependencies": [
              "term_years",
              "periods_per_year"
            ],
            "label": "Total scheduled payments (bi‑weekly)",
            "format": "integer",
            "display": false
          },
          "scheduled_payment": {
            "expression": "(periodic_rate*loan_amount)/(1-(1+periodic_rate)^(-n_payments))",
            "dependencies": [
              "periodic_rate",
              "loan_amount",
              "n_payments"
            ],
            "label": "Scheduled bi‑weekly payment (no extra)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "scheduled_payment + extra_amount",
            "dependencies": [
              "scheduled_payment",
              "extra_amount"
            ],
            "label": "Bi‑weekly payment including extra",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payoff_n": {
            "expression": "-log(1 - periodic_rate*loan_amount/payment_with_extra)/log(1+periodic_rate)",
            "dependencies": [
              "periodic_rate",
              "loan_amount",
              "payment_with_extra"
            ],
            "label": "Number of bi‑weekly payments until payoff (with extra)",
            "format": "decimal",
            "display": true
          },
          "payoff_years": {
            "expression": "payoff_n/periods_per_year",
            "dependencies": [
              "payoff_n",
              "periods_per_year"
            ],
            "label": "Time to payoff (years) with extra",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_interest_no_extra": {
            "expression": "scheduled_payment*n_payments - loan_amount",
            "dependencies": [
              "scheduled_payment",
              "n_payments",
              "loan_amount"
            ],
            "label": "Total interest paid (no extra)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_interest_with_extra": {
            "expression": "payment_with_extra*payoff_n - loan_amount",
            "dependencies": [
              "payment_with_extra",
              "payoff_n",
              "loan_amount"
            ],
            "label": "Total interest paid (with extra)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "total_interest_no_extra - total_interest_with_extra",
            "dependencies": [
              "total_interest_no_extra",
              "total_interest_with_extra"
            ],
            "label": "Interest saved by extra payments",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payments_saved": {
            "expression": "n_payments - payoff_n",
            "dependencies": [
              "n_payments",
              "payoff_n"
            ],
            "label": "Number of scheduled payments avoided",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled bi‑weekly payment",
            "variable": "scheduled_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Bi‑weekly payment with extra",
            "variable": "payment_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_n",
            "label": "Payments until payoff (bi‑weekly)",
            "variable": "payoff_n",
            "format": "decimal"
          },
          {
            "id": "payoff_years",
            "label": "Years until payoff (with extra)",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest_no_extra",
            "label": "Total interest without extra",
            "variable": "total_interest_no_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest_with_extra",
            "label": "Total interest with extra",
            "variable": "total_interest_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "interest_saved",
            "label": "Interest saved",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payments_saved",
            "label": "Scheduled payments avoided",
            "variable": "payments_saved",
            "format": "decimal"
          }
        ]
      },
