      "lump_sum_paydown_monthly": {
        "label": "Lump‑sum paydown applied on a monthly schedule",
        "description": "Apply a one‑time lump sum at a specified month and compute remaining balance, new payoff time and interest saved (monthly schedule).",
        "variables": {
          "periods_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Periods per year",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_rate_pct/100/periods_per_year",
            "dependencies": [
              "annual_rate_pct",
              "periods_per_year"
            ],
            "label": "Periodic interest rate (per month)",
            "format": "decimal",
            "display": false
          },
          "n_payments": {
            "expression": "term_years*periods_per_year",
            "dependencies": [
              "term_years",
              "periods_per_year"
            ],
            "label": "Total scheduled payments (monthly)",
            "format": "integer",
            "display": false
          },
          "scheduled_payment": {
            "expression": "(periodic_rate*loan_amount)/(1-(1+periodic_rate)^(-n_payments))",
            "dependencies": [
              "periodic_rate",
              "loan_amount",
              "n_payments"
            ],
            "label": "Scheduled monthly payment (no extra)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "k": {
            "expression": "lump_sum_month",
            "dependencies": [
              "lump_sum_month"
            ],
            "label": "Month when lump sum is applied",
            "format": "integer",
            "display": false
          },
          "balance_after_k": {
            "expression": "loan_amount*(1+periodic_rate)^k - scheduled_payment*(((1+periodic_rate)^k - 1)/periodic_rate)",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "scheduled_payment",
              "k"
            ],
            "label": "Remaining balance immediately before lump sum",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "new_balance": {
            "expression": "balance_after_k - lump_sum_amount",
            "dependencies": [
              "balance_after_k",
              "lump_sum_amount"
            ],
            "label": "Balance after applying lump sum",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "new_payoff_n": {
            "expression": "-log(1 - periodic_rate*new_balance/scheduled_payment)/log(1+periodic_rate)",
            "dependencies": [
              "periodic_rate",
              "new_balance",
              "scheduled_payment"
            ],
            "label": "Remaining payments after lump sum",
            "format": "decimal",
            "display": true
          },
          "new_payoff_years": {
            "expression": "new_payoff_n/periods_per_year",
            "dependencies": [
              "new_payoff_n",
              "periods_per_year"
            ],
            "label": "Remaining years until payoff after lump sum",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_interest_before": {
            "expression": "scheduled_payment*n_payments - loan_amount",
            "dependencies": [
              "scheduled_payment",
              "n_payments",
              "loan_amount"
            ],
            "label": "Total interest without lump sum",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_interest_after": {
            "expression": "scheduled_payment*(k + new_payoff_n) + lump_sum_amount - loan_amount",
            "dependencies": [
              "scheduled_payment",
              "k",
              "new_payoff_n",
              "lump_sum_amount",
              "loan_amount"
            ],
            "label": "Total interest paid after lump sum",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "total_interest_before - total_interest_after",
            "dependencies": [
              "total_interest_before",
              "total_interest_after"
            ],
            "label": "Interest saved by lump sum",
            "unit": "USD",
            "format": "currency",
            "display": true
          }
        },
