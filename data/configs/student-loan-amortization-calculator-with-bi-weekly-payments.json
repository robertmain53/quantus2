      "biweekly": {
        "label": "Bi‑weekly schedule (26 periods/year)",
        "description": "Standard amortization using 26 payments per year. Supports fixed extra payments per period or annual lump sums converted to per‑period equivalents.",
        "variables": {
          "periods_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Periods per year",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_interest_rate/100 / periods_per_year",
            "dependencies": [
              "annual_interest_rate",
              "periods_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "total_payments": {
            "expression": "term_years * periods_per_year",
            "dependencies": [
              "term_years",
              "periods_per_year"
            ],
            "label": "Scheduled number of payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "base_payment": {
            "expression": "annual_interest_rate==0 ? principal / total_payments : principal * periodic_rate / (1 - pow(1+periodic_rate, -total_payments))",
            "dependencies": [
              "principal",
              "periodic_rate",
              "total_payments",
              "annual_interest_rate"
            ],
            "label": "Scheduled periodic payment (no extras)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "extra_payment": {
            "expression": "extra_payment_per_period + extra_annual_payment / periods_per_year",
            "dependencies": [
              "extra_payment_per_period",
              "extra_annual_payment",
              "periods_per_year"
            ],
            "label": "Extra payment per period (equivalent)",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "payment": {
            "expression": "base_payment + extra_payment",
            "dependencies": [
              "base_payment",
              "extra_payment"
            ],
            "label": "Total payment per period (with extras)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "n_payments": {
            "expression": "annual_interest_rate==0 ? ceil(principal / payment) : ceil(-ln(1 - principal * periodic_rate / payment) / ln(1+periodic_rate))",
            "dependencies": [
              "annual_interest_rate",
              "principal",
              "payment",
              "periodic_rate"
            ],
            "label": "Estimated number of payments until payoff",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "total_paid_actual": {
            "expression": "payment * n_payments",
            "dependencies": [
              "payment",
              "n_payments"
            ],
            "label": "Total amount paid",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_interest_actual": {
            "expression": "total_paid_actual - principal",
            "dependencies": [
              "total_paid_actual",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payoff_time_years": {
            "expression": "n_payments / periods_per_year",
            "dependencies": [
              "n_payments",
              "periods_per_year"
            ],
            "label": "Estimated payoff time",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment",
            "label": "Payment per bi‑weekly period",
            "variable": "payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_payments",
            "label": "Payments until payoff (count)",
            "variable": "n_payments",
            "format": "integer"
          },
          {
            "id": "payoff_time_years",
            "label": "Payoff time (years)",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest_actual",
            "label": "Total interest paid",
            "variable": "total_interest_actual",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid_actual",
            "label": "Total amount paid",
            "variable": "total_paid_actual",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
