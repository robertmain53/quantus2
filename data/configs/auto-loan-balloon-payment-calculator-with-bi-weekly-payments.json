{
  "version": "1.0.0",
  "metadata": {
    "title": "Auto Loan Balloon Payment Calculator — Bi‑Weekly & Monthly Modes",
    "description": "Compare bi‑weekly and monthly payment schedules for auto loans that include a balloon payment. Calculates periodic payment, total interest, total paid, and equivalent payment comparisons. Includes accuracy notes and references to relevant standards."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_with_balloon",
    "methods": {
      "biweekly_with_balloon": {
        "label": "Bi‑weekly payments with balloon",
        "description": "Calculates bi‑weekly (26 periods/year) regular payment when a balloon (future) payment is due at a specified time. Balloon is treated as a future value remaining at the balloon date.",
        "variables": {
          "periods_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Periods per year",
            "unit": "periods/year",
            "format": "integer",
            "display": false
          },
          "r": {
            "expression": "annual_rate_percent/100/26",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Periodic interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": true
          },
          "N": {
            "expression": "loan_term_years*26",
            "dependencies": [
              "loan_term_years"
            ],
            "label": "Total number of periods",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "balloon_period": {
            "expression": "balloon_due_years*26",
            "dependencies": [
              "balloon_due_years"
            ],
            "label": "Balloon due (in periods)",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "pv": {
            "expression": "loan_amount",
            "dependencies": [
              "loan_amount"
            ],
            "label": "Loan principal (present value)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "fv": {
            "expression": "balloon_amount",
            "dependencies": [
              "balloon_amount"
            ],
            "label": "Balloon amount (future value)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment": {
            "expression": "r*(pv - fv/(1+r)^N)/(1 - (1+r)^(-N))",
            "dependencies": [
              "r",
              "pv",
              "fv",
              "N"
            ],
            "label": "Regular bi‑weekly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "payment*N + fv",
            "dependencies": [
              "payment",
              "N",
              "fv"
            ],
            "label": "Total amount paid (payments + balloon)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - pv",
            "dependencies": [
              "total_paid",
              "pv"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "equivalent_monthly": {
            "expression": "payment*26/12",
            "dependencies": [
              "payment"
            ],
            "label": "Approx. equivalent monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment_biweekly",
            "label": "Bi‑weekly payment",
            "variable": "payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "balloon_amount_out",
            "label": "Balloon payment (due)",
            "variable": "fv",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_paid_biweekly",
            "label": "Total paid (incl. balloon)",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest_biweekly",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "equivalent_monthly_payment",
            "label": "Approx. equivalent monthly payment",
            "variable": "equivalent_monthly",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "monthly_with_balloon": {
        "label": "Monthly payments with balloon",
