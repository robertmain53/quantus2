{
  "version": "1.0.0",
  "metadata": {
    "title": "RV Loan Amortization Calculator — Extra Payments & Early Payoff",
    "description": "Interactive RV loan amortization tool that models standard amortization and common extra-payment scenarios (fixed recurring extra, one‑time lump sum). Provides payment, payoff time, total interest and total paid estimates. Includes clear assumptions, accuracy caveats, and references to standards for data handling and calculation reliability."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "fixed_extra",
    "methods": {
      "fixed_extra": {
        "label": "Standard schedule with fixed recurring extra payments",
        "description": "Calculates the scheduled payment for the selected payment frequency and computes payoff time and totals when a constant extra payment is applied each period.",
        "variables": {
          "r": {
            "expression": "annual_interest_rate / 100 / payments_per_year",
            "dependencies": [
              "annual_interest_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "format": "decimal",
            "display": false
          },
          "n": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of periods",
            "format": "integer",
            "display": false
          },
          "base_payment": {
            "expression": "(loan_amount * r) / (1 - pow(1 + r, -n))",
            "dependencies": [
              "loan_amount",
              "r",
              "n"
            ],
            "label": "Scheduled payment (no extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "extra": {
            "expression": "extra_monthly_amount",
            "dependencies": [
              "extra_monthly_amount"
            ],
            "label": "Recurring extra per period",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "payment_total": {
            "expression": "base_payment + extra",
            "dependencies": [
              "base_payment",
              "extra"
            ],
            "label": "Total payment per period (scheduled + extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_periods": {
            "expression": "-log(1 - r * loan_amount / payment_total) / log(1 + r)",
            "dependencies": [
              "r",
              "loan_amount",
              "payment_total"
            ],
            "label": "Estimated remaining periods to payoff",
            "format": "decimal",
            "display": true
          },
          "payoff_years": {
            "expression": "payoff_periods / payments_per_year",
            "dependencies": [
              "payoff_periods",
              "payments_per_year"
            ],
            "label": "Estimated years to payoff",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "payment_total * payoff_periods",
            "dependencies": [
              "payment_total",
              "payoff_periods"
            ],
            "label": "Estimated total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Estimated total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "base_payment",
            "label": "Scheduled payment (no extra)",
            "variable": "base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payment_total",
            "label": "Total payment (scheduled + recurring extra)",
            "variable": "payment_total",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payoff_years",
            "label": "Estimated time to payoff (years)",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "payoff_periods",
            "label": "Estimated time to payoff (periods)",
            "variable": "payoff_periods",
            "format": "decimal"
          },
          {
            "id": "total_paid",
            "label": "Estimated total paid",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Estimated total interest",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "one_time": {
        "label": "Single lump-sum extra at start (immediate principal reduction)",
        "description": "Applies a one-time lump-sum payment immediately (at origination) and re-calculates remaining payoff time assuming scheduled payment amount remains unchanged.",
        "variables": {
          "r": {
            "expression": "annual_interest_rate / 100 / payments_per_year",
            "dependencies": [
              "annual_interest_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "format": "decimal",
            "display": false
          },
          "n": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of periods",
            "format": "integer",
            "display": false
          },
          "base_payment": {
            "expression": "(loan_amount * r) / (1 - pow(1 + r, -n))",
            "dependencies": [
              "loan_amount",
              "r",
              "n"
            ],
            "label": "Scheduled payment (no extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "principal_after_one_time": {
            "expression": "loan_amount - one_time_amount",
            "dependencies": [
              "loan_amount",
              "one_time_amount"
            ],
            "label": "Principal after one-time payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "remaining_periods": {
            "expression": "-log(1 - r * principal_after_one_time / base_payment) / log(1 + r)",
            "dependencies": [
              "r",
              "principal_after_one_time",
              "base_payment"
            ],
            "label": "Remaining periods to payoff after lump sum",
            "format": "decimal",
            "display": true
          },
          "remaining_years": {
            "expression": "remaining_periods / payments_per_year",
            "dependencies": [
              "remaining_periods",
              "payments_per_year"
            ],
            "label": "Remaining years to payoff",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "base_payment * remaining_periods + one_time_amount",
            "dependencies": [
              "base_payment",
              "remaining_periods",
              "one_time_amount"
            ],
            "label": "Estimated total paid (includes one-time)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Estimated total interest",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "base_payment",
            "label": "Scheduled payment (no extra)",
            "variable": "base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "principal_after_one_time",
            "label": "Principal after lump sum",
            "variable": "principal_after_one_time",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "remaining_years",
            "label": "Remaining time to payoff (years)",
            "variable": "remaining_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "remaining_periods",
            "label": "Remaining time to payoff (periods)",
            "variable": "remaining_periods",
            "format": "decimal"
          },
          {
            "id": "total_paid",
            "label": "Estimated total paid",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Estimated total interest",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
  "form": {
    "fields": [
      {
        "id": "loan_amount",
