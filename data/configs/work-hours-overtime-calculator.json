{
  "version": "1.0.0",
  "metadata": {
    "title": "Work Hours & Overtime Calculator (Multi-Method, US + California)",
    "description": "Calculate weekly pay and overtime under common rules (Federal FLSA style 40-hour weekly overtime and California daily/weekly overtime rules). Supports per-day hour inputs for an up to 7-day pay period, configurable multipliers, and provides breakdowns and effective hourly rates. Includes regulatory and accuracy notes."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "federal",
    "methods": {
      "federal": {
        "label": "Standard (FLSA-style weekly overtime)",
        "description": "Applies a single weekly overtime threshold: hours over 40 in the pay week are paid at the overtime multiplier (default 1.5×). Daily rules are not applied in this method.",
        "variables": {
          "total_hours": {
            "expression": "day1_hours + day2_hours + day3_hours + day4_hours + day5_hours + day6_hours + day7_hours",
            "dependencies": [
              "day1_hours",
              "day2_hours",
              "day3_hours",
              "day4_hours",
              "day5_hours",
              "day6_hours",
              "day7_hours"
            ],
            "label": "Total hours (week)",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "overtime_hours": {
            "expression": "max(total_hours - 40, 0)",
            "dependencies": [
              "total_hours"
            ],
            "label": "Overtime hours (weekly > 40)",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "regular_hours": {
            "expression": "total_hours - overtime_hours",
            "dependencies": [
              "total_hours",
              "overtime_hours"
            ],
            "label": "Regular hours (up to 40)",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "regular_pay": {
            "expression": "regular_hours * hourly_rate",
            "dependencies": [
              "regular_hours",
              "hourly_rate"
            ],
            "label": "Regular pay",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "overtime_pay": {
            "expression": "overtime_hours * hourly_rate * overtime_multiplier",
            "dependencies": [
              "overtime_hours",
              "hourly_rate",
              "overtime_multiplier"
            ],
            "label": "Overtime pay",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_pay": {
            "expression": "regular_pay + overtime_pay",
            "dependencies": [
              "regular_pay",
              "overtime_pay"
            ],
            "label": "Total pay (period)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "effective_hourly": {
            "expression": "total_pay / max(total_hours, 1)",
            "dependencies": [
              "total_pay",
              "total_hours"
            ],
            "label": "Effective hourly rate (total pay divided by hours worked)",
            "unit": "USD",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "overtime_hours",
            "label": "Overtime hours",
            "variable": "overtime_hours",
            "unit": "hours",
            "format": "decimal"
          },
          {
            "id": "overtime_pay",
            "label": "Overtime pay",
            "variable": "overtime_pay",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "regular_pay",
            "label": "Regular pay",
            "variable": "regular_pay",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_pay",
            "label": "Total pay (period)",
            "variable": "total_pay",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "effective_hourly",
            "label": "Effective hourly rate",
            "variable": "effective_hourly",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "california": {
        "label": "California (daily + weekly overtime rules)",
        "description": "Calculates pay using California daily overtime thresholds: hours over 8 up to 12 = 1.5×, hours over 12 = 2×. Also applies weekly overtime for hours over 40. This method attempts to avoid double-counting by treating daily overtime and double time first, then any remaining weekly overtime.",
        "variables": {
          "day1_ot1": {
            "expression": "min(max(day1_hours - 8, 0), 4)",
            "dependencies": [
              "day1_hours"
            ],
            "label": "Day 1 overtime (1.5×) hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day1_dt": {
            "expression": "max(day1_hours - 12, 0)",
            "dependencies": [
              "day1_hours"
            ],
            "label": "Day 1 double-time hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day2_ot1": {
            "expression": "min(max(day2_hours - 8, 0), 4)",
            "dependencies": [
              "day2_hours"
            ],
            "label": "Day 2 overtime (1.5×) hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day2_dt": {
            "expression": "max(day2_hours - 12, 0)",
            "dependencies": [
              "day2_hours"
            ],
            "label": "Day 2 double-time hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day3_ot1": {
            "expression": "min(max(day3_hours - 8, 0), 4)",
            "dependencies": [
              "day3_hours"
            ],
            "label": "Day 3 overtime (1.5×) hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day3_dt": {
            "expression": "max(day3_hours - 12, 0)",
            "dependencies": [
              "day3_hours"
            ],
            "label": "Day 3 double-time hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day4_ot1": {
            "expression": "min(max(day4_hours - 8, 0), 4)",
            "dependencies": [
              "day4_hours"
            ],
            "label": "Day 4 overtime (1.5×) hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day4_dt": {
            "expression": "max(day4_hours - 12, 0)",
            "dependencies": [
              "day4_hours"
            ],
            "label": "Day 4 double-time hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day5_ot1": {
            "expression": "min(max(day5_hours - 8, 0), 4)",
            "dependencies": [
              "day5_hours"
            ],
            "label": "Day 5 overtime (1.5×) hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day5_dt": {
            "expression": "max(day5_hours - 12, 0)",
            "dependencies": [
              "day5_hours"
            ],
            "label": "Day 5 double-time hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day6_ot1": {
            "expression": "min(max(day6_hours - 8, 0), 4)",
            "dependencies": [
              "day6_hours"
            ],
            "label": "Day 6 overtime (1.5×) hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day6_dt": {
            "expression": "max(day6_hours - 12, 0)",
            "dependencies": [
              "day6_hours"
            ],
            "label": "Day 6 double-time hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day7_ot1": {
            "expression": "min(max(day7_hours - 8, 0), 4)",
            "dependencies": [
              "day7_hours"
            ],
            "label": "Day 7 overtime (1.5×) hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "day7_dt": {
            "expression": "max(day7_hours - 12, 0)",
            "dependencies": [
              "day7_hours"
            ],
            "label": "Day 7 double-time hours",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "daily_ot_hours": {
            "expression": "day1_ot1 + day2_ot1 + day3_ot1 + day4_ot1 + day5_ot1 + day6_ot1 + day7_ot1",
            "dependencies": [
              "day1_ot1",
              "day2_ot1",
              "day3_ot1",
              "day4_ot1",
              "day5_ot1",
              "day6_ot1",
              "day7_ot1"
            ],
            "label": "Total daily overtime hours (1.5×)",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "daily_dt_hours": {
            "expression": "day1_dt + day2_dt + day3_dt + day4_dt + day5_dt + day6_dt + day7_dt",
            "dependencies": [
              "day1_dt",
              "day2_dt",
              "day3_dt",
              "day4_dt",
              "day5_dt",
              "day6_dt",
              "day7_dt"
            ],
            "label": "Total daily double-time hours (2×)",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "total_hours": {
            "expression": "day1_hours + day2_hours + day3_hours + day4_hours + day5_hours + day6_hours + day7_hours",
            "dependencies": [
              "day1_hours",
              "day2_hours",
              "day3_hours",
              "day4_hours",
              "day5_hours",
              "day6_hours",
              "day7_hours"
            ],
            "label": "Total hours (week)",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "weekly_overtime_hours": {
            "expression": "max(total_hours - 40, 0)",
            "dependencies": [
              "total_hours"
            ],
            "label": "Weekly overtime hours (hours over 40)",
            "unit": "hours",
            "format": "decimal",
            "display": false
          },
          "weekly_ot_extra": {
            "expression": "max(weekly_overtime_hours - daily_ot_hours - daily_dt_hours, 0)",
            "dependencies": [
              "weekly_overtime_hours",
              "daily_ot_hours",
              "daily_dt_hours"
            ],
            "label": "Additional weekly overtime hours (1.5×) not already covered by daily rules",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "regular_hours": {
            "expression": "total_hours - daily_ot_hours - daily_dt_hours - weekly_ot_extra",
            "dependencies": [
              "total_hours",
              "daily_ot_hours",
              "daily_dt_hours",
              "weekly_ot_extra"
            ],
            "label": "Regular hours",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "regular_pay": {
            "expression": "regular_hours * hourly_rate",
            "dependencies": [
              "regular_hours",
              "hourly_rate"
            ],
            "label": "Regular pay",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "daily_ot_pay": {
            "expression": "daily_ot_hours * hourly_rate * overtime_multiplier",
            "dependencies": [
              "daily_ot_hours",
              "hourly_rate",
              "overtime_multiplier"
            ],
            "label": "Daily overtime pay (1.5×)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "daily_dt_pay": {
            "expression": "daily_dt_hours * hourly_rate * doubletime_multiplier",
            "dependencies": [
              "daily_dt_hours",
              "hourly_rate",
              "doubletime_multiplier"
            ],
            "label": "Daily double-time pay (2×)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "weekly_ot_pay": {
            "expression": "weekly_ot_extra * hourly_rate * overtime_multiplier",
            "dependencies": [
              "weekly_ot_extra",
              "hourly_rate",
              "overtime_multiplier"
            ],
            "label": "Additional weekly overtime pay (1.5×)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_pay": {
            "expression": "regular_pay + daily_ot_pay + daily_dt_pay + weekly_ot_pay",
            "dependencies": [
              "regular_pay",
              "daily_ot_pay",
              "daily_dt_pay",
              "weekly_ot_pay"
            ],
            "label": "Total pay (period)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "effective_hourly": {
            "expression": "total_pay / max(total_hours, 1)",
            "dependencies": [
              "total_pay",
              "total_hours"
            ],
            "label": "Effective hourly rate (total pay divided by hours worked)",
            "unit": "USD",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "daily_ot_hours",
            "label": "Daily overtime hours (1.5×)",
            "variable": "daily_ot_hours",
            "unit": "hours",
            "format": "decimal"
          },
          {
            "id": "daily_dt_hours",
            "label": "Daily double-time hours (2×)",
            "variable": "daily_dt_hours",
            "unit": "hours",
            "format": "decimal"
          },
          {
            "id": "weekly_ot_extra",
            "label": "Additional weekly overtime hours (1.5×)",
            "variable": "weekly_ot_extra",
            "unit": "hours",
            "format": "decimal"
