      "cash_flow_driven": {
        "label": "Cash-flow driven allocation",
        "description": "Allocate new contributions to bring underweight assets toward target without selling existing holdings. Distributes contribution proportionally to shortfall.",
        "variables": {
          "total_value": {
            "expression": "current_value_1 + current_value_2 + current_value_3 + current_value_4 + current_value_5 + cash_available",
            "dependencies": [
              "current_value_1",
              "current_value_2",
              "current_value_3",
              "current_value_4",
              "current_value_5",
              "cash_available"
            ],
            "label": "Total portfolio value",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "current_pct_1": {
            "expression": "if(total_value>0, current_value_1 / total_value * 100, 0)",
            "dependencies": [
              "current_value_1",
              "total_value"
            ],
            "label": "Current percent Asset 1",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "shortfall_1": {
            "expression": "max(target_pct_1 - current_pct_1, 0)",
            "dependencies": [
              "target_pct_1",
              "current_pct_1"
            ],
            "label": "Shortfall percent Asset 1",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "shortfall_sum": {
            "expression": "shortfall_1 + max(target_pct_2 - current_pct_2, 0) + max(target_pct_3 - current_pct_3, 0) + max(target_pct_4 - current_pct_4, 0) + max(target_pct_5 - current_pct_5, 0)",
            "dependencies": [
              "shortfall_1",
              "target_pct_2",
              "current_pct_2",
              "target_pct_3",
              "current_pct_3",
              "target_pct_4",
              "current_pct_4",
              "target_pct_5",
              "current_pct_5"
            ],
            "label": "Sum of shortfalls",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "allocation_1": {
            "expression": "if(shortfall_sum>0, incoming_contribution * (shortfall_1 / shortfall_sum), 0)",
            "dependencies": [
              "shortfall_sum",
              "shortfall_1",
              "incoming_contribution"
            ],
            "label": "Contribution allocated to Asset 1",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "allocation_2": {
            "expression": "if(shortfall_sum>0, incoming_contribution * (max(target_pct_2 - current_pct_2, 0) / shortfall_sum), 0)",
            "dependencies": [
              "shortfall_sum",
              "target_pct_2",
              "current_pct_2",
              "incoming_contribution"
            ],
            "label": "Contribution allocated to Asset 2",
            "unit": "currency",
            "format": "currency",
            "display": false
          }
        },
        "outputs": [
          {
            "id": "allocation_1",
            "label": "Contribution to Asset 1",
            "variable": "allocation_1",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "allocation_2",
            "label": "Contribution to Asset 2",
            "variable": "allocation_2",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "tax_minimizing": {
        "label": "Tax-aware minimal-sell rebalancing",
        "description": "Attempt to minimize realized gains by preferring buys with cash and contributions, and by computing minimal required sells from overweight positions when necessary. Estimations include a simple tax impact factor and transaction cost.",
        "variables": {
          "total_value": {
            "expression": "current_value_1 + current_value_2 + current_value_3 + current_value_4 + current_value_5 + cash_available",
            "dependencies": [
              "current_value_1",
              "current_value_2",
              "current_value_3",
              "current_value_4",
              "current_value_5",
              "cash_available"
            ],
            "label": "Total portfolio value",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "current_pct_1": {
            "expression": "if(total_value>0, current_value_1 / total_value * 100, 0)",
            "dependencies": [
              "current_value_1",
              "total_value"
            ],
            "label": "Current percent Asset 1",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "overweight_1": {
            "expression": "max(current_pct_1 - target_pct_1, 0)",
            "dependencies": [
              "current_pct_1",
              "target_pct_1"
            ],
            "label": "Overweight percent Asset 1",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "sell_needed_1": {
            "expression": "max((current_value_1 - total_value * target_pct_1 / 100) - cash_available, 0)",
            "dependencies": [
              "current_value_1",
              "total_value",
              "target_pct_1",
              "cash_available"
            ],
            "label": "Estimated sell required from Asset 1 after using cash available",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "tax_cost_estimate_1": {
            "expression": "sell_needed_1 * (tax_impact_pct/100)",
            "dependencies": [
              "sell_needed_1",
              "tax_impact_pct"
            ],
            "label": "Estimated tax on sells for Asset 1",
            "unit": "currency",
            "format": "currency",
            "display": false
          }
        },
        "outputs": [
          {
            "id": "sell_needed_1",
            "label": "Asset 1 estimated sell (minimize tax)",
            "variable": "sell_needed_1",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "tax_cost_estimate_1",
            "label": "Asset 1 estimated tax cost",
            "variable": "tax_cost_estimate_1",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
