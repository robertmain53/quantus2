{
  "version": "1.0.0",
  "metadata": {
    "title": "Portfolio Rebalancing Calculator — Multi-method",
    "description": "Interactive multi-method portfolio rebalancer that supports target-allocation, threshold rebalancing, cash-flow driven allocation, and a tax-aware minimal-sell mode. Designed for clear trade instructions, calibration limits, and traceable calculations."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "target_allocation",
    "methods": {
      "target_allocation": {
        "label": "Target allocation (full rebalance)",
        "description": "Compute desired holdings to match target percentages and show trade amounts required to reach targets.",
        "variables": {
          "total_value": {
            "expression": "current_value_1 + current_value_2 + current_value_3 + current_value_4 + current_value_5 + cash_available",
            "dependencies": [
              "current_value_1",
              "current_value_2",
              "current_value_3",
              "current_value_4",
              "current_value_5",
              "cash_available"
            ],
            "label": "Total portfolio value (including available cash)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "desired_value_1": {
            "expression": "total_value * target_pct_1 / 100",
            "dependencies": [
              "total_value",
              "target_pct_1"
            ],
            "label": "Desired value Asset 1",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "desired_value_2": {
            "expression": "total_value * target_pct_2 / 100",
            "dependencies": [
              "total_value",
              "target_pct_2"
            ],
            "label": "Desired value Asset 2",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "desired_value_3": {
            "expression": "total_value * target_pct_3 / 100",
            "dependencies": [
              "total_value",
              "target_pct_3"
            ],
            "label": "Desired value Asset 3",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "desired_value_4": {
            "expression": "total_value * target_pct_4 / 100",
            "dependencies": [
              "total_value",
              "target_pct_4"
            ],
            "label": "Desired value Asset 4",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "desired_value_5": {
            "expression": "total_value * target_pct_5 / 100",
            "dependencies": [
              "total_value",
              "target_pct_5"
            ],
            "label": "Desired value Asset 5",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "trade_1": {
            "expression": "desired_value_1 - current_value_1 - (transaction_cost_pct/100) * abs(desired_value_1 - current_value_1)",
            "dependencies": [
              "desired_value_1",
              "current_value_1",
              "transaction_cost_pct"
            ],
            "label": "Suggested trade amount Asset 1 (net of estimated transaction cost)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "trade_2": {
            "expression": "desired_value_2 - current_value_2 - (transaction_cost_pct/100) * abs(desired_value_2 - current_value_2)",
            "dependencies": [
              "desired_value_2",
              "current_value_2",
              "transaction_cost_pct"
            ],
            "label": "Suggested trade amount Asset 2",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "trade_3": {
            "expression": "desired_value_3 - current_value_3 - (transaction_cost_pct/100) * abs(desired_value_3 - current_value_3)",
            "dependencies": [
              "desired_value_3",
              "current_value_3",
              "transaction_cost_pct"
            ],
            "label": "Suggested trade amount Asset 3",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "trade_4": {
            "expression": "desired_value_4 - current_value_4 - (transaction_cost_pct/100) * abs(desired_value_4 - current_value_4)",
            "dependencies": [
              "desired_value_4",
              "current_value_4",
              "transaction_cost_pct"
            ],
            "label": "Suggested trade amount Asset 4",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "trade_5": {
            "expression": "desired_value_5 - current_value_5 - (transaction_cost_pct/100) * abs(desired_value_5 - current_value_5)",
            "dependencies": [
              "desired_value_5",
              "current_value_5",
              "transaction_cost_pct"
            ],
            "label": "Suggested trade amount Asset 5",
            "unit": "currency",
            "format": "currency",
            "display": false
          }
        },
        "outputs": [
          {
            "id": "trade_1",
            "label": "Asset 1 trade amount",
            "variable": "trade_1",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "trade_2",
            "label": "Asset 2 trade amount",
            "variable": "trade_2",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "trade_3",
            "label": "Asset 3 trade amount",
            "variable": "trade_3",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "trade_4",
            "label": "Asset 4 trade amount",
            "variable": "trade_4",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "trade_5",
            "label": "Asset 5 trade amount",
            "variable": "trade_5",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "threshold_rebalance": {
        "label": "Threshold rebalancing (only if outside band)",
        "description": "Identify assets whose weight deviates from their target by more than the configured threshold and show the trade required to restore target for those assets.",
        "variables": {
          "total_value": {
            "expression": "current_value_1 + current_value_2 + current_value_3 + current_value_4 + current_value_5 + cash_available",
            "dependencies": [
              "current_value_1",
              "current_value_2",
              "current_value_3",
              "current_value_4",
              "current_value_5",
              "cash_available"
            ],
            "label": "Total portfolio value",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "current_pct_1": {
            "expression": "if(total_value>0, current_value_1 / total_value * 100, 0)",
            "dependencies": [
              "current_value_1",
              "total_value"
            ],
            "label": "Current percent Asset 1",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "deviation_1": {
            "expression": "abs(current_pct_1 - target_pct_1)",
            "dependencies": [
              "current_pct_1",
              "target_pct_1"
            ],
            "label": "Deviation Asset 1",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "desired_trade_if_outside_1": {
            "expression": "deviation_1 > rebalance_threshold_percent ? (total_value * target_pct_1 / 100 - current_value_1) : 0",
            "dependencies": [
              "deviation_1",
              "rebalance_threshold_percent",
              "total_value",
              "target_pct_1",
              "current_value_1"
            ],
            "label": "Trade if outside threshold Asset 1",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "current_pct_2": {
            "expression": "if(total_value>0, current_value_2 / total_value * 100, 0)",
            "dependencies": [
              "current_value_2",
              "total_value"
            ],
            "label": "Current percent Asset 2",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "deviation_2": {
            "expression": "abs(current_pct_2 - target_pct_2)",
            "dependencies": [
              "current_pct_2",
              "target_pct_2"
            ],
            "label": "Deviation Asset 2",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "desired_trade_if_outside_2": {
            "expression": "deviation_2 > rebalance_threshold_percent ? (total_value * target_pct_2 / 100 - current_value_2) : 0",
            "dependencies": [
              "deviation_2",
              "rebalance_threshold_percent",
              "total_value",
              "target_pct_2",
              "current_value_2"
            ],
            "label": "Trade if outside threshold Asset 2",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "current_pct_3": {
            "expression": "if(total_value>0, current_value_3 / total_value * 100, 0)",
            "dependencies": [
              "current_value_3",
              "total_value"
            ],
            "label": "Current percent Asset 3",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "deviation_3": {
            "expression": "abs(current_pct_3 - target_pct_3)",
            "dependencies": [
              "current_pct_3",
              "target_pct_3"
            ],
            "label": "Deviation Asset 3",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "desired_trade_if_outside_3": {
            "expression": "deviation_3 > rebalance_threshold_percent ? (total_value * target_pct_3 / 100 - current_value_3) : 0",
            "dependencies": [
              "deviation_3",
              "rebalance_threshold_percent",
              "total_value",
              "target_pct_3",
              "current_value_3"
            ],
            "label": "Trade if outside threshold Asset 3",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "current_pct_4": {
            "expression": "if(total_value>0, current_value_4 / total_value * 100, 0)",
            "dependencies": [
              "current_value_4",
              "total_value"
            ],
            "label": "Current percent Asset 4",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "deviation_4": {
            "expression": "abs(current_pct_4 - target_pct_4)",
            "dependencies": [
              "current_pct_4",
              "target_pct_4"
            ],
            "label": "Deviation Asset 4",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "desired_trade_if_outside_4": {
            "expression": "deviation_4 > rebalance_threshold_percent ? (total_value * target_pct_4 / 100 - current_value_4) : 0",
            "dependencies": [
              "deviation_4",
              "rebalance_threshold_percent",
              "total_value",
              "target_pct_4",
              "current_value_4"
            ],
            "label": "Trade if outside threshold Asset 4",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "current_pct_5": {
            "expression": "if(total_value>0, current_value_5 / total_value * 100, 0)",
            "dependencies": [
              "current_value_5",
              "total_value"
            ],
            "label": "Current percent Asset 5",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "deviation_5": {
            "expression": "abs(current_pct_5 - target_pct_5)",
            "dependencies": [
              "current_pct_5",
              "target_pct_5"
            ],
            "label": "Deviation Asset 5",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "desired_trade_if_outside_5": {
            "expression": "deviation_5 > rebalance_threshold_percent ? (total_value * target_pct_5 / 100 - current_value_5) : 0",
            "dependencies": [
              "deviation_5",
