            "variable": "desired_trade_if_outside_1",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "deviation_2",
            "label": "Asset 2 deviation (%)",
            "variable": "deviation_2",
            "unit": "%",
            "format": "percent"
          },
          {
            "id": "desired_trade_if_outside_2",
            "label": "Asset 2 trade if outside band",
            "variable": "desired_trade_if_outside_2",
            "unit": "currency",
            "format": "currency"
          }
