{
  "version": "1.0.0",
  "metadata": {
    "title": "Comparable Company Analysis (CCA) — Advanced Valuation Calculator",
    "description": "Multi-method Comparable Company Analysis calculator. Build peer multiples, compute EV and equity values, blend methods with user weights, apply size/liquidity/control adjustments, and produce an implied per-share valuation and a calibrated range. Includes clear caveats, calibration guidance, and references to industry standards for model governance."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "market_multiples",
    "methods": {
      "market_multiples": {
        "label": "Market Multiples (peer-average approach)",
        "description": "Compute average peer multiples (EV/Revenue, EV/EBITDA, P/E) across provided comparables and apply to the target company's metrics to produce implied enterprise value, equity value, and per-share estimates.",
        "variables": {
          "average_ev_rev": {
            "expression": "(ev_rev_1 + ev_rev_2 + ev_rev_3 + ev_rev_4 + ev_rev_5 + ev_rev_6) / num_comparables",
            "dependencies": [
              "ev_rev_1",
              "ev_rev_2",
              "ev_rev_3",
              "ev_rev_4",
              "ev_rev_5",
              "ev_rev_6",
              "num_comparables"
            ],
            "label": "Average EV / Revenue (multiple)",
            "unit": "x",
            "format": "decimal",
            "display": true
          },
          "average_ev_ebitda": {
            "expression": "(ev_ebitda_1 + ev_ebitda_2 + ev_ebitda_3 + ev_ebitda_4 + ev_ebitda_5 + ev_ebitda_6) / num_comparables",
            "dependencies": [
              "ev_ebitda_1",
              "ev_ebitda_2",
              "ev_ebitda_3",
              "ev_ebitda_4",
              "ev_ebitda_5",
              "ev_ebitda_6",
              "num_comparables"
            ],
            "label": "Average EV / EBITDA (multiple)",
            "unit": "x",
            "format": "decimal",
            "display": true
          },
          "average_p_e": {
            "expression": "(p_e_1 + p_e_2 + p_e_3 + p_e_4 + p_e_5 + p_e_6) / num_comparables",
            "dependencies": [
              "p_e_1",
              "p_e_2",
              "p_e_3",
              "p_e_4",
              "p_e_5",
              "p_e_6",
              "num_comparables"
            ],
            "label": "Average Price / Earnings (multiple)",
            "unit": "x",
            "format": "decimal",
            "display": true
          },
          "ev_from_rev": {
            "expression": "average_ev_rev * target_revenue",
            "dependencies": [
              "average_ev_rev",
              "target_revenue"
            ],
            "label": "Implied Enterprise Value (from Revenue multiple)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "ev_from_ebitda": {
            "expression": "average_ev_ebitda * target_ebitda",
            "dependencies": [
              "average_ev_ebitda",
              "target_ebitda"
            ],
            "label": "Implied Enterprise Value (from EBITDA multiple)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "equity_value_from_ebitda": {
            "expression": "ev_from_ebitda - target_debt + target_cash",
            "dependencies": [
              "ev_from_ebitda",
              "target_debt",
              "target_cash"
            ],
            "label": "Implied Equity Value (from EBITDA)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "equity_value_per_share_ebitda": {
            "expression": "equity_value_from_ebitda / target_shares",
            "dependencies": [
              "equity_value_from_ebitda",
              "target_shares"
            ],
            "label": "Implied Share Price (from EBITDA method)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "equity_value_from_pe": {
            "expression": "average_p_e * target_net_income",
            "dependencies": [
              "average_p_e",
              "target_net_income"
            ],
            "label": "Implied Equity Value (from P/E)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "equity_value_per_share_pe": {
            "expression": "equity_value_from_pe / target_shares",
            "dependencies": [
              "equity_value_from_pe",
              "target_shares"
            ],
            "label": "Implied Share Price (from P/E method)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "ev_from_rev",
            "label": "EV from Revenue",
            "variable": "ev_from_rev",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "ev_from_ebitda",
            "label": "EV from EBITDA",
            "variable": "ev_from_ebitda",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "equity_value_per_share_ebitda",
            "label": "Share Price (EBITDA)",
            "variable": "equity_value_per_share_ebitda",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "equity_value_per_share_pe",
            "label": "Share Price (P/E)",
            "variable": "equity_value_per_share_pe",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "weighted_blend": {
        "label": "Weighted Blend of Multiples",
        "description": "Combine multiples using user-specified weights to create a blended EV multiple and derive implied enterprise and equity values.",
        "variables": {
          "average_ev_rev_w": {
            "expression": "(ev_rev_1 + ev_rev_2 + ev_rev_3 + ev_rev_4 + ev_rev_5 + ev_rev_6) / num_comparables",
            "dependencies": [
              "ev_rev_1",
              "ev_rev_2",
              "ev_rev_3",
              "ev_rev_4",
              "ev_rev_5",
              "ev_rev_6",
              "num_comparables"
            ],
            "label": "Average EV/Revenue",
            "unit": "x",
            "format": "decimal",
            "display": false
          },
          "average_ev_ebitda_w": {
            "expression": "(ev_ebitda_1 + ev_ebitda_2 + ev_ebitda_3 + ev_ebitda_4 + ev_ebitda_5 + ev_ebitda_6) / num_comparables",
            "dependencies": [
              "ev_ebitda_1",
              "ev_ebitda_2",
              "ev_ebitda_3",
              "ev_ebitda_4",
              "ev_ebitda_5",
              "ev_ebitda_6",
              "num_comparables"
            ],
            "label": "Average EV/EBITDA",
            "unit": "x",
            "format": "decimal",
            "display": false
          },
          "blended_ev_multiple": {
            "expression": "(average_ev_ebitda_w * weight_ev_ebitda + average_ev_rev_w * weight_ev_rev) / (weight_ev_ebitda + weight_ev_rev)",
            "dependencies": [
              "average_ev_ebitda_w",
              "average_ev_rev_w",
              "weight_ev_ebitda",
              "weight_ev_rev"
            ],
            "label": "Blended EV multiple (weighted)",
            "unit": "x",
            "format": "decimal",
            "display": true
          },
          "ev_blended": {
            "expression": "blended_ev_multiple * target_ebitda",
            "dependencies": [
              "blended_ev_multiple",
              "target_ebitda"
            ],
            "label": "Implied Enterprise Value (blended)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "blended_equity_value": {
            "expression": "ev_blended - target_debt + target_cash",
            "dependencies": [
              "ev_blended",
              "target_debt",
              "target_cash"
            ],
            "label": "Implied Equity Value (blended)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "blended_equity_value_per_share": {
            "expression": "blended_equity_value / target_shares",
            "dependencies": [
              "blended_equity_value",
              "target_shares"
            ],
            "label": "Implied Share Price (blended)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "ev_blended",
            "label": "EV (blended)",
            "variable": "ev_blended",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "blended_equity_value_per_share",
            "label": "Share Price (blended)",
            "variable": "blended_equity_value_per_share",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "adjusted_range": {
        "label": "Adjusted Range & Sensitivity",
        "description": "Apply size, liquidity, and control adjustments, and produce a calibrated valuation range around a blended mid-point.",
        "variables": {
          "average_ev_ebitda_adj": {
            "expression": "(ev_ebitda_1 + ev_ebitda_2 + ev_ebitda_3 + ev_ebitda_4 + ev_ebitda_5 + ev_ebitda_6) / num_comparables",
            "dependencies": [
              "ev_ebitda_1",
              "ev_ebitda_2",
              "ev_ebitda_3",
              "ev_ebitda_4",
              "ev_ebitda_5",
              "ev_ebitda_6",
              "num_comparables"
            ],
            "label": "Average EV/EBITDA (for adjustment)",
            "unit": "x",
            "format": "decimal",
            "display": false
          },
          "baseline_ev": {
            "expression": "average_ev_ebitda_adj * target_ebitda",
            "dependencies": [
              "average_ev_ebitda_adj",
              "target_ebitda"
            ],
            "label": "Baseline Enterprise Value (pre-adjustment)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "baseline_equity_per_share": {
            "expression": "(baseline_ev - target_debt + target_cash) / target_shares",
            "dependencies": [
              "baseline_ev",
              "target_debt",
              "target_cash",
              "target_shares"
            ],
            "label": "Baseline Implied Share Price (pre-adjustment)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "adjustment_factor": {
            "expression": "1 + (control_premium_pct - size_adjustment_pct - liquidity_adjustment_pct) / 100",
            "dependencies": [
              "control_premium_pct",
              "size_adjustment_pct",
              "liquidity_adjustment_pct"
            ],
            "label": "Net adjustment factor (control/size/liquidity)",
            "unit": "x",
            "format": "decimal",
            "display": true
          },
          "adjusted_share_price": {
            "expression": "baseline_equity_per_share * adjustment_factor",
            "dependencies": [
              "baseline_equity_per_share",
              "adjustment_factor"
            ],
            "label": "Adjusted Implied Share Price",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "range_low": {
            "expression": "adjusted_share_price * (1 - valuation_range_pct/100)",
            "dependencies": [
              "adjusted_share_price",
              "valuation_range_pct"
            ],
            "label": "Lower bound of implied price range",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "range_high": {
            "expression": "adjusted_share_price * (1 + valuation_range_pct/100)",
            "dependencies": [
              "adjusted_share_price",
              "valuation_range_pct"
            ],
            "label": "Upper bound of implied price range",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "adjusted_share_price",
            "label": "Adjusted Share Price",
            "variable": "adjusted_share_price",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "range_low",
            "label": "Implied Range - Low",
            "variable": "range_low",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "range_high",
            "label": "Implied Range - High",
            "variable": "range_high",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
