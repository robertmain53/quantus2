    "glossary": [
      {
        "term": "ARV (After Repair Value)",
        "definition": "Estimated market value of the property after planned repairs/rehabilitation are completed."
      },
      {
        "term": "NOI (Net Operating Income)",
        "definition": "Annual rental income after vacancy and operating expenses, before financing and taxes."
      },
      {
        "term": "Cap Rate",
        "definition": "NOI divided by property value, expressed as a percentage; used to convert NOI to theoretical value."
      },
      {
        "term": "MAO (Maximum Allowable Offer)",
        "definition": "Maximum purchase price that meets your underwriting targets given expected costs and profit."
      }
    ]
  }
}