{
  "version": "1.0.0",
  "metadata": {
    "title": "Maximum Allowable Offer (MAO) Calculator \u2014 Multi\u2011Method",
    "description": "Advanced MAO calculator with multiple workflows (70% quick rule, detailed flip cost model, rental/cap\u2011rate model, wholesale/assignment). Designed for clear inputs, transparency, and traceable formulas. Provides MAO and supporting metrics for underwriting and offer decisions."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "flip_detailed",
    "methods": {
      "flip_70_rule": {
        "label": "70% Rule (Quick Flip MAO)",
        "description": "Fast, heuristic MAO using the 70% rule; also shows a version that subtracts common resale costs and your target profit.",
        "variables": {
          "mao_70": {
            "expression": "arv * 0.7 - repair_cost",
            "dependencies": [
              "arv",
              "repair_cost"
            ],
            "label": "MAO (70% rule)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "resale_commission": {
            "expression": "arv * resale_commission_pct / 100",
            "dependencies": [
              "arv",
              "resale_commission_pct"
            ],
            "label": "Estimated resale commission",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "closing_costs_est": {
            "expression": "arv * closing_costs_pct / 100",
            "dependencies": [
              "arv",
              "closing_costs_pct"
            ],
            "label": "Estimated closing costs (buyer/seller combined estimate)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "mao_with_profit": {
            "expression": "mao_70 - desired_profit - resale_commission - closing_costs_est - acquisition_fees - assignment_fee",
            "dependencies": [
              "mao_70",
              "desired_profit",
              "resale_commission",
              "closing_costs_est",
              "acquisition_fees",
              "assignment_fee"
            ],
            "label": "MAO (70% rule adjusted for profit and common costs)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "mao_70",
            "label": "MAO (70% rule)",
            "variable": "mao_70",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "mao_with_profit",
            "label": "MAO (70% rule adjusted for profit and common costs)",
            "variable": "mao_with_profit",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "flip_detailed": {
        "label": "Detailed Flip MAO (Cost\u2011Based Underwrite)",
        "description": "Breaks down contingency, commissions, holding and closing costs and computes MAO = ARV \u2212 desired profit \u2212 total estimated costs. Use when you have specific percentages and holding time estimates.",
        "variables": {
          "contingency": {
            "expression": "repair_cost * rehab_contingency_pct / 100",
            "dependencies": [
              "repair_cost",
              "rehab_contingency_pct"
            ],
            "label": "Rehab contingency",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "resale_commission": {
            "expression": "arv * resale_commission_pct / 100",
            "dependencies": [
              "arv",
              "resale_commission_pct"
            ],
            "label": "Resale commission",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "closing_costs": {
            "expression": "arv * closing_costs_pct / 100",
            "dependencies": [
              "arv",
              "closing_costs_pct"
            ],
            "label": "Estimated closing costs",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "holding_total": {
            "expression": "holding_costs_monthly * holding_period_months",
            "dependencies": [
              "holding_costs_monthly",
              "holding_period_months"
            ],
            "label": "Total holding costs",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_costs": {
            "expression": "repair_cost + contingency + resale_commission + closing_costs + holding_total + acquisition_fees + assignment_fee",
            "dependencies": [
              "repair_cost",
              "contingency",
              "resale_commission",
              "closing_costs",
              "holding_total",
              "acquisition_fees",
              "assignment_fee"
            ],
            "label": "Total estimated costs (excluding desired profit)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "mao": {
            "expression": "arv - desired_profit - total_costs",
            "dependencies": [
              "arv",
              "desired_profit",
              "total_costs"
            ],
            "label": "Maximum Allowable Offer (MAO)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "profit_margin_pct": {
            "expression": "desired_profit / arv * 100",
            "dependencies": [
              "desired_profit",
              "arv"
            ],
            "label": "Target profit as % of ARV",
            "unit": "%",
            "format": "percent",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "contingency",
            "label": "Rehab contingency",
            "variable": "contingency",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "resale_commission",
            "label": "Resale commission",
            "variable": "resale_commission",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "closing_costs",
            "label": "Estimated closing costs",
            "variable": "closing_costs",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "holding_total",
            "label": "Total holding costs",
            "variable": "holding_total",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_costs",
            "label": "Total estimated costs (excluding desired profit)",
            "variable": "total_costs",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "mao",
            "label": "Maximum Allowable Offer (MAO)",
            "variable": "mao",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "profit_margin_pct",
            "label": "Target profit as % of ARV",
            "variable": "profit_margin_pct",
            "unit": "%",
            "format": "percent"
          }
        ]
      },
      "rental_cap_rate": {
        "label": "Rental MAO (Cap\u2011Rate Underwrite)",
        "description": "Buy\u2011and\u2011hold underwriting using NOI and a target cap rate, then subtracts initial rehab and closing/acquisition costs.",
        "variables": {
          "gross_income": {
            "expression": "monthly_rent * 12",
            "dependencies": [
              "monthly_rent"
            ],
            "label": "Gross annual rent",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "effective_gross": {
            "expression": "gross_income * (1 - vacancy_rate_pct / 100)",
            "dependencies": [
              "gross_income",
              "vacancy_rate_pct"
            ],
            "label": "Effective gross income (after vacancy)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "operating_expenses": {
            "expression": "gross_income * annual_operating_expenses_pct / 100",
            "dependencies": [
              "gross_income",
              "annual_operating_expenses_pct"
            ],
            "label": "Estimated annual operating expenses",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "noi": {
            "expression": "effective_gross - operating_expenses",
            "dependencies": [
              "effective_gross",
              "operating_expenses"
            ],
            "label": "Net Operating Income (NOI)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "theoretical_value": {
            "expression": "noi / (cap_rate / 100)",
            "dependencies": [
              "noi",
              "cap_rate"
            ],
            "label": "Theoretical market value (based on cap rate)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "mao": {
            "expression": "theoretical_value - repair_cost - (arv * closing_costs_pct / 100) - acquisition_fees",
            "dependencies": [
              "theoretical_value",
              "repair_cost",
              "arv",
              "closing_costs_pct",
              "acquisition_fees"
            ],
            "label": "MAO (rental/cap\u2011rate)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "effective_gross",
            "label": "Effective gross income (after vacancy)",
            "variable": "effective_gross",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "operating_expenses",
            "label": "Estimated annual operating expenses",
            "variable": "operating_expenses",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "noi",
            "label": "Net Operating Income (NOI)",
            "variable": "noi",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "mao",
            "label": "MAO (rental/cap\u2011rate)",
            "variable": "mao",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "wholesale_assignment": {
        "label": "Wholesale / Assignment MAO",
        "description": "Quick wholesale MAO that accounts for assignment fee targets and basic repair estimates.",
        "variables": {
          "mao_wholesale": {
            "expression": "arv * 0.7 - repair_cost - assignment_fee",
            "dependencies": [
              "arv",
              "repair_cost",
              "assignment_fee"
            ],
            "label": "MAO (wholesale heuristic)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "mao_wholesale",
            "label": "MAO (wholesale heuristic)",
            "variable": "mao_wholesale",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
  "form": {
    "fields": [
      {
        "id": "arv",
        "label": "After Repair Value (ARV)",
        "type": "number",
        "default": 200000,
        "min": 0,
        "step": 1000
      },
      {
        "id": "repair_cost",
        "label": "Estimated repair / rehab cost",
        "type": "number",
        "default": 15000,
        "min": 0,
        "step": 100
      },
      {
        "id": "rehab_contingency_pct",
        "label": "Rehab contingency (%)",
        "type": "number",
        "default": 10,
        "min": 0,
        "max": 100,
        "step": 1
      },
      {
        "id": "desired_profit",
        "label": "Target profit (cash desired)",
        "type": "number",
        "default": 15000,
        "min": 0,
        "step": 100
      },
      {
        "id": "resale_commission_pct",
        "label": "Resale commission (%)",
        "type": "number",
        "default": 6,
        "min": 0,
        "max": 20,
        "step": 0.1
      },
      {
        "id": "closing_costs_pct",
        "label": "Closing costs (%) (estimate of costs paid at resale)",
        "type": "number",
        "default": 2,
        "min": 0,
        "max": 20,
        "step": 0.1
      },
      {
        "id": "holding_costs_monthly",
        "label": "Holding costs per month (taxes, insurance, utilities)",
        "type": "number",
        "default": 500,
        "min": 0,
        "step": 10
      },
      {
        "id": "holding_period_months",
        "label": "Expected holding period (months)",
        "type": "integer",
        "default": 3,
        "min": 0,
        "step": 1
      },
      {
        "id": "acquisition_fees",
        "label": "Upfront acquisition fees (title, inspections, points) estimate",
        "type": "number",
        "default": 1000,
        "min": 0,
        "step": 50
      },
      {
        "id": "assignment_fee",
        "label": "Desired assignment fee (if wholesaling)",
        "type": "number",
        "default": 5000,
        "min": 0,
        "step": 100
      },
      {
        "id": "monthly_rent",
        "label": "Expected monthly rent (for rental model)",
        "type": "number",
        "default": 1500,
        "min": 0,
        "step": 10
      },
      {
        "id": "cap_rate",
        "label": "Target cap rate (%) (rental model)",
        "type": "number",
        "default": 6,
        "min": 0.1,
        "max": 20,
        "step": 0.1
      },
      {
        "id": "vacancy_rate_pct",
        "label": "Vacancy rate (%)",
        "type": "number",
        "default": 5,
        "min": 0,
        "max": 100,
        "step": 0.1
      },
      {
        "id": "annual_operating_expenses_pct",
        "label": "Annual operating expenses (% of gross income)",
        "type": "number",
        "default": 35,
        "min": 0,
        "max": 100,
        "step": 0.1
      }
    ],
    "result": {
      "outputs": [
        {
          "id": "mao",
          "label": "MAO (selected method)"
        },
        {
          "id": "mao_70",
          "label": "MAO (70% rule)"
        },
        {
          "id": "mao_with_profit",
          "label": "MAO (70% adjusted)"
        },
        {
          "id": "total_costs",
          "label": "Total estimated costs"
        },
        {
          "id": "profit_margin_pct",
          "label": "Target profit (%)",
          "format": "percent"
        },
        {
          "id": "noi",
          "label": "Net Operating Income (NOI)"
        },
        {
          "id": "mao_wholesale",
          "label": "MAO (wholesale)"
        }
      ]
    }
  },
  "page_content": {
    "introduction": [
      "This MAO calculator provides multiple underwriting workflows for residential real estate offers: a quick 70% rule, a detailed flip cost model, a rental/cap\u2011rate-based model, and a wholesale/assignment heuristic. Choose the method that matches your transaction type and supply the inputs you know.",
      "The tool emphasizes transparency: every output links to intermediate cost items so you can see what drives the MAO. These are estimates for underwriting guidance and should be validated with local comps, a licensed appraiser, lender quotes, and legal counsel."
    ],
    "methodology": [
      "70% Rule: heuristic commonly used for quick screening. MAO = ARV \u00d7 0.70 \u2212 repair_cost. An adjusted variant subtracts target profit and typical resale costs.",
      "Detailed Flip Model: computes contingency, resale commission, closing costs, holding costs and acquisition fees, then MAO = ARV \u2212 desired_profit \u2212 total_estimated_costs.",
      "Rental (Cap\u2011Rate) Model: converts expected NOI to a theoretical value via MAO = NOI / (cap_rate %) then subtracts initial rehab and transaction expenses to arrive at a purchase MAO."
    ],
    "how_is_calculated": [
      "70% rule (quick): MAO = arv * 0.7 - repair_cost",
      "Detailed flip: contingency = repair_cost * rehab_contingency_pct / 100",
      "Detailed flip: total_costs = repair_cost + contingency + (arv * resale_commission_pct/100) + (arv * closing_costs_pct/100) + (holding_costs_monthly * holding_period_months) + acquisition_fees + assignment_fee",
      "Detailed flip: MAO = arv - desired_profit - total_costs",
      "Rental: gross_income = monthly_rent * 12; effective_gross = gross_income * (1 - vacancy_rate_pct/100); operating_expenses = gross_income * annual_operating_expenses_pct/100; NOI = effective_gross - operating_expenses; theoretical_value = NOI / (cap_rate/100); MAO = theoretical_value - repair_cost - (arv * closing_costs_pct/100) - acquisition_fees"
    ],
    "faqs": [
      {
        "question": "How accurate are the MAO numbers?",
        "answer": "Outputs are estimates based on the inputs and chosen method. Accuracy depends on the quality of your ARV, repair and cost assumptions. Use local comps, contractor bids and lender terms to refine inputs. This tool does not replace professional appraisal or legal advice."
      },
      {
        "question": "Which method should I use?",
        "answer": "Use the 70% rule for fast screening; use the detailed flip model when you have line\u2011item cost estimates; use the rental cap\u2011rate model for buy\u2011and\u2011hold underwriting; use the wholesale mode when assigning contracts. Cross\u2011check multiple methods to validate edge cases."
      },
      {
        "question": "Are financing costs included?",
        "answer": "Financing specifics can materially change MAO. This calculator includes acquisition fees as a user input and approximates common resale costs. For precise financed scenarios, obtain lender terms and add explicit financing fees to acquisition_fees before relying on the MAO."
      },
      {
        "question": "Do you guarantee offers based on these results?",
        "answer": "No. These calculations are guidance only. Confirm title, liens, code issues, environmental hazards, and local regulations before making offers. Consult licensed professionals as needed."
      },
      {
        "question": "How should I account for uncertainty in inputs?",
        "answer": "Run sensitivity checks using conservative and optimistic inputs (higher repair, lower ARV) and treat MAO as a range rather than a single number. Follow established measurement and uncertainty practices when documenting assumptions."
      }
    ],
