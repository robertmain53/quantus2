{
  "version": "1.0.0",
  "metadata": {
    "title": "Business Loan Amortization — Bi‑Weekly & Frequency‑aware Calculator",
    "description": "Calculate amortization, payments, total interest, and payoff timing for business loans with support for monthly, bi‑weekly (standard and accelerated) and weekly frequencies. Includes options for recurring extra principal, select frequency-specific behaviors, and conservative accuracy notes aligned with industry standards."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_accelerated",
    "methods": {
      "monthly_standard": {
        "label": "Monthly standard amortization",
        "description": "Standard amortization assuming one payment per month.",
        "variables": {
          "r_monthly": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Monthly interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "n_months": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of monthly payments",
            "unit": "months",
            "format": "integer",
            "display": true
          },
          "monthly_payment": {
            "expression": "loan_amount * r_monthly / (1 - pow(1 + r_monthly, -n_months))",
            "dependencies": [
              "loan_amount",
              "r_monthly",
              "n_months"
            ],
            "label": "Scheduled monthly payment (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "(monthly_payment + extra_payment) * n_months",
            "dependencies": [
              "monthly_payment",
              "extra_payment",
              "n_months"
            ],
            "label": "Total amount paid (scheduled payments + recurring extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_payment",
            "label": "Monthly payment",
            "variable": "monthly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_months",
            "label": "Number of payments (months)",
            "variable": "n_months",
            "format": "integer"
          },
          {
            "id": "total_paid",
            "label": "Total paid",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "biweekly_standard": {
        "label": "Bi‑weekly standard amortization",
        "description": "Bi‑weekly schedule with 26 payments per year and interest calculated per bi‑weekly period.",
        "variables": {
          "r_biweekly": {
            "expression": "annual_rate/100/26",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Bi‑weekly interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "n_biweeks": {
            "expression": "term_years*26",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of bi‑weekly payments (26/year)",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "biweekly_payment": {
            "expression": "loan_amount * r_biweekly / (1 - pow(1 + r_biweekly, -n_biweeks))",
            "dependencies": [
              "loan_amount",
              "r_biweekly",
              "n_biweeks"
            ],
            "label": "Scheduled bi‑weekly payment (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "(biweekly_payment + extra_payment) * n_biweeks",
            "dependencies": [
              "biweekly_payment",
              "extra_payment",
              "n_biweeks"
            ],
            "label": "Total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "biweekly_payment",
            "label": "Bi‑weekly payment",
            "variable": "biweekly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_biweeks",
            "label": "Number of payments (bi‑weekly)",
            "variable": "n_biweeks",
            "format": "integer"
          },
          {
            "id": "total_paid",
            "label": "Total paid",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "biweekly_accelerated": {
        "label": "Accelerated bi‑weekly (half‑monthly technique)",
        "description": "Uses half of the standard monthly payment paid every two weeks (commonly used accelerated method). This typically reduces term and total interest compared to a straight 26‑period conversion.",
        "variables": {
          "r_monthly": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Monthly interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "n_months": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of monthly payments",
            "unit": "months",
            "format": "integer",
            "display": true
          },
          "monthly_payment": {
            "expression": "loan_amount * r_monthly / (1 - pow(1 + r_monthly, -n_months))",
            "dependencies": [
              "loan_amount",
              "r_monthly",
              "n_months"
            ],
            "label": "Equivalent scheduled monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "biweekly_payment": {
            "expression": "monthly_payment / 2",
            "dependencies": [
              "monthly_payment"
            ],
            "label": "Accelerated bi‑weekly payment (half of monthly)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "r_biweekly": {
            "expression": "annual_rate/100/26",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Bi‑weekly interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "n_biweeks_exact": {
            "expression": "-log(1 - loan_amount * r_biweekly / biweekly_payment) / log(1 + r_biweekly)",
            "dependencies": [
              "loan_amount",
              "r_biweekly",
              "biweekly_payment"
            ],
            "label": "Exact number of bi‑weekly payments to amortize",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "(biweekly_payment + extra_payment) * n_biweeks_exact",
            "dependencies": [
              "biweekly_payment",
              "extra_payment",
              "n_biweeks_exact"
            ],
            "label": "Total amount paid under accelerated schedule",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "equivalent_months": {
            "expression": "n_biweeks_exact * 12 / 26",
            "dependencies": [
              "n_biweeks_exact"
            ],
            "label": "Equivalent months of repayment",
            "unit": "months",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "biweekly_payment",
            "label": "Bi‑weekly payment (accelerated)",
            "variable": "biweekly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_biweeks_exact",
            "label": "Number of bi‑weekly payments (exact)",
            "variable": "n_biweeks_exact",
            "format": "decimal"
          },
          {
            "id": "equivalent_months",
            "label": "Equivalent months to repay",
            "variable": "equivalent_months",
            "unit": "months",
            "format": "decimal"
          },
          {
            "id": "total_paid",
            "label": "Total paid",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
  "form": {
    "fields": [
      {
        "id": "loan_amount",
        "label": "Loan principal",
        "type": "number",
        "default": 100000,
        "min": 0,
        "step": 100
      },
      {
        "id": "annual_rate",
        "label": "Annual interest rate (APR)",
        "type": "number",
        "default": 6,
        "min": 0,
        "max": 100,
        "step": 0.01
      },
      {
        "id": "term_years",
        "label": "Term length (years)",
        "type": "number",
        "default": 5,
        "min": 1,
        "max": 50,
        "step": 1
      },
      {
        "id": "payment_frequency",
        "label": "Payment frequency",
        "type": "select",
        "default": "biweekly",
        "options": [
          {
            "label": "Monthly",
            "value": "monthly"
          },
          {
            "label": "Bi‑weekly (26/year)",
            "value": "biweekly"
          },
          {
            "label": "Weekly (52/year)",
            "value": "weekly"
          }
        ]
      },
      {
        "id": "extra_payment",
        "label": "Recurring extra payment (per scheduled payment)",
        "type": "number",
        "default": 0,
        "min": 0,
        "step": 1
      }
    ],
    "sections": [
      {
        "id": "biweekly_options",
        "label": "Bi‑weekly options",
        "show_when": {
          "field": "payment_frequency",
          "is": "biweekly"
        },
        "fields": [
          {
            "id": "biweekly_mode",
            "label": "Bi‑weekly calculation mode",
            "type": "select",
            "default": "accelerated",
            "options": [
              {
                "label": "Accelerated (half‑monthly technique)",
                "value": "accelerated"
              },
              {
                "label": "Standard (26 equal periods)",
                "value": "standard"
              }
            ]
          }
        ]
      }
    ]
  },
  "page_content": {
    "introduction": [
      "This calculator computes business loan amortization for multiple payment frequencies and modes, including monthly, bi‑weekly (standard 26 payments/year) and an accelerated bi‑weekly method that pays half of the equivalent monthly payment every two weeks. Use recurring extra payments to model accelerated principal reduction.",
      "Results include per‑period payment, total paid, total interest, and an estimate of repayment time. Outputs are numerical estimates for planning and negotiation; always confirm final terms with your lender."
    ],
    "methodology": [
      "The calculator models amortizing loans using standard time‑value‑of‑money formulas. Periodic interest rates are derived by dividing the annual rate (APR) by the number of payment periods per year (12 for monthly, 26 for bi‑weekly, 52 for weekly).",
      "The accelerated bi‑weekly method commonly used in practice takes half the monthly payment and applies it every two weeks. This produces extra principal payments over a year (26 half‑payments equals 13 full monthly payments), shortening the schedule and reducing interest compared to a straight 12‑period conversion."
    ],
    "how_is_calculated": [
      "Monthly periodic rate r = APR / 100 / 12. Monthly payment = P * r / (1 - (1 + r)^-N), where N = years * 12.",
      "Bi‑weekly periodic rate r = APR / 100 / 26. Standard bi‑weekly payment uses the same amortization formula with periods N = years * 26.",
      "Accelerated bi‑weekly payment = (monthly payment) / 2. Exact number of bi‑weekly payments N is solved from amortization equation: N = -log(1 - P * r / payment) / log(1 + r)."
    ],
    "faqs": [
      {
        "question": "Is the accelerated bi‑weekly method always better than the standard bi‑weekly conversion?",
        "answer": "Accelerated bi‑weekly often reduces total interest and shortens term because it effectively applies an extra full monthly payment each year. However, actual impact depends on APR, term, and any recurring extra payments. Use both modes in the tool to compare."
      },
      {
        "question": "Do results match my lender statement exactly?",
        "answer": "This tool provides numerical estimates using standard amortization formulas. Lenders may use day‑count conventions, fees, rounding rules, or different APR definitions that affect exact payment schedules. Use outputs for planning and verify final payoff amounts with your lender."
      },
      {
        "question": "How should I enter extra payments?",
        "answer": "Enter extra_payment as the additional amount you plan to pay each scheduled payment (for example, additional principal each bi‑weekly or monthly payment). The calculator assumes the extra is applied to principal at each scheduled payment."
      },
      {
        "question": "What accuracy and limits should I expect?",
        "answer": "Formulas assume constant APR and fixed scheduled payments with compound interest per period. They do not include origination fees, prepayment penalties, or changes in interest rate. For regulatory or audit use, confirm with lender statements and consider a full amortization schedule exported and reconciled."
      }
    ],
    "citations": [
      {
        "label": "NIST Special Publication – Good Practices for Numerical Calculations",
        "url": "https://www.nist.gov/publications"
      },
      {
        "label": "ISO/IEC numerical software and testing best practices",
        "url": "https://www.iso.org"
      },
      {
        "label": "IEEE guidelines for floating point arithmetic and numerical stability",
        "url": "https://www.ieee.org"
      }
    ],
    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate. The nominal yearly interest rate that does not include compound frequency differences or fees unless explicitly stated."
      },
      {
        "term": "Periodic rate",
        "definition": "Interest rate applied each payment period, equal to APR divided by the number of periods per year (for example, APR/12 for monthly)."
      },
      {
        "term": "Accelerated bi‑weekly",
        "definition": "A repayment pattern in which half of the monthly payment is made every two weeks, resulting in 26 half‑payments (equivalent to 13 full monthly payments per year)."
      },
      {
        "term": "Extra payment",
        "definition": "Any recurring additional principal paid at the time of each scheduled payment. This calculator treats extra payments as applied fully to principal each scheduled payment."
      }
    ]
  },
