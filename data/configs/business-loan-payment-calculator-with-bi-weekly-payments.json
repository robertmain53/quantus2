      "biweekly_26": {
        "label": "True bi‑weekly (26 payments/year)",
        "description": "Calculates payments assuming 26 equal payments per year (every two weeks). Allows additional payment per period and computes adjusted payoff time and total interest using closed‑form formulas.",
        "variables": {
          "payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "per year",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_rate / 100 / payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "total_periods": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total scheduled periods",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "periodic_payment_base": {
            "expression": "if(periodic_rate==0, principal / total_periods, principal * periodic_rate / (1 - (1+periodic_rate)^(-total_periods)))",
            "dependencies": [
              "principal",
              "periodic_rate",
              "total_periods"
            ],
            "label": "Scheduled periodic payment (base)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "actual_payment": {
            "expression": "periodic_payment_base + extra_payment_per_period",
            "dependencies": [
              "periodic_payment_base",
              "extra_payment_per_period"
            ],
            "label": "Actual payment per period (with extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "periods_to_payoff": {
            "expression": "if(actual_payment<=0, 0, if(periodic_rate==0, principal / actual_payment, log(actual_payment / (actual_payment - principal * periodic_rate)) / log(1+periodic_rate)))",
            "dependencies": [
              "actual_payment",
              "principal",
              "periodic_rate"
            ],
            "label": "Estimated number of periods to payoff",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "payoff_years": {
            "expression": "periods_to_payoff / payments_per_year",
            "dependencies": [
              "periods_to_payoff",
              "payments_per_year"
            ],
            "label": "Estimated payoff time",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "actual_payment * periods_to_payoff",
            "dependencies": [
              "actual_payment",
              "periods_to_payoff"
            ],
            "label": "Estimated total paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Estimated total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment_base",
            "label": "Scheduled periodic payment (base)",
            "variable": "periodic_payment_base",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "actual_payment",
            "label": "Actual payment per period (with extras)",
