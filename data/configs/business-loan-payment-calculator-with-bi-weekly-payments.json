    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate. The yearly interest rate charged on a loan expressed as a percentage."
      },
      {
        "term": "Periodic rate",
        "definition": "APR divided by the number of payment periods per year for the selected schedule."
      },
      {
        "term": "True bi‑weekly",
        "definition": "Payment schedule where a payment is made every two weeks, producing 26 payments in most years."
      },
      {
        "term": "Split monthly",
        "definition": "Payment schedule where the monthly payment is divided into two equal payments each month, producing 24 payments per year."
      },
      {
        "term": "Amortization",
        "definition": "The process of spreading loan payments over time where each payment reduces interest and principal according to schedule."
      }
    ]
