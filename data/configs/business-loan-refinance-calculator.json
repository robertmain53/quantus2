{
  "version": "1.0.0",
  "metadata": {
    "title": "Business Loan Refinance & Bi‑Weekly Payment Comparison",
    "description": "Compare your current business loan to a refinanced loan or to switching payment frequency (monthly ↔ bi‑weekly). Outputs include periodic payment amounts, total interest, interest savings, annual cash flow impact, break‑even time for closing costs, and payoff time saved. Designed for clarity, traceable formulas, and conservative assumptions — not a substitute for lender quotes or accounting advice."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "refinance_compare",
    "methods": {
      "refinance_compare": {
        "label": "Refinance / Switch frequency comparison",
        "description": "Compare your existing loan (remaining balance, rate, remaining years, current payments per year) against a proposed refinanced loan (new rate, term, payments per year). Includes closing costs and prepayment penalties rolled into financed principal if selected.",
        "variables": {
          "payments_per_year_existing": {
            "expression": "existing_payments_per_year",
            "dependencies": [
              "existing_payments_per_year"
            ],
            "label": "Existing payments per year",
            "unit": "payments/year",
            "format": "integer",
            "display": false
          },
          "periodic_rate_existing": {
            "expression": "existing_annual_rate/100 / payments_per_year_existing",
            "dependencies": [
              "existing_annual_rate",
              "payments_per_year_existing"
            ],
            "label": "Existing periodic interest rate",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "n_existing": {
            "expression": "existing_remaining_years * payments_per_year_existing",
            "dependencies": [
              "existing_remaining_years",
              "payments_per_year_existing"
            ],
            "label": "Remaining number of existing payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "payment_existing": {
            "expression": "existing_balance * (periodic_rate_existing) / (1 - (1 + periodic_rate_existing) ^ (-n_existing))",
            "dependencies": [
              "existing_balance",
              "periodic_rate_existing",
              "n_existing"
            ],
            "label": "Existing periodic payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid_existing": {
            "expression": "payment_existing * n_existing",
            "dependencies": [
              "payment_existing",
              "n_existing"
            ],
            "label": "Total amount paid remaining (existing)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_interest_existing": {
            "expression": "total_paid_existing - existing_balance",
            "dependencies": [
              "total_paid_existing",
              "existing_balance"
            ],
            "label": "Total interest remaining (existing)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "principal_new": {
            "expression": "existing_balance + closing_costs + prepay_penalty",
            "dependencies": [
              "existing_balance",
              "closing_costs",
              "prepay_penalty"
            ],
            "label": "Financed principal for new loan",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "payments_per_year_new": {
            "expression": "new_payments_per_year",
            "dependencies": [
              "new_payments_per_year"
            ],
            "label": "New payments per year",
            "unit": "payments/year",
            "format": "integer",
            "display": false
          },
          "periodic_rate_new": {
            "expression": "new_annual_rate/100 / payments_per_year_new",
            "dependencies": [
              "new_annual_rate",
              "payments_per_year_new"
            ],
            "label": "New periodic interest rate",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "n_new": {
            "expression": "new_term_years * payments_per_year_new",
            "dependencies": [
              "new_term_years",
              "payments_per_year_new"
            ],
            "label": "Number of payments for new loan",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "payment_new": {
            "expression": "principal_new * (periodic_rate_new) / (1 - (1 + periodic_rate_new) ^ (-n_new))",
            "dependencies": [
              "principal_new",
              "periodic_rate_new",
              "n_new"
            ],
            "label": "New periodic payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid_new": {
            "expression": "payment_new * n_new",
            "dependencies": [
              "payment_new",
              "n_new"
            ],
            "label": "Total amount paid (new loan)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_interest_new": {
            "expression": "total_paid_new - principal_new",
            "dependencies": [
              "total_paid_new",
              "principal_new"
            ],
            "label": "Total interest (new loan)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_savings": {
            "expression": "total_interest_existing - total_interest_new",
            "dependencies": [
              "total_interest_existing",
              "total_interest_new"
            ],
            "label": "Interest savings over life of loan",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "annual_payment_existing": {
            "expression": "payment_existing * payments_per_year_existing",
            "dependencies": [
              "payment_existing",
              "payments_per_year_existing"
            ],
            "label": "Annual payment (existing loan)",
            "unit": "currency/year",
            "format": "currency",
            "display": false
          },
          "annual_payment_new": {
            "expression": "payment_new * payments_per_year_new",
            "dependencies": [
              "payment_new",
              "payments_per_year_new"
            ],
            "label": "Annual payment (new loan)",
            "unit": "currency/year",
            "format": "currency",
            "display": false
          },
          "annual_cashflow_savings": {
            "expression": "annual_payment_existing - annual_payment_new",
            "dependencies": [
              "annual_payment_existing",
              "annual_payment_new"
            ],
            "label": "Annual cash flow savings (existing vs new)",
            "unit": "currency/year",
            "format": "currency",
            "display": true
          },
          "break_even_years": {
            "expression": "total_cash_outlay / annual_cashflow_savings",
            "dependencies": [
              "total_cash_outlay",
              "annual_cashflow_savings"
            ],
            "label": "Break‑even time for closing costs (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_cash_outlay": {
            "expression": "closing_costs + prepay_penalty",
            "dependencies": [
              "closing_costs",
              "prepay_penalty"
            ],
            "label": "Total cash outlay to refinance",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "payoff_time_saved_years": {
            "expression": "existing_remaining_years - (n_new / payments_per_year_new)",
            "dependencies": [
              "existing_remaining_years",
              "n_new",
              "payments_per_year_new"
            ],
            "label": "Estimated payoff time saved (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment_existing",
            "label": "Existing periodic payment",
            "variable": "payment_existing",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payment_new",
            "label": "New periodic payment",
            "variable": "payment_new",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest_existing",
            "label": "Total interest remaining (existing)",
            "variable": "total_interest_existing",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest_new",
            "label": "Total interest (new loan)",
            "variable": "total_interest_new",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "interest_savings",
            "label": "Interest savings (life of loan)",
            "variable": "interest_savings",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "annual_cashflow_savings",
            "label": "Estimated annual cash flow savings",
            "variable": "annual_cashflow_savings",
            "unit": "currency/year",
            "format": "currency"
          },
          {
            "id": "break_even_years",
            "label": "Break‑even (years) for closing costs",
            "variable": "break_even_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "payoff_time_saved_years",
            "label": "Estimated payoff time saved (years)",
            "variable": "payoff_time_saved_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "principal_new",
            "label": "Financed principal for new loan",
            "variable": "principal_new",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
