{
  "version": "1.0.0",
  "metadata": {
    "title": "RV Loan Extra Payments & Bi-Weekly Payments Calculator",
    "description": "Estimate payoff date, interest savings, and payment amounts for an RV loan when making extra recurring payments, one-time lump sums, or switching to a bi-weekly payment schedule. Results are estimates for planning purposes."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "monthly_with_extras",
    "methods": {
      "monthly_with_extras": {
        "label": "Monthly schedule with extra payments",
        "description": "Standard amortization with optional recurring extra payments (applied each payment) and optional one-time lump-sum applied at a specified payment number. Uses periodic interest math to estimate payoff periods and interest.",
        "variables": {
          "payments_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_rate_percent / 100 / payments_per_year",
            "dependencies": [
              "annual_rate_percent",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "n_periods": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total scheduled payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "standard_payment": {
            "expression": "loan_amount * periodic_rate / (1 - (1 + periodic_rate) ** (-n_periods))",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "n_periods"
            ],
            "label": "Standard periodic payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "effective_recurring_payment": {
            "expression": "standard_payment + extra_recurring_amount",
            "dependencies": [
              "standard_payment",
              "extra_recurring_amount"
            ],
            "label": "Payment including recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_periods_if_only_recurring": {
            "expression": "(-1) * ln(1 - periodic_rate * loan_amount / effective_recurring_payment) / ln(1 + periodic_rate)",
            "dependencies": [
              "periodic_rate",
              "loan_amount",
              "effective_recurring_payment"
            ],
            "label": "Estimated number of payments to payoff (recurring extra only)",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "payoff_years_if_only_recurring": {
            "expression": "payoff_periods_if_only_recurring / payments_per_year",
            "dependencies": [
              "payoff_periods_if_only_recurring",
              "payments_per_year"
            ],
            "label": "Years to payoff (recurring extra only)",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "standard_total_interest": {
            "expression": "standard_payment * n_periods - loan_amount",
            "dependencies": [
              "standard_payment",
              "n_periods",
              "loan_amount"
            ],
            "label": "Total interest (scheduled payments)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "interest_paid_with_recurring": {
            "expression": "effective_recurring_payment * payoff_periods_if_only_recurring - loan_amount",
            "dependencies": [
              "effective_recurring_payment",
              "payoff_periods_if_only_recurring",
              "loan_amount"
            ],
            "label": "Estimated interest paid (recurring extra only)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_savings_recurring": {
            "expression": "standard_total_interest - interest_paid_with_recurring",
            "dependencies": [
              "standard_total_interest",
              "interest_paid_with_recurring"
            ],
            "label": "Estimated interest saved (recurring extra only)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "balance_after_k": {
            "expression": "loan_amount * (1 + periodic_rate) ** one_time_extra_at_payment_number - standard_payment * (((1 + periodic_rate) ** one_time_extra_at_payment_number - 1) / periodic_rate)",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "one_time_extra_at_payment_number",
              "standard_payment"
            ],
            "label": "Outstanding balance just before one-time extra",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "new_balance_after_lump": {
            "expression": "balance_after_k - one_time_extra_amount",
            "dependencies": [
              "balance_after_k",
              "one_time_extra_amount"
            ],
            "label": "Balance after applying one-time extra",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "n_post_lump": {
            "expression": "(-1) * ln(1 - periodic_rate * new_balance_after_lump / effective_recurring_payment) / ln(1 + periodic_rate)",
            "dependencies": [
              "periodic_rate",
              "new_balance_after_lump",
              "effective_recurring_payment"
            ],
            "label": "Remaining payments after lump sum",
            "unit": "payments",
            "format": "decimal",
            "display": false
          },
          "total_periods_with_lump": {
            "expression": "one_time_extra_at_payment_number + n_post_lump",
            "dependencies": [
              "one_time_extra_at_payment_number",
              "n_post_lump"
            ],
            "label": "Estimated total payments (with lump)",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "payoff_years_with_lump": {
            "expression": "total_periods_with_lump / payments_per_year",
            "dependencies": [
              "total_periods_with_lump",
              "payments_per_year"
            ],
            "label": "Years to payoff (with lump)",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "interest_paid_with_lump": {
            "expression": "standard_payment * one_time_extra_at_payment_number + effective_recurring_payment * n_post_lump - loan_amount + one_time_extra_amount",
            "dependencies": [
              "standard_payment",
              "one_time_extra_at_payment_number",
              "effective_recurring_payment",
              "n_post_lump",
              "loan_amount",
              "one_time_extra_amount"
            ],
            "label": "Estimated interest paid (with lump)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_savings_with_lump": {
            "expression": "standard_total_interest - interest_paid_with_lump",
            "dependencies": [
              "standard_total_interest",
              "interest_paid_with_lump"
            ],
            "label": "Estimated interest saved (with lump)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "standard_payment",
            "label": "Standard payment (no extras)",
            "variable": "standard_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "effective_recurring_payment",
            "label": "Payment including recurring extra",
            "variable": "effective_recurring_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_years_if_only_recurring",
            "label": "Years to payoff (recurring extra only)",
            "variable": "payoff_years_if_only_recurring",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "payoff_years_with_lump",
            "label": "Years to payoff (with one-time lump)",
            "variable": "payoff_years_with_lump",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "interest_savings_recurring",
            "label": "Interest savings (recurring extra only)",
            "variable": "interest_savings_recurring",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "interest_savings_with_lump",
            "label": "Interest savings (with one-time lump)",
            "variable": "interest_savings_with_lump",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "biweekly_schedule": {
        "label": "Bi-weekly schedule (26 payments/year)",
        "description": "Compute exact periodic bi-weekly payment schedule and compare to monthly schedule. Allows recurring extra applied each bi-weekly payment or a one-time lump applied at a specified bi-weekly payment number.",
        "variables": {
          "payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year (bi-weekly)",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_rate_percent / 100 / payments_per_year",
            "dependencies": [
              "annual_rate_percent",
              "payments_per_year"
            ],
            "label": "Bi-weekly periodic rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "n_periods": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total scheduled bi-weekly payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "standard_biweekly_payment": {
            "expression": "loan_amount * periodic_rate / (1 - (1 + periodic_rate) ** (-n_periods))",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "n_periods"
            ],
            "label": "Standard bi-weekly payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "effective_recurring_biweekly": {
            "expression": "standard_biweekly_payment + extra_recurring_amount",
            "dependencies": [
              "standard_biweekly_payment",
              "extra_recurring_amount"
            ],
            "label": "Bi-weekly payment including recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_periods_biweekly": {
            "expression": "(-1) * ln(1 - periodic_rate * loan_amount / effective_recurring_biweekly) / ln(1 + periodic_rate)",
            "dependencies": [
              "periodic_rate",
              "loan_amount",
              "effective_recurring_biweekly"
            ],
            "label": "Estimated bi-weekly payments to payoff",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "payoff_years_biweekly": {
            "expression": "payoff_periods_biweekly / payments_per_year",
            "dependencies": [
              "payoff_periods_biweekly",
              "payments_per_year"
            ],
            "label": "Years to payoff (bi-weekly)",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "standard_total_interest_biweekly": {
            "expression": "standard_biweekly_payment * n_periods - loan_amount",
            "dependencies": [
              "standard_biweekly_payment",
              "n_periods",
              "loan_amount"
            ],
            "label": "Total interest (bi-weekly scheduled)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "interest_paid_biweekly": {
            "expression": "effective_recurring_biweekly * payoff_periods_biweekly - loan_amount",
            "dependencies": [
              "effective_recurring_biweekly",
              "payoff_periods_biweekly",
              "loan_amount"
            ],
            "label": "Interest paid (bi-weekly with recurring extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_savings_biweekly": {
            "expression": "standard_total_interest_biweekly - interest_paid_biweekly",
            "dependencies": [
              "standard_total_interest_biweekly",
              "interest_paid_biweekly"
            ],
            "label": "Interest saved (bi-weekly vs scheduled)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "standard_biweekly_payment",
            "label": "Standard bi-weekly payment (no extras)",
            "variable": "standard_biweekly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "effective_recurring_biweekly",
            "label": "Bi-weekly payment including recurring extra",
            "variable": "effective_recurring_biweekly",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_years_biweekly",
            "label": "Years to payoff (bi-weekly)",
            "variable": "payoff_years_biweekly",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "interest_savings_biweekly",
            "label": "Interest saved (bi-weekly)",
            "variable": "interest_savings_biweekly",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
