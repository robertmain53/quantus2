    "glossary": [
      {
        "term": "Amortization",
        "definition": "The process of paying off debt over time through regular payments that cover interest and principal."
      },
      {
        "term": "Principal",
        "definition": "The outstanding loan amount on which interest is calculated."
      },
      {
        "term": "APR",
        "definition": "Annual Percentage Rate. The annual rate of interest charged for borrowing, expressed as a percentage."
      },
      {
        "term": "Periodic rate",
        "definition": "The APR divided by the number of payment periods per year (e.g., 12 for monthly, 26 for bi-weekly)."
      },
      {
        "term": "Bi-weekly",
        "definition": "A payment schedule with 26 payments per year, typically every two weeks."
      }
    ],
    "summary": [
      "Use the monthly method to evaluate extra recurring monthly contributions and one-time lump sums applied on a monthly payment cadence.",
      "Use the bi-weekly method to see the effect of switching to 26 payments per year and applying extras on a bi-weekly cadence.",
      "All results are estimates. Verify with your lender for precise payoff amounts and dates."
    ]
  },
