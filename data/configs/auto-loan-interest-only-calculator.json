    "glossary": [
      {
        "term": "Interest‑Only Payment",
        "definition": "Periodic payment that covers only interest for a defined initial period; principal balance remains unchanged during this time."
      },
      {
        "term": "Amortizing Payment",
        "definition": "Periodic payment that gradually repays both principal and interest so the loan balance reaches zero at the end of the scheduled term."
      },
      {
        "term": "APR (Annual Percentage Rate)",
        "definition": "Nominal yearly interest rate expressed as a percentage. This tool uses APR to compute the periodic rate by dividing by the payment frequency; fees are not included unless entered manually."
      },
      {
        "term": "Periodic rate",
        "definition": "Interest rate applicable to a single payment period: APR/100 divided by payments per year."
      }
    ]
  },
