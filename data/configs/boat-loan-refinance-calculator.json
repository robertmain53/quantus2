      },
      {
        "id": "new_term_years",
        "label": "Refinance term (years)",
        "type": "number",
        "default": 5,
        "min": 0,
        "step": 0.01
      },
      {
        "id": "new_payment_frequency",
        "label": "Refinance payment frequency",
        "type": "select",
        "default": "26",
        "options": [
