      }
    ],
    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate: the yearly interest rate that includes certain fees expressed as a percentage."
      },
      {
        "term": "Periodic rate",
        "definition": "APR divided by the number of payment periods per year; used to compute each payment."
      },
      {
        "term": "Financed fees",
        "definition": "Any refinance costs added to the loan principal instead of paid upfront; increases financed amount and affects interest paid."
      },
      {
        "term": "Accelerated bi-weekly",
        "definition": "A bi-weekly schedule with 26 payments per year which effectively produces one extra monthly payment per year (13 full payments)."
      }
    ]
  },
