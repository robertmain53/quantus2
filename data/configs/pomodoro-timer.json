    "glossary": [
      {
        "term": "Pomodoro",
        "definition": "A time-management technique using fixed-length focused work intervals (pomodoros) separated by short breaks."
      },
      {
        "term": "Work duration",
        "definition": "Length in minutes of a single focused interval."
      },
      {
        "term": "Short break",
        "definition": "A brief rest period inserted after a work interval to reset attention."
      },
      {
        "term": "Long break",
        "definition": "A longer rest taken after a set number of cycles to aid recovery."
      },
      {
        "term": "Cycle",
        "definition": "One work interval plus its following short break."
      }
    ]
  },
