      "standard": {
        "label": "Standard Pomodoro (25/5, long break every 4)",
        "description": "Classic Pomodoro pattern: 25 minutes focus, 5 minutes short break, long break after each 4 cycles.",
        "variables": {
          "work": {
            "expression": "25",
            "dependencies": [],
            "label": "Work duration (minutes)",
            "unit": "minutes",
            "format": "decimal",
            "display": true
          },
          "short_break": {
            "expression": "5",
            "dependencies": [],
            "label": "Short break duration (minutes)",
            "unit": "minutes",
            "format": "decimal",
            "display": true
          },
          "long_break": {
            "expression": "15",
            "dependencies": [],
            "label": "Long break duration (minutes)",
            "unit": "minutes",
            "format": "decimal",
            "display": true
          },
          "cycles_before_long": {
            "expression": "4",
            "dependencies": [],
            "label": "Cycles before a long break",
            "format": "integer",
            "display": false
          },
          "total_focus_minutes": {
            "expression": "work * total_cycles * repeat_sessions",
            "dependencies": [
              "work",
              "total_cycles",
              "repeat_sessions"
            ],
            "label": "Total focused minutes",
            "unit": "minutes",
            "format": "decimal",
            "display": true
          },
          "estimated_long_breaks": {
            "expression": "total_cycles / cycles_before_long * repeat_sessions",
            "dependencies": [
              "total_cycles",
              "cycles_before_long",
              "repeat_sessions"
            ],
            "label": "Estimated long breaks (may be fractional when total_cycles is not an integer multiple)",
            "format": "decimal",
            "display": false
          },
          "total_elapsed_minutes": {
            "expression": "(work + short_break) * total_cycles * repeat_sessions + long_break * estimated_long_breaks",
            "dependencies": [
              "work",
              "short_break",
              "total_cycles",
              "repeat_sessions",
              "long_break",
              "estimated_long_breaks"
            ],
            "label": "Total elapsed minutes (including breaks)",
            "unit": "minutes",
            "format": "decimal",
            "display": true
          },
          "focus_percentage": {
            "expression": "100 * total_focus_minutes / total_elapsed_minutes",
            "dependencies": [
              "total_focus_minutes",
              "total_elapsed_minutes"
            ],
            "label": "Share of session spent focused (%)",
            "unit": "%",
            "format": "percent",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "total_focus_minutes",
            "label": "Total focused minutes",
            "variable": "total_focus_minutes",
            "unit": "minutes",
            "format": "decimal"
