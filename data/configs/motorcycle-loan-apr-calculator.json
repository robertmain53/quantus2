    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate — the nominal annual interest rate expressed as a percentage. This tool treats APR as a nominal rate converted to periodic rate by dividing by payments per year."
      },
      {
        "term": "Periodic rate",
        "definition": "Interest rate applied each payment period: APR/100 divided by payments per year."
      },
      {
        "term": "Scheduled payment",
        "definition": "The payment computed by the standard annuity formula that amortizes the loan over the stated term without additional extras."
      },
      {
        "term": "Extra payment",
        "definition": "An additional amount paid each period on top of the scheduled payment. Regular extras accelerate payoff and reduce total interest."
      },
      {
        "term": "Bi‑weekly",
        "definition": "Payment frequency with 26 payments per year. 26 bi‑weekly payments equal 13 monthly payments and often accelerate payoff compared to 12 monthly payments."
      }
    ]
  },
