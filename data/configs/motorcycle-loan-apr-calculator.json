{
  "version": "1.0.0",
  "metadata": {
    "title": "Motorcycle Loan APR & Bi‑Weekly Payment Calculator",
    "description": "Calculate periodic payments, amortization outcomes, and compare monthly vs bi‑weekly schedules for motorcycle loans. Includes APR handling, down payment, fees, trade‑in, and optional extra payments per period. Designed with traceable formulas and accuracy caveats."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "calc_payment",
    "methods": {
      "calc_payment": {
        "label": "Payment for selected frequency",
        "description": "Compute the periodic payment, total paid and total interest for the chosen payment frequency using standard amortization formulas and the entered APR.",
        "variables": {
          "net_principal": {
            "expression": "principal - down_payment - trade_in + fees",
            "dependencies": [
              "principal",
              "down_payment",
              "trade_in",
              "fees"
            ],
            "label": "Net principal (loan amount after down payment/trade)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payments_per_year": {
            "expression": "Number(frequency)",
            "dependencies": [
              "frequency"
            ],
            "label": "Payments per year (frequency)",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "(apr_pct / 100) / payments_per_year",
            "dependencies": [
              "apr_pct",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "periods": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of payments (periods)",
            "format": "integer",
            "display": false
          },
          "base_payment": {
            "expression": "periodic_rate == 0 ? net_principal / periods : (net_principal * periodic_rate) / (1 - (1 + periodic_rate) ^ (-periods))",
            "dependencies": [
              "net_principal",
              "periodic_rate",
              "periods"
            ],
            "label": "Scheduled payment (without extra)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "payment_with_extra": {
            "expression": "base_payment + extra_payment",
            "dependencies": [
              "base_payment",
              "extra_payment"
            ],
            "label": "Periodic payment (including extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_payments_amount": {
            "expression": "payment_with_extra * periods",
            "dependencies": [
              "payment_with_extra",
              "periods"
            ],
            "label": "Total amount paid over schedule",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_payments_amount - net_principal",
            "dependencies": [
              "total_payments_amount",
              "net_principal"
            ],
            "label": "Total interest paid (no early payoff adjustments)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment_with_extra",
            "label": "Payment per period",
            "variable": "payment_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "periods",
            "label": "Number of payments",
            "variable": "periods",
            "format": "integer"
          },
          {
            "id": "total_payments_amount",
            "label": "Total paid",
            "variable": "total_payments_amount",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "compare_monthly_biweekly": {
        "label": "Compare monthly vs bi‑weekly (early payoff effect)",
        "description": "Side‑by‑side comparison that models how the same APR and the same extra payment amount (per period) affect payoff time and total interest when using monthly versus bi‑weekly schedules. Uses closed‑form amortization formulas to estimate payments‑to‑payoff when extra payments are applied.",
        "variables": {
          "net_principal": {
            "expression": "principal - down_payment - trade_in + fees",
            "dependencies": [
              "principal",
              "down_payment",
              "trade_in",
              "fees"
            ],
            "label": "Net principal",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "m_ppy": {
            "expression": "12",
            "dependencies": [],
            "label": "Monthly payments per year",
            "format": "integer",
            "display": false
          },
          "b_ppy": {
            "expression": "26",
            "dependencies": [],
            "label": "Bi‑weekly payments per year",
            "format": "integer",
            "display": false
          },
          "m_periodic_rate": {
            "expression": "(apr_pct / 100) / m_ppy",
            "dependencies": [
              "apr_pct",
              "m_ppy"
            ],
            "label": "Monthly periodic rate",
            "format": "decimal",
            "display": false
          },
          "b_periodic_rate": {
            "expression": "(apr_pct / 100) / b_ppy",
            "dependencies": [
              "apr_pct",
              "b_ppy"
            ],
            "label": "Bi‑weekly periodic rate",
            "format": "decimal",
            "display": false
          },
          "m_periods": {
            "expression": "term_years * m_ppy",
            "dependencies": [
              "term_years",
              "m_ppy"
            ],
            "label": "Monthly schedule periods",
            "format": "integer",
            "display": false
          },
          "b_periods": {
            "expression": "term_years * b_ppy",
            "dependencies": [
              "term_years",
              "b_ppy"
            ],
            "label": "Bi‑weekly schedule periods",
            "format": "integer",
            "display": false
          },
          "m_base_payment": {
            "expression": "m_periodic_rate == 0 ? net_principal / m_periods : (net_principal * m_periodic_rate) / (1 - (1 + m_periodic_rate) ^ (-m_periods))",
            "dependencies": [
              "net_principal",
              "m_periodic_rate",
              "m_periods"
            ],
            "label": "Monthly scheduled payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "b_base_payment": {
            "expression": "b_periodic_rate == 0 ? net_principal / b_periods : (net_principal * b_periodic_rate) / (1 - (1 + b_periodic_rate) ^ (-b_periods))",
            "dependencies": [
              "net_principal",
              "b_periodic_rate",
              "b_periods"
            ],
            "label": "Bi‑weekly scheduled payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "m_payment": {
            "expression": "m_base_payment + extra_payment",
            "dependencies": [
              "m_base_payment",
              "extra_payment"
            ],
            "label": "Monthly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "b_payment": {
            "expression": "b_base_payment + extra_payment",
            "dependencies": [
              "b_base_payment",
              "extra_payment"
            ],
            "label": "Bi‑weekly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "m_payments_to_payoff": {
            "expression": "m_payment <= m_periodic_rate * net_principal ? Infinity : ceil( ln( m_payment / (m_payment - m_periodic_rate * net_principal) ) / ln(1 + m_periodic_rate) )",
            "dependencies": [
              "m_payment",
              "m_periodic_rate",
              "net_principal"
            ],
            "label": "Estimated number of monthly payments to payoff",
            "format": "integer",
            "display": true
          },
          "b_payments_to_payoff": {
            "expression": "b_payment <= b_periodic_rate * net_principal ? Infinity : ceil( ln( b_payment / (b_payment - b_periodic_rate * net_principal) ) / ln(1 + b_periodic_rate) )",
            "dependencies": [
              "b_payment",
              "b_periodic_rate",
              "net_principal"
            ],
            "label": "Estimated number of bi‑weekly payments to payoff",
            "format": "integer",
            "display": true
          },
          "m_total_interest_actual": {
            "expression": "m_payments_to_payoff == Infinity ? Infinity : (m_payment * m_payments_to_payoff) - net_principal",
            "dependencies": [
              "m_payment",
              "m_payments_to_payoff",
              "net_principal"
            ],
            "label": "Estimated total interest (monthly, actual payoff)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "b_total_interest_actual": {
            "expression": "b_payments_to_payoff == Infinity ? Infinity : (b_payment * b_payments_to_payoff) - net_principal",
            "dependencies": [
              "b_payment",
              "b_payments_to_payoff",
              "net_principal"
            ],
            "label": "Estimated total interest (bi‑weekly, actual payoff)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "m_total_interest_actual == Infinity || b_total_interest_actual == Infinity ? null : (m_total_interest_actual - b_total_interest_actual)",
            "dependencies": [
              "m_total_interest_actual",
              "b_total_interest_actual"
            ],
            "label": "Estimated interest saved by bi‑weekly schedule",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "time_saved_years": {
            "expression": "m_payments_to_payoff == Infinity || b_payments_to_payoff == Infinity ? null : ((m_payments_to_payoff / m_ppy) - (b_payments_to_payoff / b_ppy))",
            "dependencies": [
              "m_payments_to_payoff",
              "b_payments_to_payoff",
              "m_ppy",
              "b_ppy"
            ],
            "label": "Approximate years saved (monthly minus bi‑weekly)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "m_payment",
            "label": "Monthly payment (incl. extra)",
            "variable": "m_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "b_payment",
            "label": "Bi‑weekly payment (incl. extra)",
            "variable": "b_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "m_payments_to_payoff",
            "label": "Monthly payments to payoff (estimate)",
            "variable": "m_payments_to_payoff",
            "format": "integer"
          },
          {
            "id": "b_payments_to_payoff",
            "label": "Bi‑weekly payments to payoff (estimate)",
            "variable": "b_payments_to_payoff",
            "format": "integer"
          },
          {
            "id": "interest_saved",
            "label": "Interest saved (bi‑weekly vs monthly)",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "time_saved_years",
            "label": "Approximate years saved",
            "variable": "time_saved_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      },
      "amortization_biweekly": {
        "label": "Bi‑weekly amortization summary (detailed payoff estimate)",
        "description": "Estimate number of bi‑weekly payments to payoff and total interest when using a bi‑weekly schedule. Useful for seeing accelerated payoff impact of making bi‑weekly payments or adding extra per payment.",
        "variables": {
          "net_principal": {
            "expression": "principal - down_payment - trade_in + fees",
            "dependencies": [
              "principal",
              "down_payment",
              "trade_in",
              "fees"
            ],
            "label": "Net principal",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "b_ppy": {
            "expression": "26",
            "dependencies": [],
            "label": "Bi‑weekly periods per year",
            "format": "integer",
            "display": false
          },
          "b_periodic_rate": {
            "expression": "(apr_pct / 100) / b_ppy",
            "dependencies": [
              "apr_pct",
              "b_ppy"
            ],
            "label": "Bi‑weekly periodic rate",
            "format": "decimal",
            "display": false
          },
          "b_base_payment": {
            "expression": "b_periodic_rate == 0 ? net_principal / (term_years * b_ppy) : (net_principal * b_periodic_rate) / (1 - (1 + b_periodic_rate) ^ (-term_years * b_ppy))",
            "dependencies": [
              "net_principal",
              "b_periodic_rate",
              "term_years",
              "b_ppy"
            ],
            "label": "Bi‑weekly scheduled payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "b_payment": {
            "expression": "b_base_payment + extra_payment",
            "dependencies": [
              "b_base_payment",
              "extra_payment"
            ],
            "label": "Bi‑weekly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "b_payments_to_payoff": {
            "expression": "b_payment <= b_periodic_rate * net_principal ? Infinity : ceil( ln( b_payment / (b_payment - b_periodic_rate * net_principal) ) / ln(1 + b_periodic_rate) )",
            "dependencies": [
              "b_payment",
              "b_periodic_rate",
              "net_principal"
            ],
            "label": "Estimated bi‑weekly payments to payoff",
            "format": "integer",
            "display": true
          },
          "years_to_payoff": {
            "expression": "b_payments_to_payoff == Infinity ? null : (b_payments_to_payoff / b_ppy)",
            "dependencies": [
              "b_payments_to_payoff",
              "b_ppy"
            ],
            "label": "Estimated years to payoff",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid_actual": {
            "expression": "b_payments_to_payoff == Infinity ? Infinity : (b_payment * b_payments_to_payoff)",
            "dependencies": [
              "b_payment",
              "b_payments_to_payoff"
            ],
            "label": "Estimated total paid (actual payoff)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest_actual": {
            "expression": "total_paid_actual == Infinity ? Infinity : (total_paid_actual - net_principal)",
            "dependencies": [
              "total_paid_actual",
              "net_principal"
            ],
            "label": "Estimated total interest (actual payoff)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "b_payment",
            "label": "Bi‑weekly payment (incl. extra)",
            "variable": "b_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "b_payments_to_payoff",
            "label": "Bi‑weekly payments to payoff (estimate)",
            "variable": "b_payments_to_payoff",
            "format": "integer"
          },
          {
            "id": "years_to_payoff",
            "label": "Years to payoff (estimate)",
            "variable": "years_to_payoff",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest_actual",
            "label": "Estimated total interest (actual payoff)",
            "variable": "total_interest_actual",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
