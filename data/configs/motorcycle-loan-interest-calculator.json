{
  "version": "1.0.0",
  "metadata": {
    "title": "Motorcycle Loan & Bi-Weekly Payment Calculator (Advanced)",
    "description": "Compare monthly and bi-weekly (true and accelerated) repayment scenarios for motorcycle loans. Calculates per-period payment, total paid, and total interest; supports custom payment inputs and shows how bi-weekly scheduling changes interest and term."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_from_monthly_half",
    "methods": {
      "monthly": {
        "label": "Monthly amortization (standard)",
        "description": "Standard monthly amortization using 12 periods per year.",
        "variables": {
          "principal_net": {
            "expression": "principal - down_payment - trade_in + fees",
            "dependencies": [
              "principal",
              "down_payment",
              "trade_in",
              "fees"
            ],
            "label": "Amount financed",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "periods_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Payments per year",
            "format": "integer",
            "display": false
          },
          "i": {
            "expression": "annual_rate/100/periods_per_year",
            "dependencies": [
              "annual_rate",
              "periods_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "N": {
            "expression": "term_years*periods_per_year",
            "dependencies": [
              "term_years",
              "periods_per_year"
            ],
            "label": "Total number of payments",
            "format": "integer",
            "display": false
          },
          "payment": {
            "expression": "principal_net * i / (1 - (1 + i) ** (-N))",
            "dependencies": [
              "principal_net",
              "i",
              "N"
            ],
            "label": "Monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "payment * N",
            "dependencies": [
              "payment",
              "N"
            ],
            "label": "Total paid (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal_net",
            "dependencies": [
              "total_paid",
              "principal_net"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment",
            "label": "Monthly payment",
            "variable": "payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid",
            "label": "Total paid over life of loan",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "biweekly_26": {
        "label": "True bi-weekly (26 payments/year)",
        "description": "Amortization with 26 equal payments per year (period rate = APR/26). This treats the loan as if paid in 26 uniform installments each year.",
        "variables": {
          "principal_net": {
            "expression": "principal - down_payment - trade_in + fees",
            "dependencies": [
              "principal",
              "down_payment",
              "trade_in",
              "fees"
            ],
            "label": "Amount financed",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "periods_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year",
            "format": "integer",
            "display": false
          },
          "i": {
            "expression": "annual_rate/100/periods_per_year",
            "dependencies": [
              "annual_rate",
              "periods_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "N": {
            "expression": "term_years*periods_per_year",
            "dependencies": [
              "term_years",
              "periods_per_year"
            ],
            "label": "Total number of payments",
            "format": "integer",
            "display": false
          },
          "payment": {
            "expression": "principal_net * i / (1 - (1 + i) ** (-N))",
            "dependencies": [
              "principal_net",
              "i",
              "N"
            ],
            "label": "Bi-weekly payment (26/year)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "payment * N",
            "dependencies": [
              "payment",
              "N"
            ],
            "label": "Total paid (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal_net",
            "dependencies": [
              "total_paid",
              "principal_net"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment",
            "label": "Bi-weekly payment (26/year)",
            "variable": "payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid",
            "label": "Total paid over life of loan",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "biweekly_from_monthly_half": {
        "label": "Accelerated bi-weekly (monthly payment ÷ 2)",
        "description": "Computes the monthly payment then divides it by two and applies that amount every two weeks (26 payments/year). This is the common accelerated bi-weekly approach that results in extra principal paid per year.",
        "variables": {
          "principal_net": {
            "expression": "principal - down_payment - trade_in + fees",
            "dependencies": [
              "principal",
              "down_payment",
              "trade_in",
              "fees"
            ],
            "label": "Amount financed",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "i_month": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Monthly periodic interest rate",
            "format": "decimal",
            "display": false
          },
          "N_month": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Total monthly payments",
            "format": "integer",
            "display": false
          },
          "monthly_payment": {
            "expression": "principal_net * i_month / (1 - (1 + i_month) ** (-N_month))",
            "dependencies": [
              "principal_net",
              "i_month",
              "N_month"
            ],
            "label": "Equivalent monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "payment": {
            "expression": "monthly_payment / 2",
            "dependencies": [
              "monthly_payment"
            ],
            "label": "Bi-weekly payment (accelerated)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "periods": {
            "expression": "term_years*26",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of bi-weekly payments",
            "format": "integer",
            "display": false
          },
          "total_paid": {
            "expression": "payment * periods",
            "dependencies": [
              "payment",
              "periods"
            ],
            "label": "Total paid (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal_net",
            "dependencies": [
              "total_paid",
              "principal_net"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment",
            "label": "Accelerated bi-weekly payment",
            "variable": "payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid",
            "label": "Total paid over life of loan",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "custom_payment": {
        "label": "Custom payment schedule (user-specified payment)",
        "description": "Estimate number of payments and total interest when you specify a fixed payment amount. Assumes monthly compounding for the purpose of the estimate; check lender terms for the exact period convention.",
        "variables": {
          "principal_net": {
            "expression": "principal - down_payment - trade_in + fees",
            "dependencies": [
              "principal",
              "down_payment",
              "trade_in",
              "fees"
            ],
            "label": "Amount financed",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "i_month": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Monthly interest rate",
            "format": "decimal",
            "display": false
          },
          "N": {
            "expression": "ceil(-ln(1 - principal_net * i_month / custom_payment) / ln(1 + i_month))",
            "dependencies": [
              "principal_net",
              "i_month",
              "custom_payment"
            ],
            "label": "Estimated number of monthly payments",
            "format": "integer",
            "display": true
          },
          "total_paid": {
            "expression": "N * custom_payment",
            "dependencies": [
              "N",
              "custom_payment"
            ],
            "label": "Estimated total paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal_net",
            "dependencies": [
              "total_paid",
              "principal_net"
            ],
            "label": "Estimated total interest",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "N",
            "label": "Estimated number of payments",
            "variable": "N",
            "format": "integer"
          },
          {
            "id": "total_paid",
            "label": "Estimated total paid",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Estimated total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
