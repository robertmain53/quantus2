  "metadata": {
    "title": "Motorcycle Loan Calculator — Balloon Payment with Bi‑Weekly & Monthly Modes",
    "description": "Calculate periodic payments for a motorcycle loan that includes an optional balloon (residual) payment. Supports monthly and bi‑weekly schedules, sales tax, down payment and trade‑in. Provides payment, balloon, total cost and interest estimates with clear assumptions and accuracy caveats."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "monthly",
    "methods": {
      "monthly": {
        "label": "Monthly payments (12/year)",
        "description": "Standard amortization with a balloon (residual) payment at loan maturity, using 12 payment periods per year.",
        "variables": {
          "tax_amount": {
            "expression": "price * sales_tax_percent / 100",
            "dependencies": [
              "price",
              "sales_tax_percent"
            ],
            "label": "Sales tax on vehicle price",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "financed": {
            "expression": "price + tax_amount - down_payment - trade_in",
            "dependencies": [
              "price",
              "tax_amount",
              "down_payment",
              "trade_in"
            ],
            "label": "Amount financed (principal)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "periods_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "integer",
            "format": "integer",
            "display": false
          },
          "n_payments": {
            "expression": "loan_term_years * periods_per_year",
            "dependencies": [
              "loan_term_years",
              "periods_per_year"
            ],
            "label": "Total number of payments",
            "unit": "integer",
            "format": "integer",
            "display": true
          },
          "r": {
            "expression": "annual_interest_percent / 100 / periods_per_year",
            "dependencies": [
              "annual_interest_percent",
              "periods_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": false
          },
          "balloon_abs": {
            "expression": "(balloon_percent / 100) * financed + balloon_amount",
            "dependencies": [
              "balloon_percent",
              "financed",
              "balloon_amount"
            ],
            "label": "Balloon (residual) payment — absolute value used in calculations",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "pv_adj": {
            "expression": "financed - balloon_abs / ((1 + r) ^ n_payments)",
            "dependencies": [
              "financed",
              "balloon_abs",
              "r",
              "n_payments"
            ],
            "label": "Present value of amortized portion (PV adjusted for balloon)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "periodic_payment": {
            "expression": "r * pv_adj / (1 - (1 + r) ^ (-n_payments))",
            "dependencies": [
              "r",
              "pv_adj",
              "n_payments"
            ],
            "label": "Periodic payment (principal + interest), excluding final balloon",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "periodic_payment * n_payments + balloon_abs",
            "dependencies": [
              "periodic_payment",
              "n_payments",
              "balloon_abs"
            ],
            "label": "Total amount paid over loan life (payments + balloon)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - financed",
            "dependencies": [
              "total_paid",
              "financed"
            ],
            "label": "Total interest paid over loan life",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment",
            "label": "Periodic payment (monthly)",
            "variable": "periodic_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "balloon_payment",
            "label": "Balloon payment at maturity",
            "variable": "balloon_abs",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "n_payments",
