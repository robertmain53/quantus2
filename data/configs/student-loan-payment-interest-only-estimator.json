      },
      {
        "label": "IEEE Standards Association",
        "url": "https://standards.ieee.org/"
      },
      {
        "label": "OSHA - Occupational Safety and Health Administration",
        "url": "https://www.osha.gov/"
      }
    ],
    "glossary": [
      {
        "term": "Capitalization",
        "definition": "The addition of unpaid interest to the loan principal, increasing the balance on which future interest accrues."
      },
      {
        "term": "Interest-only payment",
        "definition": "A payment that covers only the interest accrued for a period and does not reduce the principal balance."
      },
      {
        "term": "Periodic rate",
        "definition": "The interest rate applicable to each payment period, computed as annual_rate_pct / payments_per_year."
      },
      {
        "term": "Amortization",
        "definition": "The process of paying down a loan balance through regular payments that include interest and principal over a specified number of periods."
      }
    ]
  },
