    "glossary": [
      {
        "term": "Principal",
        "definition": "The original loan balance or remaining unpaid loan amount on which interest is calculated."
      },
      {
        "term": "Periodic rate",
        "definition": "The interest rate applied each payment period, equal to the annual rate divided by the number of periods per year."
      },
      {
        "term": "Bi‑weekly payment",
        "definition": "A payment made every two weeks; there are typically 26 bi‑weekly periods in a year."
      },
      {
        "term": "Amortization",
        "definition": "The process of paying down debt over time through scheduled payments of principal and interest."
      },
      {
        "term": "Interest saved",
        "definition": "Reduction in total interest paid over the life of the loan compared to a reference schedule (usually the original monthly schedule)."
      }
    ]
