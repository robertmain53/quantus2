          "id": "total_interest_monthly_extra",
          "label": "Total interest (monthly extra)",
          "format": "currency"
        },
        {
          "id": "scheduled_bi",
          "label": "Scheduled bi‑weekly payment (base)",
          "format": "currency"
        },
        {
          "id": "A_bi",
          "label": "Bi‑weekly payment (with extra)",
          "format": "currency"
        },
