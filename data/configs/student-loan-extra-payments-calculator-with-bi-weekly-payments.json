{
  "version": "1.0.0",
  "metadata": {
    "title": "Student Loan Extra Payments — Monthly vs Bi‑Weekly Paydown Simulator",
    "description": "Interactive calculator that compares standard amortization, monthly extra payments, and bi‑weekly payment strategies to estimate payoff time, total interest, and total paid. Includes conservative numeric safeguards and accuracy notes."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_with_extra",
    "methods": {
      "standard_monthly": {
        "label": "Standard monthly schedule",
        "description": "Baseline amortization using a fixed monthly payment derived from loan balance, interest rate, and remaining term.",
        "variables": {
          "P": {
            "expression": "loan_balance",
            "dependencies": [
              "loan_balance"
            ],
            "label": "Outstanding principal",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "r_monthly": {
            "expression": "annual_interest_rate/100/12",
            "dependencies": [
              "annual_interest_rate"
            ],
            "label": "Monthly interest rate (decimal)",
            "format": "decimal",
            "display": false
          },
          "n_monthly": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Remaining term (months)",
            "unit": "months",
            "format": "integer",
            "display": false
          },
          "scheduled_monthly": {
            "expression": "(r_monthly*P)/(1 - pow(1 + r_monthly, -n_monthly) + 1e-12)",
            "dependencies": [
              "r_monthly",
              "P",
              "n_monthly"
            ],
            "label": "Calculated scheduled monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "baseline_total_interest": {
            "expression": "scheduled_monthly*n_monthly - P",
            "dependencies": [
              "scheduled_monthly",
              "n_monthly",
              "P"
            ],
            "label": "Total interest if paid on schedule",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "baseline_total_paid": {
            "expression": "scheduled_monthly*n_monthly",
            "dependencies": [
              "scheduled_monthly",
              "n_monthly"
            ],
            "label": "Total paid if paid on schedule",
            "unit": "currency",
            "format": "currency",
            "display": false
          }
        },
        "outputs": [
          {
            "id": "scheduled_monthly",
            "label": "Scheduled monthly payment",
            "variable": "scheduled_monthly",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "baseline_total_interest",
            "label": "Total interest (scheduled)",
            "variable": "baseline_total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "baseline_total_paid",
            "label": "Total paid (scheduled)",
            "variable": "baseline_total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_monthly",
            "label": "Remaining term (months)",
            "variable": "n_monthly",
            "unit": "months",
            "format": "integer"
          }
        ]
      },
      "monthly_with_extra": {
        "label": "Monthly payment with fixed extra each month",
        "description": "Assumes an extra fixed amount added to the scheduled monthly payment every month until payoff.",
        "variables": {
          "P": {
            "expression": "loan_balance",
            "dependencies": [
              "loan_balance"
            ],
            "label": "Outstanding principal",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "r_monthly": {
            "expression": "annual_interest_rate/100/12",
            "dependencies": [
              "annual_interest_rate"
            ],
            "label": "Monthly interest rate (decimal)",
            "format": "decimal",
            "display": false
          },
          "n_monthly": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Remaining term (months)",
            "unit": "months",
            "format": "integer",
            "display": false
          },
          "scheduled_monthly": {
            "expression": "(r_monthly*P)/(1 - pow(1 + r_monthly, -n_monthly) + 1e-12)",
            "dependencies": [
              "r_monthly",
              "P",
              "n_monthly"
            ],
            "label": "Calculated scheduled monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "A_monthly": {
            "expression": "scheduled_monthly + extra_monthly_amount",
            "dependencies": [
              "scheduled_monthly",
              "extra_monthly_amount"
            ],
            "label": "Total monthly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_months_new": {
            "expression": "-log(1 - r_monthly*P/(A_monthly + 1e-12))/log(1 + r_monthly)",
            "dependencies": [
              "r_monthly",
              "P",
              "A_monthly"
            ],
            "label": "Estimated months to payoff with extra",
            "unit": "months",
            "format": "decimal",
            "display": true
          },
          "total_paid_monthly_extra": {
            "expression": "A_monthly * n_months_new",
            "dependencies": [
              "A_monthly",
              "n_months_new"
            ],
            "label": "Total paid with monthly extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest_monthly_extra": {
            "expression": "total_paid_monthly_extra - P",
            "dependencies": [
              "total_paid_monthly_extra",
              "P"
            ],
            "label": "Total interest with monthly extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "A_monthly",
            "label": "Monthly payment (with extra)",
            "variable": "A_monthly",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_months_new",
            "label": "Months to payoff (with extra)",
            "variable": "n_months_new",
            "unit": "months",
            "format": "decimal"
          },
          {
            "id": "total_interest_monthly_extra",
            "label": "Total interest (with monthly extra)",
            "variable": "total_interest_monthly_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid_monthly_extra",
            "label": "Total paid (with monthly extra)",
            "variable": "total_paid_monthly_extra",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "biweekly_with_extra": {
        "label": "Bi‑weekly schedule (every 2 weeks) with extra per bi‑weekly payment",
        "description": "Simulates paying half the scheduled monthly payment every two weeks plus an optional extra applied to each bi‑weekly payment (26 pay periods per year). This often results in an extra equivalent monthly payment annually.",
        "variables": {
          "P": {
            "expression": "loan_balance",
            "dependencies": [
              "loan_balance"
            ],
            "label": "Outstanding principal",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "r_bi": {
            "expression": "annual_interest_rate/100/26",
            "dependencies": [
              "annual_interest_rate"
            ],
            "label": "Bi‑weekly interest rate (decimal)",
            "format": "decimal",
            "display": false
          },
          "scheduled_monthly": {
            "expression": "( (annual_interest_rate/100/12) * P )/(1 - pow(1 + annual_interest_rate/100/12, -term_years*12) + 1e-12)",
            "dependencies": [
              "annual_interest_rate",
              "P",
              "term_years"
            ],
            "label": "Scheduled monthly payment (derived)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "scheduled_bi": {
            "expression": "scheduled_monthly/2",
            "dependencies": [
              "scheduled_monthly"
            ],
            "label": "Scheduled bi‑weekly payment (half of monthly)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "A_bi": {
            "expression": "scheduled_bi + extra_biweekly_amount",
            "dependencies": [
              "scheduled_bi",
              "extra_biweekly_amount"
            ],
            "label": "Total bi‑weekly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_bi_new": {
            "expression": "-log(1 - r_bi*P/(A_bi + 1e-12))/log(1 + r_bi)",
            "dependencies": [
              "r_bi",
              "P",
              "A_bi"
            ],
            "label": "Estimated bi‑weekly periods to payoff",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "years_to_payoff_bi": {
            "expression": "n_bi_new/26",
            "dependencies": [
              "n_bi_new"
            ],
            "label": "Estimated years to payoff (bi‑weekly)",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid_bi": {
            "expression": "A_bi * n_bi_new",
            "dependencies": [
              "A_bi",
              "n_bi_new"
            ],
            "label": "Total paid (bi‑weekly plan)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest_bi": {
            "expression": "total_paid_bi - P",
            "dependencies": [
              "total_paid_bi",
              "P"
            ],
            "label": "Total interest (bi‑weekly plan)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_bi",
            "label": "Scheduled bi‑weekly payment (base)",
            "variable": "scheduled_bi",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "A_bi",
            "label": "Bi‑weekly payment (with extra)",
            "variable": "A_bi",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_bi_new",
            "label": "Bi‑weekly periods to payoff",
            "variable": "n_bi_new",
            "unit": "periods",
            "format": "decimal"
          },
          {
            "id": "years_to_payoff_bi",
            "label": "Years to payoff (bi‑weekly)",
            "variable": "years_to_payoff_bi",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest_bi",
            "label": "Total interest (bi‑weekly)",
            "variable": "total_interest_bi",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid_bi",
            "label": "Total paid (bi‑weekly)",
            "variable": "total_paid_bi",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
