    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate. The nominal yearly interest rate for the loan before dividing into periodic rates."
      },
      {
        "term": "Periodic rate",
        "definition": "Interest rate applied each payment period. For monthly use APR/12; for bi‑weekly use APR/26."
      },
      {
        "term": "Amortization",
        "definition": "The process of paying down a loan over time through scheduled payments that cover interest and principal."
      },
      {
        "term": "Numerical epsilon",
        "definition": "A very small number added to denominators to prevent divide‑by‑zero and improve numerical stability in edge cases."
      }
    ],
    "summary": [
      "Compare baseline monthly amortization, monthly extra payments, and bi‑weekly payment strategies to see projected payoff times and total interest.",
      "This simulator provides estimates. Confirm exact balances, payoff statements, and payment posting rules with your loan servicer before acting."
    ]
