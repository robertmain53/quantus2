            ],
            "label": "Total interest paid with recurring extra (bi‑weekly)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "scheduled_total_interest - total_interest_with_extra",
            "dependencies": [
              "scheduled_total_interest",
              "total_interest_with_extra"
            ],
            "label": "Interest saved vs original bi‑weekly schedule",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "periods_saved": {
            "expression": "n_periods - n_new",
            "dependencies": [
              "n_periods",
              "n_new"
            ],
            "label": "Number of bi‑weekly payments saved",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled bi‑weekly payment",
            "variable": "scheduled_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Payment with extra (bi‑weekly)",
            "variable": "payment_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_years",
            "label": "Estimated payoff (years)",
            "variable": "payoff_years",
            "format": "decimal"
          },
          {
            "id": "total_interest_with_extra",
            "label": "Total interest with extra",
            "variable": "total_interest_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "interest_saved",
            "label": "Interest saved",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "periods_saved",
            "label": "Payments saved (bi‑weekly)",
            "variable": "periods_saved",
            "format": "decimal"
          }
        ]
      },
      "biweekly_halfmonthly": {
        "label": "Bi‑Weekly (monthly/2 shortcut — 26 payments formed from monthly/2)",
        "description": "Estimate based on splitting the standard monthly payment in half and applying it bi‑weekly (common shortcut). This produces 26 payments/year (equivalent to 13 full monthly payments/year), which accelerates payoff compared with monthly schedule. Uses monthly scheduled payment / 2 as the bi‑weekly scheduled amount.",
        "variables": {
          "monthly_r": {
            "expression": "annual_rate_percent/100/12",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Monthly periodic rate",
            "format": "decimal",
            "display": false
          },
          "monthly_n": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Monthly period count",
            "format": "integer",
            "display": false
          },
          "monthly_scheduled": {
            "expression": "principal * monthly_r / (1 - pow(1 + monthly_r, -monthly_n))",
            "dependencies": [
              "principal",
              "monthly_r",
              "monthly_n"
            ],
            "label": "Scheduled monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "scheduled_payment": {
            "expression": "monthly_scheduled / 2",
            "dependencies": [
              "monthly_scheduled"
            ],
            "label": "Bi‑weekly payment (monthly/2 shortcut)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "r_period": {
            "expression": "annual_rate_percent/100/26",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Bi‑weekly periodic rate",
            "format": "decimal",
            "display": false
          },
          "n_periods": {
            "expression": "term_years*26",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of bi‑weekly periods",
            "format": "integer",
            "display": false
          },
          "principal_effective": {
            "expression": "principal - one_time_amount",
            "dependencies": [
              "principal",
              "one_time_amount"
            ],
            "label": "Principal after immediate one‑time reduction",
            "format": "currency",
            "display": false
          },
          "payment_with_extra": {
            "expression": "scheduled_payment + extra_per_payment",
            "dependencies": [
