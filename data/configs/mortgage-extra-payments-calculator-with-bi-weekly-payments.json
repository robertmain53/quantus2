    ],
    "glossary": [
      {
        "term": "Amortization",
        "definition": "Allocation of loan payments over time between interest and principal according to a schedule."
      },
      {
        "term": "Periodic rate",
        "definition": "Interest rate per payment period, calculated as APR divided by periods per year."
      },
      {
        "term": "True bi‑weekly",
        "definition": "A payment schedule with 26 equal payments per year (every two weeks)."
      },
      {
        "term": "Monthly/2 shortcut",
        "definition": "A common approach where the monthly scheduled payment is split in half and paid every two weeks, resulting in 26 payments/year and 13 monthly payments equivalent."
      },
      {
        "term": "One‑time reduction",
        "definition": "A single additional principal payment applied immediately to reduce outstanding principal."
      }
    ],
    "summary": [
      "Choose the payment frequency scenario to compare how recurring extras or a one‑time principal payment reduce interest and shorten the loan.",
      "Numbers are estimates based on standard amortization formulas. Verify final payoff figures with your lender."
    ]
  },
