{
  "version": "1.0.0",
  "metadata": {
    "title": "Mortgage Extra Payments Calculator — Bi‑Weekly & Monthly Scenarios",
    "description": "Interactive mortgage payoff modeller that compares standard monthly amortization, true bi‑weekly schedules (26 payments/year) and the common half‑monthly/bi‑weekly shortcut. Calculates payoff time, total interest, interest saved and periods saved when adding recurring extra payments or a one‑time principal reduction."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_true",
    "methods": {
      "monthly_standard": {
        "label": "Monthly (standard amortization)",
        "description": "Standard monthly amortization using a periodic monthly interest rate and optional recurring extra payment applied to each monthly payment. A one‑time principal reduction (applied at t=0) is included as an immediate principal reduction.",
        "variables": {
          "r_period": {
            "expression": "annual_rate_percent/100/12",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Monthly periodic rate",
            "format": "decimal",
            "display": false
          },
          "n_periods": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of monthly periods",
            "format": "integer",
            "display": false
          },
          "principal_effective": {
            "expression": "principal - one_time_amount",
            "dependencies": [
              "principal",
              "one_time_amount"
            ],
            "label": "Principal after immediate one‑time reduction",
            "format": "currency",
            "display": false
          },
          "scheduled_payment": {
            "expression": "principal * r_period / (1 - pow(1 + r_period, -n_periods))",
            "dependencies": [
              "principal",
              "r_period",
              "n_periods"
            ],
            "label": "Scheduled monthly payment (no extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "scheduled_payment + extra_per_payment",
            "dependencies": [
              "scheduled_payment",
              "extra_per_payment"
            ],
            "label": "Monthly payment with recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_new": {
            "expression": "-ln(1 - principal_effective * r_period / payment_with_extra) / ln(1 + r_period)",
            "dependencies": [
              "principal_effective",
              "r_period",
              "payment_with_extra"
            ],
            "label": "Estimated number of months to payoff with extra",
            "format": "decimal",
            "display": false
          },
          "payoff_years": {
            "expression": "n_new / 12",
            "dependencies": [
              "n_new"
            ],
            "label": "Estimated years to payoff with extra",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "scheduled_total_interest": {
            "expression": "scheduled_payment * n_periods - principal",
            "dependencies": [
              "scheduled_payment",
              "n_periods",
              "principal"
            ],
            "label": "Total interest if paid on original schedule",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_interest_with_extra": {
            "expression": "payment_with_extra * n_new - principal_effective",
            "dependencies": [
              "payment_with_extra",
              "n_new",
              "principal_effective"
            ],
            "label": "Total interest paid with recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "scheduled_total_interest - total_interest_with_extra",
            "dependencies": [
              "scheduled_total_interest",
              "total_interest_with_extra"
            ],
            "label": "Interest saved vs original schedule",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "periods_saved": {
            "expression": "n_periods - n_new",
            "dependencies": [
              "n_periods",
              "n_new"
            ],
            "label": "Number of monthly payments saved",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled monthly payment",
            "variable": "scheduled_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Payment with extra (monthly)",
            "variable": "payment_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_years",
            "label": "Estimated payoff (years)",
            "variable": "payoff_years",
            "format": "decimal"
          },
          {
            "id": "total_interest_with_extra",
            "label": "Total interest with extra",
            "variable": "total_interest_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "interest_saved",
            "label": "Interest saved",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "periods_saved",
            "label": "Payments saved",
            "variable": "periods_saved",
            "format": "decimal"
          }
        ]
      },
      "biweekly_true": {
        "label": "True Bi‑Weekly (26 payments / year)",
