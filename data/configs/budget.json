    ],
    "glossary": [
      {
        "term": "Gross monthly income",
        "definition": "Total income before taxes and deductions, converted to a monthly figure. If you prefer to plan on net income, enter take‑home pay instead."
      },
      {
        "term": "Needs",
        "definition": "Essential recurring costs such as housing, utilities, food, transport, insurance, and required debt payments."
      },
      {
        "term": "Wants",
        "definition": "Non‑essential or discretionary spending such as dining out, entertainment, subscriptions, and optional purchases."
      },
      {
        "term": "Zero‑based budgeting",
        "definition": "A method where every dollar of income is assigned a purpose. Unallocated dollars indicate surplus or shortfall."
      },
      {
        "term": "Allocation gap",
        "definition": "The difference between a recommended allocation and what you currently spend or save in that category. Positive gap means you are over the recommendation (or under for savings shortfall)."
      }
    ]
  },
