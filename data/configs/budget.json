{
  "version": "1.0.0",
  "metadata": {
    "title": "Budget Calculator (Multi‑Method)",
    "description": "Monthly budget planner supporting actual-budget totals, 50/30/20 allocations, zero‑based budgeting, and custom percentage allocations. Enter monthly income and your recurring category amounts to compare current spending against recommended allocations and identify surpluses or shortfalls."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "rule_50_30_20",
    "methods": {
      "baseline": {
        "label": "Actual budget (monthly totals)",
        "description": "Totals your entered monthly expenses and computes surplus or shortfall relative to monthly income.",
        "variables": {
          "total_expenses": {
            "expression": "housing+utilities+food+transportation+debt_payments+insurance+healthcare+childcare+education+savings_contributions+entertainment+other_expenses",
            "dependencies": [
              "housing",
              "utilities",
              "food",
              "transportation",
              "debt_payments",
              "insurance",
              "healthcare",
              "childcare",
              "education",
              "savings_contributions",
              "entertainment",
              "other_expenses"
            ],
            "label": "Total monthly expenses",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "surplus": {
            "expression": "gross_monthly_income - total_expenses",
            "dependencies": [
              "gross_monthly_income",
              "total_expenses"
            ],
            "label": "Monthly surplus (income minus expenses)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "surplus_pct": {
            "expression": "surplus / gross_monthly_income * 100",
            "dependencies": [
              "surplus",
              "gross_monthly_income"
            ],
            "label": "Surplus as percent of income",
            "unit": "%",
            "format": "percent",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_total_expenses",
            "label": "Total monthly expenses",
            "variable": "total_expenses",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "monthly_surplus",
            "label": "Monthly surplus / (shortfall)",
            "variable": "surplus",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "surplus_percent",
            "label": "Surplus (% of income)",
            "variable": "surplus_pct",
            "unit": "%",
            "format": "percent"
          }
        ]
      },
      "rule_50_30_20": {
        "label": "50/30/20 rule (Needs / Wants / Savings)",
        "description": "Allocates 50% of income to needs, 30% to wants, and 20% to savings/debt reduction. Compares each allocation to your entered categories to show gaps.",
        "variables": {
          "needs_alloc": {
            "expression": "gross_monthly_income * 0.5",
            "dependencies": [
              "gross_monthly_income"
            ],
            "label": "Recommended for needs (50%)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "wants_alloc": {
            "expression": "gross_monthly_income * 0.3",
            "dependencies": [
              "gross_monthly_income"
            ],
            "label": "Recommended for wants (30%)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "savings_alloc": {
            "expression": "gross_monthly_income * 0.2",
            "dependencies": [
              "gross_monthly_income"
            ],
            "label": "Recommended for savings/debt (20%)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "actual_needs": {
            "expression": "housing+utilities+food+transportation+debt_payments+insurance+healthcare+childcare+education",
            "dependencies": [
              "housing",
              "utilities",
              "food",
              "transportation",
              "debt_payments",
              "insurance",
              "healthcare",
              "childcare",
              "education"
            ],
            "label": "Your entered needs categories",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "actual_wants": {
            "expression": "entertainment+other_expenses",
            "dependencies": [
              "entertainment",
              "other_expenses"
            ],
            "label": "Your entered wants categories",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "actual_savings": {
            "expression": "savings_contributions",
            "dependencies": [
              "savings_contributions"
            ],
            "label": "Your entered savings / dedicated debt payments",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "needs_gap": {
            "expression": "actual_needs - needs_alloc",
            "dependencies": [
              "actual_needs",
              "needs_alloc"
            ],
            "label": "Needs gap (positive = over target)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "wants_gap": {
            "expression": "actual_wants - wants_alloc",
            "dependencies": [
              "actual_wants",
              "wants_alloc"
            ],
            "label": "Wants gap (positive = over target)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "savings_gap": {
            "expression": "savings_alloc - actual_savings",
            "dependencies": [
              "savings_alloc",
              "actual_savings"
            ],
            "label": "Savings shortfall (positive = below target)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "needs_recommended",
            "label": "Needs recommended (50%)",
            "variable": "needs_alloc",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "wants_recommended",
            "label": "Wants recommended (30%)",
            "variable": "wants_alloc",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "savings_recommended",
            "label": "Savings recommended (20%)",
            "variable": "savings_alloc",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "actual_needs",
            "label": "Actual needs (entered)",
            "variable": "actual_needs",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "actual_wants",
            "label": "Actual wants (entered)",
            "variable": "actual_wants",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "actual_savings",
            "label": "Actual savings (entered)",
            "variable": "actual_savings",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "needs_gap",
            "label": "Needs gap",
            "variable": "needs_gap",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "wants_gap",
            "label": "Wants gap",
            "variable": "wants_gap",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "savings_gap",
            "label": "Savings shortfall",
            "variable": "savings_gap",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "custom_allocation": {
        "label": "Custom allocation (percentages you set)",
        "description": "Use custom percentage targets for needs, wants, and savings. Percentages are applied to monthly income.",
        "variables": {
          "custom_needs_alloc": {
            "expression": "gross_monthly_income * custom_needs_pct / 100",
            "dependencies": [
              "gross_monthly_income",
              "custom_needs_pct"
            ],
            "label": "Custom needs allocation",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "custom_wants_alloc": {
            "expression": "gross_monthly_income * custom_wants_pct / 100",
            "dependencies": [
              "gross_monthly_income",
              "custom_wants_pct"
            ],
            "label": "Custom wants allocation",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "custom_savings_alloc": {
            "expression": "gross_monthly_income * custom_savings_pct / 100",
            "dependencies": [
              "gross_monthly_income",
              "custom_savings_pct"
            ],
            "label": "Custom savings allocation",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "actual_needs": {
            "expression": "housing+utilities+food+transportation+debt_payments+insurance+healthcare+childcare+education",
            "dependencies": [
              "housing",
              "utilities",
              "food",
              "transportation",
              "debt_payments",
              "insurance",
              "healthcare",
              "childcare",
              "education"
            ],
            "label": "Your entered needs categories",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "actual_wants": {
            "expression": "entertainment+other_expenses",
            "dependencies": [
              "entertainment",
              "other_expenses"
            ],
            "label": "Your entered wants categories",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "actual_savings": {
            "expression": "savings_contributions",
            "dependencies": [
              "savings_contributions"
            ],
            "label": "Your entered savings",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "needs_gap": {
            "expression": "actual_needs - custom_needs_alloc",
            "dependencies": [
              "actual_needs",
              "custom_needs_alloc"
            ],
            "label": "Needs gap (positive = over target)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "wants_gap": {
            "expression": "actual_wants - custom_wants_alloc",
            "dependencies": [
              "actual_wants",
              "custom_wants_alloc"
            ],
            "label": "Wants gap (positive = over target)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "savings_gap": {
            "expression": "custom_savings_alloc - actual_savings",
            "dependencies": [
              "custom_savings_alloc",
              "actual_savings"
            ],
            "label": "Savings shortfall (positive = below target)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "custom_needs_alloc",
            "label": "Custom needs allocation",
            "variable": "custom_needs_alloc",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "custom_wants_alloc",
            "label": "Custom wants allocation",
            "variable": "custom_wants_alloc",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "custom_savings_alloc",
            "label": "Custom savings allocation",
            "variable": "custom_savings_alloc",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "custom_needs_gap",
            "label": "Needs gap",
            "variable": "needs_gap",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "custom_wants_gap",
            "label": "Wants gap",
            "variable": "wants_gap",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "custom_savings_gap",
            "label": "Savings shortfall",
            "variable": "savings_gap",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "zero_based": {
        "label": "Zero‑based budgeting",
        "description": "Assign every dollar of income to categories; shows unallocated amount which should be assigned to a category (savings, debt, or other).",
        "variables": {
          "total_expenses": {
            "expression": "housing+utilities+food+transportation+debt_payments+insurance+healthcare+childcare+education+savings_contributions+entertainment+other_expenses",
            "dependencies": [
              "housing",
              "utilities",
              "food",
              "transportation",
              "debt_payments",
              "insurance",
              "healthcare",
              "childcare",
              "education",
              "savings_contributions",
              "entertainment",
              "other_expenses"
            ],
            "label": "Total assigned monthly dollars",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "unallocated": {
            "expression": "gross_monthly_income - total_expenses",
            "dependencies": [
              "gross_monthly_income",
              "total_expenses"
            ],
            "label": "Unallocated (positive = surplus available to assign; negative = shortfall)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "zb_total_assigned",
            "label": "Total assigned to categories",
            "variable": "total_expenses",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "zb_unallocated",
            "label": "Unallocated dollars (assign these)",
            "variable": "unallocated",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
