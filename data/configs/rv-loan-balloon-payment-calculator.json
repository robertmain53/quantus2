    ],
    "glossary": [
      {
        "term": "Balloon payment",
        "definition": "A lump-sum payment due at the end of a loan term that covers remaining principal not amortized by regular payments."
      },
      {
        "term": "Periodic rate",
        "definition": "The interest rate applied each payment period, computed as nominal annual rate divided by payments per year."
      },
      {
        "term": "Present value of balloon",
        "definition": "The amount that the future balloon payment is worth today, discounted by the periodic rate over the remaining number of periods."
      },
      {
        "term": "Annuity formula",
        "definition": "The mathematical formula used to compute a constant periodic payment that repays a loan when combined with a future lump-sum (balloon) repayment."
      }
    ]
  },
