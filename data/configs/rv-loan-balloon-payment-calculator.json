{
  "version": "1.0.0",
  "metadata": {
    "title": "RV Loan Balloon Payment Calculator (bi-weekly & monthly)",
    "description": "Calculate regular payments and balloon amounts for RV loans with support for bi-weekly or monthly payment frequencies. Includes calculators for payment given a balloon, required balloon for a target payment, and a side-by-side bi-weekly vs monthly comparison."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "standard_balloon",
    "methods": {
      "standard_balloon": {
        "label": "Regular payment with balloon at end",
        "description": "Compute the recurring payment amount when a final balloon payment is due at loan maturity. Supports bi-weekly (26) or monthly (12) schedules and accepts either an absolute balloon or a balloon expressed as a percentage of the loan.",
        "variables": {
          "periodic_rate": {
            "expression": "annual_rate_percent/100/payments_per_year",
            "dependencies": [
              "annual_rate_percent",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "format": "percent",
            "display": true
          },
          "n_periods": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Number of payments",
            "format": "integer",
            "display": true
          },
          "balloon": {
            "expression": "(balloon_percentage>0) ? loan_amount * balloon_percentage / 100 : balloon_amount",
            "dependencies": [
              "balloon_percentage",
              "balloon_amount",
              "loan_amount"
            ],
            "label": "Balloon due at end",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "pv_balloon": {
            "expression": "balloon / (1 + periodic_rate) ** n_periods",
            "dependencies": [
              "balloon",
              "periodic_rate",
              "n_periods"
            ],
            "label": "Present value of balloon",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "payment": {
            "expression": "(periodic_rate==0) ? (loan_amount - pv_balloon) / n_periods : ((loan_amount - pv_balloon) * periodic_rate) / (1 - (1 + periodic_rate) ** (-n_periods))",
            "dependencies": [
              "loan_amount",
              "pv_balloon",
              "periodic_rate",
              "n_periods"
            ],
            "label": "Regular payment (per period)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_payments_amount": {
            "expression": "payment * n_periods + balloon",
            "dependencies": [
              "payment",
              "n_periods",
              "balloon"
            ],
            "label": "Total amount paid (payments + balloon)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_interest": {
            "expression": "total_payments_amount - loan_amount",
            "dependencies": [
              "total_payments_amount",
              "loan_amount"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "regular_payment",
            "label": "Regular payment (per period)",
            "variable": "payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "balloon_due",
            "label": "Balloon due at end",
            "variable": "balloon",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "number_of_payments",
            "label": "Number of payments",
            "variable": "n_periods",
            "format": "integer"
          },
          {
            "id": "periodic_rate_percent",
            "label": "Periodic interest rate",
            "variable": "periodic_rate",
            "format": "percent"
          },
          {
            "id": "total_paid",
            "label": "Total paid (payments + balloon)",
            "variable": "total_payments_amount",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "balloon_from_payment": {
        "label": "Required balloon for a target payment",
        "description": "Determine the balloon amount required at loan maturity if you can only afford a given recurring payment amount.",
        "variables": {
          "periodic_rate": {
            "expression": "annual_rate_percent/100/payments_per_year",
            "dependencies": [
              "annual_rate_percent",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "format": "percent",
            "display": false
          },
          "n_periods": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Number of payments",
            "format": "integer",
            "display": false
          },
          "annuity_pv_factor": {
            "expression": "(periodic_rate==0) ? n_periods : (1 - (1 + periodic_rate) ** (-n_periods)) / periodic_rate",
            "dependencies": [
              "periodic_rate",
              "n_periods"
            ],
            "label": "Present value factor for annuity",
            "format": "decimal",
            "display": false
          },
          "pv_of_annuity": {
            "expression": "desired_payment * annuity_pv_factor",
            "dependencies": [
              "desired_payment",
              "annuity_pv_factor"
            ],
            "label": "Present value of scheduled payments",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "pv_balloon_required": {
            "expression": "loan_amount - pv_of_annuity",
            "dependencies": [
              "loan_amount",
              "pv_of_annuity"
            ],
            "label": "Present value required for balloon",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "balloon_required": {
            "expression": "pv_balloon_required * (1 + periodic_rate) ** n_periods",
            "dependencies": [
              "pv_balloon_required",
              "periodic_rate",
              "n_periods"
            ],
            "label": "Balloon required at end",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "balloon_required",
            "label": "Balloon required at end",
            "variable": "balloon_required",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "implied_payment",
            "label": "Target recurring payment",
            "variable": "desired_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "number_of_payments",
            "label": "Number of payments",
            "variable": "n_periods",
            "format": "integer"
          }
        ]
      },
      "compare_biweekly_vs_monthly": {
        "label": "Compare bi-weekly vs monthly",
        "description": "Show equivalent payment and total cost differences between monthly and bi-weekly schedules for the same loan and balloon assumptions.",
        "variables": {
          "balloon": {
            "expression": "(balloon_percentage>0) ? loan_amount * balloon_percentage / 100 : balloon_amount",
            "dependencies": [
              "balloon_percentage",
              "balloon_amount",
              "loan_amount"
            ],
            "label": "Balloon due at end",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "periodic_rate_monthly": {
            "expression": "annual_rate_percent/100/12",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Monthly rate",
            "format": "percent",
            "display": false
          },
          "n_monthly": {
            "expression": "term_years * 12",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of monthly payments",
            "format": "integer",
            "display": false
          },
          "pv_balloon_monthly": {
            "expression": "balloon / (1 + periodic_rate_monthly) ** n_monthly",
            "dependencies": [
              "balloon",
              "periodic_rate_monthly",
              "n_monthly"
            ],
            "label": "PV of balloon (monthly)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "monthly_payment": {
            "expression": "(periodic_rate_monthly==0) ? (loan_amount - pv_balloon_monthly) / n_monthly : ((loan_amount - pv_balloon_monthly) * periodic_rate_monthly) / (1 - (1 + periodic_rate_monthly) ** (-n_monthly))",
            "dependencies": [
              "loan_amount",
              "pv_balloon_monthly",
              "periodic_rate_monthly",
              "n_monthly"
            ],
            "label": "Monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "periodic_rate_biweekly": {
            "expression": "annual_rate_percent/100/26",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Bi-weekly rate",
            "format": "percent",
            "display": false
          },
          "n_biweekly": {
            "expression": "term_years * 26",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of bi-weekly payments",
            "format": "integer",
            "display": false
          },
          "pv_balloon_biweekly": {
            "expression": "balloon / (1 + periodic_rate_biweekly) ** n_biweekly",
            "dependencies": [
              "balloon",
              "periodic_rate_biweekly",
              "n_biweekly"
            ],
            "label": "PV of balloon (bi-weekly)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "biweekly_payment": {
            "expression": "(periodic_rate_biweekly==0) ? (loan_amount - pv_balloon_biweekly) / n_biweekly : ((loan_amount - pv_balloon_biweekly) * periodic_rate_biweekly) / (1 - (1 + periodic_rate_biweekly) ** (-n_biweekly))",
            "dependencies": [
              "loan_amount",
              "pv_balloon_biweekly",
              "periodic_rate_biweekly",
              "n_biweekly"
            ],
            "label": "Bi-weekly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_cost_monthly": {
            "expression": "monthly_payment * n_monthly + balloon",
            "dependencies": [
              "monthly_payment",
              "n_monthly",
              "balloon"
            ],
            "label": "Total cost (monthly schedule)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_cost_biweekly": {
            "expression": "biweekly_payment * n_biweekly + balloon",
            "dependencies": [
              "biweekly_payment",
              "n_biweekly",
              "balloon"
            ],
            "label": "Total cost (bi-weekly schedule)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_payment",
            "label": "Monthly payment",
            "variable": "monthly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "biweekly_payment",
            "label": "Bi-weekly payment",
            "variable": "biweekly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_cost_monthly",
            "label": "Total cost (monthly schedule)",
            "variable": "total_cost_monthly",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_cost_biweekly",
            "label": "Total cost (bi-weekly schedule)",
            "variable": "total_cost_biweekly",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
  "form": {
