{
  "version": "1.0.0",
  "metadata": {
    "title": "Dividend Growth Calculator (multi-scenario, reinvest vs payout)",
    "description": "Project future dividend income, total dividends received, and estimated portfolio value under multiple scenarios. Supports fixed-growth with optional reinvestment (DRIP) and three-point scenario comparison. Includes tax adjustment and annual contributions. Provides clear assumptions, calibration limits, and standards-based accuracy caveats."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "fixed_growth_reinvest",
    "methods": {
      "fixed_growth_no_reinvest": {
        "label": "Fixed dividend growth — Payout (no reinvestment)",
        "description": "Assumes dividends are paid out each year (not reinvested). Dividend per share grows at a constant annual rate.",
        "variables": {
          "g": {
            "expression": "dividend_growth_percent / 100",
            "dependencies": [
              "dividend_growth_percent"
            ],
            "label": "Dividend growth rate (decimal)",
            "format": "decimal",
            "display": false
          },
          "D0": {
            "expression": "shares_owned * starting_dividend_per_share",
            "dependencies": [
              "shares_owned",
              "starting_dividend_per_share"
            ],
            "label": "Starting annual dividend (total)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "future_annual_dividend": {
            "expression": "D0 * pow(1 + g, years)",
            "dependencies": [
              "D0",
              "g",
              "years"
            ],
            "label": "Projected annual dividend after period",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_dividends_received": {
            "expression": "g == 0 ? D0 * years : D0 * (pow(1 + g, years) - 1) / g",
            "dependencies": [
              "g",
              "D0",
              "years"
            ],
            "label": "Sum of dividends paid over period",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "after_tax_total_dividends": {
            "expression": "total_dividends_received * (1 - tax_rate_percent / 100)",
            "dependencies": [
              "total_dividends_received",
              "tax_rate_percent"
            ],
            "label": "Total dividends after tax",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "future_annual_dividend",
            "label": "Projected annual dividend (end of term)",
            "variable": "future_annual_dividend",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_dividends_received",
            "label": "Total dividends paid (gross)",
            "variable": "total_dividends_received",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "after_tax_total_dividends",
            "label": "Total dividends received (after tax)",
            "variable": "after_tax_total_dividends",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "fixed_growth_reinvest": {
        "label": "Fixed dividend growth — Reinvest (DRIP approximation)",
        "description": "Assumes dividends are reinvested immediately to buy additional shares at the provided share price. Dividend per share grows at the indicated annual rate. Annual contributions (if any) are invested at the same share price each year for simplicity.",
        "variables": {
          "g": {
            "expression": "dividend_growth_percent / 100",
            "dependencies": [
              "dividend_growth_percent"
            ],
            "label": "Dividend growth rate (decimal)",
            "format": "decimal",
            "display": false
          },
          "D0": {
            "expression": "shares_owned * starting_dividend_per_share",
            "dependencies": [
              "shares_owned",
              "starting_dividend_per_share"
            ],
            "label": "Starting annual dividend (total)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_dividends_received": {
            "expression": "g == 0 ? D0 * years : D0 * (pow(1 + g, years) - 1) / g",
            "dependencies": [
              "g",
              "D0",
              "years"
            ],
            "label": "Sum of dividends generated (gross) over period",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "reinvested_shares_from_dividends": {
            "expression": "g == 0 ? (D0 / share_price) * years : (D0 / share_price) * (pow(1 + g, years) - 1) / g",
            "dependencies": [
              "D0",
              "share_price",
              "g",
              "years"
            ],
            "label": "Estimated shares purchased by reinvesting dividends",
            "format": "decimal",
            "display": true
          },
          "shares_from_contributions": {
            "expression": "(annual_contribution / share_price) * years",
            "dependencies": [
              "annual_contribution",
              "share_price",
              "years"
            ],
            "label": "Shares purchased from annual contributions (approx.)",
            "format": "decimal",
            "display": false
          },
          "total_shares": {
            "expression": "shares_owned + reinvested_shares_from_dividends + shares_from_contributions",
            "dependencies": [
              "shares_owned",
              "reinvested_shares_from_dividends",
              "shares_from_contributions"
            ],
            "label": "Estimated total shares at end of period",
            "format": "decimal",
            "display": true
          },
          "future_annual_dividend": {
            "expression": "total_shares * starting_dividend_per_share * pow(1 + g, years)",
            "dependencies": [
              "total_shares",
              "starting_dividend_per_share",
              "g",
              "years"
            ],
            "label": "Projected annual dividend after reinvestment (approx.)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "estimated_portfolio_value": {
            "expression": "total_shares * share_price",
            "dependencies": [
              "total_shares",
              "share_price"
            ],
            "label": "Estimated portfolio value (shares × current share price, no price growth)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "after_tax_total_dividends": {
            "expression": "total_dividends_received * (1 - tax_rate_percent / 100)",
            "dependencies": [
              "total_dividends_received",
              "tax_rate_percent"
            ],
            "label": "Total dividends generated (after tax)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "future_annual_dividend",
            "label": "Projected annual dividend (end of term, reinvested)",
            "variable": "future_annual_dividend",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_shares",
            "label": "Estimated total shares",
            "variable": "total_shares",
            "format": "decimal"
          },
          {
            "id": "estimated_portfolio_value",
            "label": "Estimated portfolio value (no price appreciation)",
            "variable": "estimated_portfolio_value",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "after_tax_total_dividends",
            "label": "Total dividends generated (after tax)",
            "variable": "after_tax_total_dividends",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "scenario_comparison": {
        "label": "Three-point scenario comparison (conservative / base / aggressive)",
        "description": "Compare projected annual dividend and total dividends across three user-specified growth rates. Uses the same formulas as the fixed-growth payout method for clarity.",
        "variables": {
          "g_cons": {
            "expression": "growth_conservative_percent / 100",
            "dependencies": [
              "growth_conservative_percent"
            ],
            "label": "Conservative growth (decimal)",
            "format": "decimal",
            "display": false
          },
          "g_base": {
            "expression": "growth_base_percent / 100",
            "dependencies": [
              "growth_base_percent"
            ],
            "label": "Base growth (decimal)",
            "format": "decimal",
            "display": false
          },
          "g_agg": {
            "expression": "growth_aggressive_percent / 100",
            "dependencies": [
              "growth_aggressive_percent"
            ],
            "label": "Aggressive growth (decimal)",
            "format": "decimal",
            "display": false
          },
          "D0": {
            "expression": "shares_owned * starting_dividend_per_share",
            "dependencies": [
              "shares_owned",
              "starting_dividend_per_share"
            ],
            "label": "Starting annual dividend (total)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "future_annual_dividend_conservative": {
            "expression": "D0 * pow(1 + g_cons, years)",
            "dependencies": [
              "D0",
              "g_cons",
              "years"
            ],
            "label": "Projected annual dividend (conservative)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_dividends_conservative": {
            "expression": "g_cons == 0 ? D0 * years : D0 * (pow(1 + g_cons, years) - 1) / g_cons",
            "dependencies": [
              "g_cons",
              "D0",
              "years"
            ],
            "label": "Total dividends (conservative, gross)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "future_annual_dividend_base": {
            "expression": "D0 * pow(1 + g_base, years)",
            "dependencies": [
              "D0",
              "g_base",
              "years"
            ],
            "label": "Projected annual dividend (base)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_dividends_base": {
            "expression": "g_base == 0 ? D0 * years : D0 * (pow(1 + g_base, years) - 1) / g_base",
            "dependencies": [
              "g_base",
              "D0",
              "years"
            ],
            "label": "Total dividends (base, gross)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "future_annual_dividend_aggressive": {
            "expression": "D0 * pow(1 + g_agg, years)",
            "dependencies": [
              "D0",
              "g_agg",
              "years"
            ],
            "label": "Projected annual dividend (aggressive)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_dividends_aggressive": {
            "expression": "g_agg == 0 ? D0 * years : D0 * (pow(1 + g_agg, years) - 1) / g_agg",
            "dependencies": [
              "g_agg",
              "D0",
              "years"
            ],
            "label": "Total dividends (aggressive, gross)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "future_annual_dividend_conservative",
            "label": "Projected annual dividend — conservative",
            "variable": "future_annual_dividend_conservative",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_dividends_conservative",
            "label": "Total dividends — conservative (gross)",
            "variable": "total_dividends_conservative",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "future_annual_dividend_base",
            "label": "Projected annual dividend — base",
            "variable": "future_annual_dividend_base",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_dividends_base",
            "label": "Total dividends — base (gross)",
            "variable": "total_dividends_base",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "future_annual_dividend_aggressive",
            "label": "Projected annual dividend — aggressive",
            "variable": "future_annual_dividend_aggressive",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_dividends_aggressive",
            "label": "Total dividends — aggressive (gross)",
            "variable": "total_dividends_aggressive",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
