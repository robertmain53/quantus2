{
  "version": "1.0.0",
  "metadata": {
    "title": "Boat Loan Extra Payments Calculator (Monthly & Biweekly)",
    "description": "Calculate standard and extra-payment amortization scenarios for boat loans. Supports standard monthly schedules, recurring monthly extras, and biweekly pay-down options. Shows payment, payoff time, total interest paid and total amount paid for each scenario."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "monthly_standard",
    "methods": {
      "monthly_standard": {
        "label": "Standard monthly schedule (no extra payments)",
        "description": "Compute the fixed monthly payment and summary totals for a standard amortizing loan with monthly payments and no extra contributions.",
        "variables": {
          "monthly_rate": {
            "expression": "annual_rate_percent / 100 / 12",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Monthly interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": false
          },
          "n_payments": {
            "expression": "term_years * 12",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of monthly payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "payment": {
            "expression": "principal * monthly_rate / (1 - (1 + monthly_rate) ^ (-n_payments))",
            "dependencies": [
              "principal",
              "monthly_rate",
              "n_payments"
            ],
            "label": "Monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "payment * n_payments",
            "dependencies": [
              "payment",
              "n_payments"
            ],
            "label": "Total paid over loan",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_years": {
            "expression": "n_payments / 12",
            "dependencies": [
              "n_payments"
            ],
            "label": "Time to payoff (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment",
            "label": "Monthly payment",
            "variable": "payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid",
            "label": "Total amount paid",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_years",
            "label": "Time to payoff (years)",
            "variable": "payoff_years",
            "format": "decimal"
          },
          {
            "id": "n_payments",
            "label": "Number of payments",
            "variable": "n_payments",
            "format": "integer"
          }
        ]
      },
      "monthly_with_recurring_extra": {
        "label": "Monthly schedule with recurring extra payments",
        "description": "Apply a fixed extra amount each payment to principal and recompute payoff time and totals. Uses standard amortization math solved for number of payments given larger periodic payment.",
        "variables": {
          "monthly_rate": {
            "expression": "annual_rate_percent / 100 / 12",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Monthly interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": false
          },
          "n_nominal": {
            "expression": "term_years * 12",
            "dependencies": [
              "term_years"
            ],
            "label": "Nominal number of payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "base_payment": {
            "expression": "principal * monthly_rate / (1 - (1 + monthly_rate) ^ (-n_nominal))",
            "dependencies": [
              "principal",
              "monthly_rate",
              "n_nominal"
            ],
            "label": "Scheduled monthly payment (no extra)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "extra": {
            "expression": "extra_monthly",
            "dependencies": [
              "extra_monthly"
            ],
            "label": "Recurring extra per payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "payment_total": {
            "expression": "base_payment + extra",
            "dependencies": [
              "base_payment",
              "extra"
            ],
            "label": "Total monthly payment (with extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_to_payoff": {
            "expression": "ceil( log(payment_total / (payment_total - principal * monthly_rate)) / log(1 + monthly_rate) )",
            "dependencies": [
              "payment_total",
              "principal",
              "monthly_rate"
            ],
            "label": "Payments until payoff",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "total_paid": {
            "expression": "payment_total * n_to_payoff",
            "dependencies": [
              "payment_total",
              "n_to_payoff"
            ],
            "label": "Total paid with extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid with extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_years": {
            "expression": "n_to_payoff / 12",
            "dependencies": [
              "n_to_payoff"
            ],
            "label": "Time to payoff (years) with extra",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment_total",
            "label": "Monthly payment (with extra)",
            "variable": "payment_total",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_to_payoff",
            "label": "Number of payments until payoff",
            "variable": "n_to_payoff",
            "format": "integer"
          },
          {
            "id": "payoff_years",
            "label": "Time to payoff (years)",
            "variable": "payoff_years",
            "format": "decimal"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid",
            "label": "Total amount paid",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "biweekly_with_recurring_extra": {
        "label": "Biweekly schedule with recurring extras (26 payments/year)",
        "description": "Compute equivalent biweekly payments (26 per year). Allows recurring extra per biweekly payment. Biweekly scheduling often accelerates amortization versus monthly scheduling.",
        "variables": {
          "biweekly_rate": {
            "expression": "annual_rate_percent / 100 / 26",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Biweekly interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": false
          },
          "n_biweekly": {
            "expression": "term_years * 26",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of biweekly payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "base_biweekly_payment": {
            "expression": "principal * biweekly_rate / (1 - (1 + biweekly_rate) ^ (-n_biweekly))",
            "dependencies": [
              "principal",
              "biweekly_rate",
              "n_biweekly"
            ],
            "label": "Scheduled biweekly payment (no extra)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "extra_biweekly": {
            "expression": "extra_biweekly",
            "dependencies": [
              "extra_biweekly"
            ],
            "label": "Recurring extra per biweekly payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "payment_total_biweekly": {
            "expression": "base_biweekly_payment + extra_biweekly",
            "dependencies": [
              "base_biweekly_payment",
              "extra_biweekly"
            ],
            "label": "Total biweekly payment (with extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_to_payoff_biweekly": {
            "expression": "ceil( log(payment_total_biweekly / (payment_total_biweekly - principal * biweekly_rate)) / log(1 + biweekly_rate) )",
            "dependencies": [
              "payment_total_biweekly",
              "principal",
              "biweekly_rate"
            ],
            "label": "Biweekly payments until payoff",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "total_paid_biweekly": {
            "expression": "payment_total_biweekly * n_to_payoff_biweekly",
            "dependencies": [
              "payment_total_biweekly",
              "n_to_payoff_biweekly"
            ],
            "label": "Total paid with biweekly extras",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest_biweekly": {
            "expression": "total_paid_biweekly - principal",
            "dependencies": [
              "total_paid_biweekly",
              "principal"
            ],
            "label": "Total interest paid with biweekly plan",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_years_biweekly": {
            "expression": "n_to_payoff_biweekly / 26",
            "dependencies": [
              "n_to_payoff_biweekly"
            ],
            "label": "Time to payoff (years) biweekly",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment_total_biweekly",
            "label": "Biweekly payment (with extra)",
            "variable": "payment_total_biweekly",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_to_payoff_biweekly",
            "label": "Biweekly payments until payoff",
            "variable": "n_to_payoff_biweekly",
            "format": "integer"
          },
          {
            "id": "payoff_years_biweekly",
            "label": "Time to payoff (years)",
            "variable": "payoff_years_biweekly",
            "format": "decimal"
          },
          {
            "id": "total_interest_biweekly",
            "label": "Total interest paid",
            "variable": "total_interest_biweekly",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid_biweekly",
            "label": "Total amount paid",
            "variable": "total_paid_biweekly",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
