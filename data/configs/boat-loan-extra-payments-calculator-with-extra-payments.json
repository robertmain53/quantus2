    "glossary": [
      {
        "term": "Principal",
        "definition": "The original amount borrowed on which interest is calculated."
      },
      {
        "term": "APR",
        "definition": "Annual Percentage Rate; the nominal annual rate charged for borrowing, expressed as a percentage."
      },
      {
        "term": "Periodic rate",
        "definition": "Interest rate applied each payment period (APR divided by number of periods per year)."
      },
      {
        "term": "Amortization",
        "definition": "The process of paying down a loan over time via regular payments that include principal and interest."
      },
      {
        "term": "Recurring extra",
        "definition": "An additional fixed amount paid every period applied to principal to accelerate payoff."
      }
    ]
