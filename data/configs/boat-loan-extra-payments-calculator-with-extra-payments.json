{
  "version": "1.0.0",
  "metadata": {
    "title": "Boat Loan Extra Payments Calculator (multiple extra-payment scenarios)",
    "description": "Compare baseline and several extra-payment strategies for a boat loan. Helps estimate payments, payoff time, total interest, and interest savings for recurring extras, one-time lumps, and annual lumps. Includes clear assumptions, limits, and standard references for calculation accuracy."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "recurring_extra",
    "methods": {
      "baseline": {
        "label": "Baseline (no extra payments)",
        "description": "Standard amortization with scheduled periodic payments and no additional principal payments.",
        "variables": {
          "N": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of scheduled periods",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_interest_rate/100/payments_per_year",
            "dependencies": [
              "annual_interest_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "scheduled_payment": {
            "expression": "principal * periodic_rate / (1 - pow(1 + periodic_rate, -N))",
            "dependencies": [
              "principal",
              "periodic_rate",
              "N"
            ],
            "label": "Scheduled payment per period",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "scheduled_payment * N",
            "dependencies": [
              "scheduled_payment",
              "N"
            ],
            "label": "Total paid over term",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payoff_years": {
            "expression": "N / payments_per_year",
            "dependencies": [
              "N",
              "payments_per_year"
            ],
            "label": "Time to payoff (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled payment (per period)",
            "variable": "scheduled_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid",
            "label": "Total paid (principal + interest)",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_years",
            "label": "Time to payoff",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      },
      "recurring_extra": {
        "label": "Recurring extra per payment",
        "description": "Add a fixed extra amount to every scheduled payment (applies every period). Suitable for consistent additional principal contributions.",
        "variables": {
          "N": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of scheduled periods",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_interest_rate/100/payments_per_year",
            "dependencies": [
              "annual_interest_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "scheduled_payment": {
            "expression": "principal * periodic_rate / (1 - pow(1 + periodic_rate, -N))",
            "dependencies": [
              "principal",
              "periodic_rate",
              "N"
            ],
            "label": "Scheduled payment per period",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "payment_with_extra": {
            "expression": "scheduled_payment + extra_amount",
            "dependencies": [
              "scheduled_payment",
              "extra_amount"
            ],
            "label": "Payment per period including recurring extra",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payoff_periods": {
            "expression": "-ln(1 - periodic_rate * principal / payment_with_extra) / ln(1 + periodic_rate)",
            "dependencies": [
              "periodic_rate",
              "principal",
              "payment_with_extra"
            ],
            "label": "Estimated number of periods to payoff",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "payoff_years": {
            "expression": "payoff_periods / payments_per_year",
            "dependencies": [
              "payoff_periods",
              "payments_per_year"
            ],
            "label": "Estimated time to payoff (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "payment_with_extra * payoff_periods",
            "dependencies": [
              "payment_with_extra",
              "payoff_periods"
            ],
            "label": "Total paid including extras",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid with extras",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "baseline_total_interest - total_interest",
            "dependencies": [
              "baseline_total_interest",
              "total_interest"
            ],
            "label": "Interest saved vs baseline",
            "unit": "USD",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment_with_extra",
            "label": "Payment with recurring extra",
            "variable": "payment_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_years",
            "label": "Payoff time (years)",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid (with extras)",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "interest_saved",
            "label": "Interest saved (vs baseline)",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "one_time_extra": {
        "label": "One-time extra at a chosen period",
        "description": "Apply a single lump-sum extra payment at a chosen period (e.g., a bonus or sale of assets applied toward principal).",
        "variables": {
          "N": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of scheduled periods",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_interest_rate/100/payments_per_year",
            "dependencies": [
              "annual_interest_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "scheduled_payment": {
            "expression": "principal * periodic_rate / (1 - pow(1 + periodic_rate, -N))",
            "dependencies": [
              "principal",
              "periodic_rate",
              "N"
            ],
            "label": "Scheduled payment per period",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "k": {
            "expression": "one_time_period",
            "dependencies": [
              "one_time_period"
            ],
            "label": "Period when one-time extra is applied",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "remaining_balance_at_k": {
            "expression": "principal * pow(1 + periodic_rate, k) - scheduled_payment * ( (pow(1 + periodic_rate, k) - 1) / periodic_rate )",
            "dependencies": [
              "principal",
              "periodic_rate",
              "scheduled_payment",
              "k"
            ],
            "label": "Outstanding balance immediately before one-time extra",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "new_principal": {
            "expression": "remaining_balance_at_k - extra_amount",
            "dependencies": [
              "remaining_balance_at_k",
              "extra_amount"
            ],
            "label": "New principal after one-time extra",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payoff_periods_after": {
            "expression": "-ln(1 - periodic_rate * new_principal / scheduled_payment) / ln(1 + periodic_rate)",
            "dependencies": [
              "periodic_rate",
              "new_principal",
              "scheduled_payment"
            ],
            "label": "Estimated remaining periods after one-time extra",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "payoff_periods_total": {
            "expression": "k + payoff_periods_after",
            "dependencies": [
              "k",
              "payoff_periods_after"
            ],
            "label": "Estimated total periods to payoff",
            "unit": "periods",
            "format": "decimal",
            "display": false
          },
          "payoff_years": {
            "expression": "payoff_periods_total / payments_per_year",
            "dependencies": [
              "payoff_periods_total",
              "payments_per_year"
            ],
            "label": "Estimated time to payoff (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "scheduled_payment * k + scheduled_payment * payoff_periods_after + extra_amount",
            "dependencies": [
              "scheduled_payment",
              "k",
              "payoff_periods_after",
              "extra_amount"
            ],
            "label": "Total paid including the one-time extra",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid with one-time extra",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "baseline_total_interest - total_interest",
            "dependencies": [
              "baseline_total_interest",
              "total_interest"
            ],
            "label": "Interest saved vs baseline",
            "unit": "USD",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "remaining_balance_at_k",
            "label": "Balance before one-time extra",
            "variable": "remaining_balance_at_k",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_years",
            "label": "Payoff time after one-time extra",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid (with one-time extra)",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "interest_saved",
            "label": "Interest saved (vs baseline)",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "annual_lump": {
        "label": "Annual lump-sum extra (approximate)",
        "description": "Apply a lump sum once per year. For practical estimation this method approximates the effect by distributing the annual lump across the year's periods to produce an effective per-period impact. This is an approximation; for exact amortization use an iterative schedule or the one-time method applied each year.",
        "variables": {
          "N": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of scheduled periods",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_interest_rate/100/payments_per_year",
            "dependencies": [
              "annual_interest_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "scheduled_payment": {
            "expression": "principal * periodic_rate / (1 - pow(1 + periodic_rate, -N))",
            "dependencies": [
              "principal",
              "periodic_rate",
              "N"
            ],
            "label": "Scheduled payment per period",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "effective_extra_per_period": {
            "expression": "annual_extra_amount / payments_per_year",
            "dependencies": [
              "annual_extra_amount",
              "payments_per_year"
            ],
            "label": "Effective extra per period (annual lump distributed)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payment_with_effective_extra": {
            "expression": "scheduled_payment + effective_extra_per_period",
            "dependencies": [
              "scheduled_payment",
              "effective_extra_per_period"
            ],
            "label": "Approximate per-period payment including annual lump effect",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payoff_periods": {
            "expression": "-ln(1 - periodic_rate * principal / payment_with_effective_extra) / ln(1 + periodic_rate)",
            "dependencies": [
              "periodic_rate",
              "principal",
              "payment_with_effective_extra"
            ],
            "label": "Estimated number of periods to payoff (approx.)",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "payoff_years": {
            "expression": "payoff_periods / payments_per_year",
            "dependencies": [
              "payoff_periods",
              "payments_per_year"
            ],
            "label": "Estimated payoff time (years, approximate)",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "payment_with_effective_extra * payoff_periods",
            "dependencies": [
              "payment_with_effective_extra",
              "payoff_periods"
            ],
            "label": "Total paid including annual lumps (approx.)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest (approx.)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "baseline_total_interest - total_interest",
            "dependencies": [
              "baseline_total_interest",
              "total_interest"
            ],
            "label": "Interest saved vs baseline (approx.)",
            "unit": "USD",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "effective_extra_per_period",
            "label": "Effective extra per period (annual lump distributed)",
            "variable": "effective_extra_per_period",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_years",
            "label": "Payoff time (years, approximate)",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest",
            "label": "Total interest (approx.)",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "interest_saved",
            "label": "Interest saved (vs baseline, approx.)",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
