{
  "version": "1.0.0",
  "metadata": {
    "title": "Motorcycle Loan Amortization Calculator (monthly & bi-weekly modes)",
    "description": "Calculate amortization schedules and payoff estimates for motorcycle loans with support for standard monthly payments, accelerated bi-weekly payments (26 periods/year), split-monthly bi-weekly (half-month payment every two weeks), and extra-payment early-payoff scenarios. Includes clear accuracy caveats and calibration guidance."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_accelerated",
    "methods": {
      "monthly": {
        "label": "Standard monthly amortization",
        "description": "Monthly payments computed from standard amortization formula using 12 periods per year.",
        "variables": {
          "periods_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "n_periods": {
            "expression": "term_years * periods_per_year",
            "dependencies": [
              "term_years",
              "periods_per_year"
            ],
            "label": "Total number of payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "periodic_rate": {
            "expression": "annual_interest_rate_percent / 100 / periods_per_year",
            "dependencies": [
              "annual_interest_rate_percent",
              "periods_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "base_payment": {
            "expression": "loan_amount * (periodic_rate * (1 + periodic_rate) ^ n_periods) / ((1 + periodic_rate) ^ n_periods - 1)",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "n_periods"
            ],
            "label": "Monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "base_payment + extra_payment_per_period",
            "dependencies": [
              "base_payment",
              "extra_payment_per_period"
            ],
            "label": "Monthly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "estimated_number_of_payments": {
            "expression": "-log(1 - (loan_amount * periodic_rate) / payment_with_extra) / log(1 + periodic_rate)",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "payment_with_extra"
            ],
            "label": "Estimated payments until payoff",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "total_interest_estimate": {
            "expression": "payment_with_extra * estimated_number_of_payments - loan_amount",
            "dependencies": [
              "payment_with_extra",
              "estimated_number_of_payments",
              "loan_amount"
            ],
            "label": "Estimated total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_cost_estimate": {
            "expression": "loan_amount + total_interest_estimate",
            "dependencies": [
              "loan_amount",
              "total_interest_estimate"
            ],
            "label": "Estimated total cost (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "base_payment",
            "label": "Monthly payment",
            "variable": "base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_number_of_payments",
            "label": "Estimated number of payments",
            "variable": "estimated_number_of_payments",
            "unit": "periods",
            "format": "decimal"
          },
          {
            "id": "total_interest_estimate",
            "label": "Estimated total interest",
            "variable": "total_interest_estimate",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_cost_estimate",
            "label": "Estimated total cost",
            "variable": "total_cost_estimate",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "biweekly_accelerated": {
        "label": "Accelerated bi-weekly (26 periods/year)",
        "description": "Calculate the payment and payoff when using 26 equal payments per year (common accelerated bi-weekly schedule). This treats each bi-weekly payment as a full periodic payment at the per-period rate for 26 periods/year.",
        "variables": {
          "periods_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "n_periods": {
            "expression": "term_years * periods_per_year",
            "dependencies": [
              "term_years",
              "periods_per_year"
            ],
            "label": "Total number of payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "periodic_rate": {
            "expression": "annual_interest_rate_percent / 100 / periods_per_year",
            "dependencies": [
              "annual_interest_rate_percent",
              "periods_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "base_payment": {
            "expression": "loan_amount * (periodic_rate * (1 + periodic_rate) ^ n_periods) / ((1 + periodic_rate) ^ n_periods - 1)",
            "dependencies": [
