            "label": "Bi-weekly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "estimated_number_of_payments": {
            "expression": "-log(1 - (loan_amount * periodic_rate) / payment_with_extra) / log(1 + periodic_rate)",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "payment_with_extra"
            ],
            "label": "Estimated number of bi-weekly payments until payoff",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "total_interest_estimate": {
            "expression": "payment_with_extra * estimated_number_of_payments - loan_amount",
            "dependencies": [
              "payment_with_extra",
              "estimated_number_of_payments",
              "loan_amount"
            ],
            "label": "Estimated total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_cost_estimate": {
            "expression": "loan_amount + total_interest_estimate",
            "dependencies": [
              "loan_amount",
