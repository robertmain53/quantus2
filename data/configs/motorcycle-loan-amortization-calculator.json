            ],
            "label": "Estimated total cost (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "base_payment",
            "label": "Bi-weekly payment",
            "variable": "base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_number_of_payments",
            "label": "Estimated number of bi-weekly payments",
            "variable": "estimated_number_of_payments",
            "unit": "periods",
            "format": "decimal"
          },
          {
            "id": "total_interest_estimate",
            "label": "Estimated total interest",
            "variable": "total_interest_estimate",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "biweekly_from_monthly": {
        "label": "Split-monthly bi-weekly (half monthly payment every two weeks)",
        "description": "Computes bi-weekly payments by splitting the standard monthly payment in half (26 half-payments per year). This method often results in 13 months of payments per year, accelerating payoff versus strict monthly schedules.",
        "variables": {
          "periods_per_year_monthly": {
            "expression": "12",
            "dependencies": [],
            "label": "Monthly periods per year (helper)",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "n_periods_monthly": {
            "expression": "term_years * periods_per_year_monthly",
            "dependencies": [
              "term_years",
              "periods_per_year_monthly"
            ],
            "label": "Total monthly payments (helper)",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "periodic_rate_monthly": {
            "expression": "annual_interest_rate_percent / 100 / periods_per_year_monthly",
            "dependencies": [
              "annual_interest_rate_percent",
              "periods_per_year_monthly"
            ],
            "label": "Monthly periodic rate (helper)",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "monthly_payment": {
            "expression": "loan_amount * (periodic_rate_monthly * (1 + periodic_rate_monthly) ^ n_periods_monthly) / ((1 + periodic_rate_monthly) ^ n_periods_monthly - 1)",
            "dependencies": [
              "loan_amount",
              "periodic_rate_monthly",
              "n_periods_monthly"
            ],
            "label": "Monthly payment (base)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "biweekly_payment": {
            "expression": "monthly_payment / 2",
            "dependencies": [
              "monthly_payment"
            ],
            "label": "Bi-weekly (half-month) payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "biweekly_payment_with_extra": {
            "expression": "biweekly_payment + extra_payment_per_period",
            "dependencies": [
              "biweekly_payment",
              "extra_payment_per_period"
            ],
            "label": "Bi-weekly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "estimated_number_of_biweekly_payments": {
            "expression": "-log(1 - (loan_amount * (annual_interest_rate_percent / 100 / 26)) / biweekly_payment_with_extra) / log(1 + (annual_interest_rate_percent / 100 / 26))",
            "dependencies": [
              "loan_amount",
              "annual_interest_rate_percent",
              "biweekly_payment_with_extra"
            ],
            "label": "Estimated number of bi-weekly payments",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "total_interest_estimate": {
            "expression": "biweekly_payment_with_extra * estimated_number_of_biweekly_payments - loan_amount",
            "dependencies": [
              "biweekly_payment_with_extra",
              "estimated_number_of_biweekly_payments",
              "loan_amount"
            ],
            "label": "Estimated total interest",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "biweekly_payment",
            "label": "Bi-weekly (half-month) payment",
            "variable": "biweekly_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_number_of_biweekly_payments",
            "label": "Estimated number of bi-weekly payments",
            "variable": "estimated_number_of_biweekly_payments",
            "unit": "periods",
            "format": "decimal"
          },
          {
            "id": "total_interest_estimate",
            "label": "Estimated total interest",
            "variable": "total_interest_estimate",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "early_payoff": {
        "label": "Early payoff with extra payments",
        "description": "Estimate payoff time and interest when applying a fixed extra payment each scheduled period. Uses the periodic-rate payoff formula; for variable-rate loans or irregular extra payments results are approximate.",
        "variables": {
          "periods_per_year": {
            "expression": "if(payment_mode == 'monthly', 12, if(payment_mode == 'biweekly_accelerated', 26, 26))",
            "dependencies": [
              "payment_mode"
            ],
            "label": "Payments per year (based on selected payment_mode)",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_interest_rate_percent / 100 / periods_per_year",
            "dependencies": [
              "annual_interest_rate_percent",
              "periods_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "payment_schedule_base": {
            "expression": "loan_amount * (periodic_rate * (1 + periodic_rate) ^ (term_years * periods_per_year)) / ((1 + periodic_rate) ^ (term_years * periods_per_year) - 1)",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "term_years",
              "periods_per_year"
            ],
            "label": "Base scheduled payment for selected frequency",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "payment_with_extra": {
            "expression": "payment_schedule_base + extra_payment_per_period",
            "dependencies": [
              "payment_schedule_base",
              "extra_payment_per_period"
            ],
            "label": "Scheduled payment plus extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "estimated_number_of_payments": {
            "expression": "-log(1 - (loan_amount * periodic_rate) / payment_with_extra) / log(1 + periodic_rate)",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "payment_with_extra"
            ],
            "label": "Estimated number of payments until payoff (periods)",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "estimated_years_to_payoff": {
            "expression": "estimated_number_of_payments / periods_per_year",
            "dependencies": [
              "estimated_number_of_payments",
              "periods_per_year"
            ],
            "label": "Estimated years until payoff",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_interest_estimate": {
            "expression": "payment_with_extra * estimated_number_of_payments - loan_amount",
            "dependencies": [
              "payment_with_extra",
              "estimated_number_of_payments",
              "loan_amount"
            ],
            "label": "Estimated total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
