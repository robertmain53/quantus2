    "glossary": [
      {
        "term": "APR (Annual Percentage Rate)",
        "definition": "Nominal annual interest rate. This calculator uses APR converted to a periodic rate appropriate for the payment frequency."
      },
      {
        "term": "Periodic rate",
        "definition": "APR divided by the number of payment periods per year (e.g., monthly or bi‑weekly)."
      },
      {
        "term": "Amortization",
        "definition": "The schedule of payments that gradually reduces principal and interest to zero by the end of the loan term."
      },
      {
        "term": "Accelerated bi‑weekly",
        "definition": "A repayment approach where you pay half of the monthly payment every two weeks, resulting in the equivalent of 13 monthly payments per year."
      }
    ]
