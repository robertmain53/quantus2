{
  "version": "1.0.0",
  "metadata": {
    "title": "Personal Loan — Bi‑Weekly Payment & Comparison Calculator",
    "description": "Compute bi‑weekly payment schedules, compare monthly vs accelerated bi‑weekly (half‑monthly) approaches, and estimate payoff time and interest saved. Includes safety checks and accuracy notes referencing industry standards."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "compare_monthly_biweekly",
    "methods": {
      "biweekly_from_terms": {
        "label": "Bi‑weekly payment (standard amortization)",
        "description": "Calculate the regular bi‑weekly payment, total interest, and payoff time when payments occur every two weeks (26 payments/year) using standard amortization.",
        "variables": {
          "periods_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "per year",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_rate_percent / 100 / periods_per_year",
            "dependencies": [
              "annual_rate_percent",
              "periods_per_year"
            ],
            "label": "Periodic interest rate (per bi‑weekly period)",
            "format": "percent",
            "display": true
          },
          "total_periods": {
            "expression": "term_years * periods_per_year",
            "dependencies": [
              "term_years",
              "periods_per_year"
            ],
            "label": "Total number of bi‑weekly payments",
            "format": "integer",
            "display": false
          },
          "biweekly_payment": {
            "expression": "periodic_rate * principal / (1 - (1 + periodic_rate) ^ (- total_periods))",
            "dependencies": [
              "periodic_rate",
              "principal",
              "total_periods"
            ],
            "label": "Bi‑weekly payment",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "biweekly_payment * total_periods",
            "dependencies": [
              "biweekly_payment",
              "total_periods"
            ],
            "label": "Total paid",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payoff_years": {
            "expression": "total_periods / periods_per_year",
            "dependencies": [
              "total_periods",
              "periods_per_year"
            ],
            "label": "Payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "biweekly_payment",
            "label": "Bi‑weekly payment",
            "variable": "biweekly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest (bi‑weekly)",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_years",
            "label": "Payoff time (years)",
            "variable": "payoff_years",
            "format": "decimal"
          },
          {
            "id": "total_paid",
            "label": "Total paid (bi‑weekly)",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "compare_monthly_biweekly": {
        "label": "Compare monthly vs accelerated bi‑weekly (half‑monthly)",
        "description": "Compute standard monthly payment, standard bi‑weekly payment, and the effect of paying half the monthly payment every two weeks (commonly called accelerated bi‑weekly). Estimates payoff time and interest saved.",
        "variables": {
          "monthly_periods_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Monthly payments per year",
            "format": "integer",
            "display": false
          },
          "monthly_rate": {
            "expression": "annual_rate_percent / 100 / monthly_periods_per_year",
            "dependencies": [
              "annual_rate_percent",
              "monthly_periods_per_year"
            ],
            "label": "Monthly interest rate",
            "format": "percent",
            "display": false
          },
          "monthly_total_periods": {
            "expression": "term_years * monthly_periods_per_year",
            "dependencies": [
              "term_years",
              "monthly_periods_per_year"
            ],
            "label": "Total monthly payments",
            "format": "integer",
            "display": false
          },
          "monthly_payment": {
            "expression": "monthly_rate * principal / (1 - (1 + monthly_rate) ^ (- monthly_total_periods))",
            "dependencies": [
              "monthly_rate",
              "principal",
              "monthly_total_periods"
            ],
            "label": "Monthly payment",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "monthly_total_paid": {
            "expression": "monthly_payment * monthly_total_periods",
            "dependencies": [
              "monthly_payment",
              "monthly_total_periods"
            ],
            "label": "Total paid (monthly)",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "monthly_total_interest": {
            "expression": "monthly_total_paid - principal",
            "dependencies": [
              "monthly_total_paid",
              "principal"
            ],
            "label": "Total interest (monthly)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "biweekly_periods_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Bi‑weekly payments per year",
            "format": "integer",
            "display": false
          },
          "biweekly_rate": {
            "expression": "annual_rate_percent / 100 / biweekly_periods_per_year",
            "dependencies": [
              "annual_rate_percent",
              "biweekly_periods_per_year"
            ],
            "label": "Bi‑weekly interest rate",
            "format": "percent",
            "display": false
          },
          "biweekly_total_periods": {
            "expression": "term_years * biweekly_periods_per_year",
            "dependencies": [
              "term_years",
              "biweekly_periods_per_year"
            ],
            "label": "Total bi‑weekly payments",
            "format": "integer",
            "display": false
          },
          "biweekly_payment": {
            "expression": "biweekly_rate * principal / (1 - (1 + biweekly_rate) ^ (- biweekly_total_periods))",
            "dependencies": [
              "biweekly_rate",
              "principal",
              "biweekly_total_periods"
            ],
            "label": "Bi‑weekly payment (standard)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "half_month_biweekly_payment": {
            "expression": "monthly_payment / 2",
            "dependencies": [
              "monthly_payment"
            ],
            "label": "Accelerated bi‑weekly payment (half of monthly, paid every 2 weeks)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "periods_to_payoff_half": {
            "expression": "-ln(1 - (biweekly_rate * principal) / half_month_biweekly_payment) / ln(1 + biweekly_rate)",
            "dependencies": [
              "biweekly_rate",
              "principal",
              "half_month_biweekly_payment"
            ],
            "label": "Number of bi‑weekly periods to payoff (accelerated)",
            "format": "decimal",
            "display": false
          },
          "years_to_payoff_half": {
            "expression": "periods_to_payoff_half / biweekly_periods_per_year",
            "dependencies": [
              "periods_to_payoff_half",
              "biweekly_periods_per_year"
            ],
            "label": "Payoff time (years) - accelerated",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid_half": {
            "expression": "half_month_biweekly_payment * periods_to_payoff_half",
            "dependencies": [
              "half_month_biweekly_payment",
              "periods_to_payoff_half"
            ],
            "label": "Total paid (accelerated)",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "total_interest_half": {
            "expression": "total_paid_half - principal",
            "dependencies": [
              "total_paid_half",
              "principal"
            ],
            "label": "Total interest (accelerated)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "interest_saved_vs_monthly": {
            "expression": "monthly_total_interest - total_interest_half",
            "dependencies": [
              "monthly_total_interest",
              "total_interest_half"
            ],
            "label": "Interest saved vs monthly schedule",
            "unit": "USD",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_payment",
            "label": "Monthly payment",
            "variable": "monthly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "biweekly_payment",
            "label": "Bi‑weekly payment (standard)",
            "variable": "biweekly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "half_month_biweekly_payment",
            "label": "Accelerated bi‑weekly payment (half‑monthly)",
            "variable": "half_month_biweekly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "years_to_payoff_half",
            "label": "Payoff time (years) — accelerated",
            "variable": "years_to_payoff_half",
            "format": "decimal"
          },
          {
            "id": "total_interest_half",
            "label": "Total interest — accelerated",
            "variable": "total_interest_half",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "interest_saved_vs_monthly",
            "label": "Interest saved vs monthly",
            "variable": "interest_saved_vs_monthly",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
  "form": {
