    "glossary": [
      {
        "term": "Amortization",
        "definition": "The process of paying off debt over time through regular payments that cover interest and principal."
      },
      {
        "term": "APR",
        "definition": "Annual Percentage Rate. Nominal annual interest rate used by this calculator to compute periodic interest."
      },
      {
        "term": "Principal",
        "definition": "The original loan amount (outstanding balance excluding interest and fees)."
      },
      {
        "term": "Extra payment",
        "definition": "Any payment amount above the scheduled payment applied to the loan; typically reduces principal and shortens the term."
      },
      {
        "term": "Remaining balance",
        "definition": "Estimated outstanding principal at a given point in the schedule before or after a payment."
      }
