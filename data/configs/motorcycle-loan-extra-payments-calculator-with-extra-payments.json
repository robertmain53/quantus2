{
  "version": "1.0.0",
  "metadata": {
    "title": "Motorcycle Loan Extra Payments Calculator",
    "description": "Estimate how regular extra payments, one-time lump sums, or biweekly schedules change payoff time, total interest, and monthly/periodic payments for a motorcycle loan. Provides conservative, documented calculations and clear caveats about rounding and lender policies."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "standard_extra_each",
    "methods": {
      "standard_extra_each": {
        "label": "Regular extra each payment",
        "description": "Applies a consistent additional payment each scheduled period (e.g., add $50 to every monthly payment). Estimates reduced payoff time and interest.",
        "variables": {
          "r_period": {
            "expression": "apr/100/payments_per_year",
            "dependencies": [
              "apr",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": false
          },
          "n": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Number of payments (original)",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "scheduled_payment": {
            "expression": "principal * (r_period) / (1 - (1 + r_period) ** (-n))",
            "dependencies": [
              "principal",
              "r_period",
              "n"
            ],
            "label": "Scheduled payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "scheduled_payment + extra_each_period",
            "dependencies": [
              "scheduled_payment",
              "extra_each_period"
            ],
            "label": "Payment with regular extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_payments": {
            "expression": "log(payment_with_extra / (payment_with_extra - principal * r_period)) / log(1 + r_period)",
            "dependencies": [
              "payment_with_extra",
              "principal",
              "r_period"
            ],
            "label": "Number of payments until payoff with extras",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "payoff_years": {
            "expression": "payoff_payments / payments_per_year",
            "dependencies": [
              "payoff_payments",
              "payments_per_year"
            ],
            "label": "Time to payoff (years) with extras",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid_no_extra": {
            "expression": "scheduled_payment * n",
            "dependencies": [
              "scheduled_payment",
              "n"
            ],
            "label": "Total paid (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_paid_with_extra": {
            "expression": "payment_with_extra * payoff_payments",
            "dependencies": [
              "payment_with_extra",
              "payoff_payments"
            ],
            "label": "Total paid (with regular extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest_no_extra": {
            "expression": "total_paid_no_extra - principal",
            "dependencies": [
              "total_paid_no_extra",
              "principal"
            ],
            "label": "Total interest (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_interest_with_extra": {
            "expression": "total_paid_with_extra - principal",
            "dependencies": [
              "total_paid_with_extra",
              "principal"
            ],
            "label": "Total interest (with extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "total_interest_no_extra - total_interest_with_extra",
            "dependencies": [
              "total_interest_no_extra",
              "total_interest_with_extra"
            ],
            "label": "Estimated interest saved",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payments_saved": {
            "expression": "n - payoff_payments",
            "dependencies": [
              "n",
              "payoff_payments"
            ],
            "label": "Number of payments saved",
            "unit": "payments",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled payment (no extras)",
            "variable": "scheduled_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Payment with extra each period",
            "variable": "payment_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_payments",
            "label": "Payments until payoff (with extras)",
            "variable": "payoff_payments",
            "unit": "payments",
            "format": "decimal"
          },
          {
            "id": "payoff_years",
            "label": "Time to payoff (years)",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest_with_extra",
            "label": "Total interest paid (with extras)",
            "variable": "total_interest_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "interest_saved",
            "label": "Estimated interest saved",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payments_saved",
            "label": "Payments saved",
            "variable": "payments_saved",
            "unit": "payments",
            "format": "decimal"
          }
        ]
      },
      "one_time_lump": {
        "label": "One-time lump-sum paydown",
        "description": "Apply a single extra payment at a specified payment number to reduce principal and recalculate the remaining amortization.",
        "variables": {
          "r_period": {
            "expression": "apr/100/payments_per_year",
            "dependencies": [
              "apr",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": false
          },
          "n": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Number of payments (original)",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "scheduled_payment": {
            "expression": "principal * (r_period) / (1 - (1 + r_period) ** (-n))",
            "dependencies": [
              "principal",
              "r_period",
              "n"
            ],
            "label": "Scheduled payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "remaining_balance_before_lump": {
            "expression": "principal * (1 + r_period) ** (lump_at_payment - 1) - scheduled_payment * (((1 + r_period) ** (lump_at_payment - 1) - 1) / r_period)",
            "dependencies": [
              "principal",
              "r_period",
              "lump_at_payment",
              "scheduled_payment"
            ],
            "label": "Estimated balance just before lump payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "new_principal_after_lump": {
            "expression": "remaining_balance_before_lump - lump_sum",
            "dependencies": [
              "remaining_balance_before_lump",
              "lump_sum"
            ],
            "label": "Remaining principal after lump",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_payments_after": {
            "expression": "log(scheduled_payment / (scheduled_payment - new_principal_after_lump * r_period)) / log(1 + r_period)",
            "dependencies": [
              "scheduled_payment",
              "new_principal_after_lump",
              "r_period"
            ],
            "label": "Payments remaining after lump",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "total_payments_required": {
            "expression": "lump_at_payment - 1 + payoff_payments_after",
            "dependencies": [
              "lump_at_payment",
              "payoff_payments_after"
            ],
            "label": "Total payments required until payoff",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "total_interest_with_lump": {
            "expression": "scheduled_payment * (lump_at_payment - 1) + lump_sum + scheduled_payment * payoff_payments_after - principal",
            "dependencies": [
              "scheduled_payment",
              "lump_at_payment",
              "lump_sum",
              "payoff_payments_after",
              "principal"
            ],
            "label": "Estimated total interest paid (with lump)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "remaining_balance_before_lump",
            "label": "Balance before lump payment",
            "variable": "remaining_balance_before_lump",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "new_principal_after_lump",
            "label": "Balance after lump payment",
            "variable": "new_principal_after_lump",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_payments_after",
            "label": "Payments remaining after lump",
            "variable": "payoff_payments_after",
            "unit": "payments",
            "format": "decimal"
          },
          {
            "id": "total_payments_required",
            "label": "Total payments until payoff",
            "variable": "total_payments_required",
            "unit": "payments",
            "format": "decimal"
          },
          {
            "id": "total_interest_with_lump",
            "label": "Estimated total interest (with lump)",
            "variable": "total_interest_with_lump",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "equivalent_biweekly": {
        "label": "Biweekly payments (equivalent schedule)",
        "description": "Estimates outcome when switching to biweekly payments by treating the schedule as 26 equal periods per year. Useful to compare how more frequent payments shorten amortization.",
        "variables": {
          "effective_payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Biweekly payments per year",
            "unit": "payments/year",
            "format": "integer",
            "display": false
          },
          "r_period": {
            "expression": "apr/100/effective_payments_per_year",
            "dependencies": [
              "apr",
              "effective_payments_per_year"
            ],
            "label": "Periodic interest rate (biweekly)",
            "unit": "decimal",
            "format": "decimal",
            "display": false
          },
          "n_biweekly": {
            "expression": "term_years * effective_payments_per_year",
            "dependencies": [
              "term_years",
              "effective_payments_per_year"
            ],
            "label": "Number of biweekly payments (original term)",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "scheduled_payment_biweekly": {
            "expression": "principal * (r_period) / (1 - (1 + r_period) ** (-n_biweekly))",
            "dependencies": [
              "principal",
              "r_period",
              "n_biweekly"
            ],
            "label": "Biweekly scheduled payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra_biweekly": {
            "expression": "scheduled_payment_biweekly + extra_each_period",
            "dependencies": [
              "scheduled_payment_biweekly",
              "extra_each_period"
            ],
            "label": "Biweekly payment with regular extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_payments_biweekly": {
            "expression": "log(payment_with_extra_biweekly / (payment_with_extra_biweekly - principal * r_period)) / log(1 + r_period)",
            "dependencies": [
              "payment_with_extra_biweekly",
              "principal",
              "r_period"
            ],
            "label": "Number of biweekly payments until payoff with extras",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "payoff_years_biweekly": {
            "expression": "payoff_payments_biweekly / effective_payments_per_year",
            "dependencies": [
              "payoff_payments_biweekly",
              "effective_payments_per_year"
            ],
            "label": "Time to payoff (years) biweekly with extras",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_interest_biweekly": {
            "expression": "payment_with_extra_biweekly * payoff_payments_biweekly - principal",
            "dependencies": [
              "payment_with_extra_biweekly",
              "payoff_payments_biweekly",
              "principal"
            ],
            "label": "Total interest paid (biweekly with extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment_biweekly",
            "label": "Biweekly scheduled payment (no extras)",
            "variable": "scheduled_payment_biweekly",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payment_with_extra_biweekly",
            "label": "Biweekly payment with extra",
            "variable": "payment_with_extra_biweekly",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_payments_biweekly",
            "label": "Biweekly payments until payoff",
            "variable": "payoff_payments_biweekly",
            "unit": "payments",
            "format": "decimal"
          },
          {
            "id": "payoff_years_biweekly",
            "label": "Time to payoff (years) biweekly",
            "variable": "payoff_years_biweekly",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest_biweekly",
            "label": "Estimated total interest (biweekly)",
            "variable": "total_interest_biweekly",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
