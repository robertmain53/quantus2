    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate — the yearly interest rate charged on the loan, expressed as a percentage."
      },
      {
        "term": "Periodic rate",
        "definition": "Interest rate applicable to each payment period: APR divided by the number of payments per year."
      },
      {
        "term": "Annuity formula",
        "definition": "Standard formula to compute level periodic payments that amortize a principal over a fixed number of periods."
      },
      {
        "term": "Lump-sum prepayment",
        "definition": "A one-time payment applied directly to principal, which reduces remaining interest and can shorten the loan term."
      }
    ]
