{
  "version": "1.0.0",
  "metadata": {
    "title": "Boat Loan Extra Payments & Bi-Weekly Payments Calculator (Advanced)",
    "description": "Interactive calculator to model boat loan amortization with optional extra recurring payments and bi-weekly (26/year) payment frequency. Compare monthly vs bi-weekly schedules, estimate payoff time, interest saved, and how lump-sum prepayments affect the schedule. Designed for clarity, traceability, and conservative numeric accuracy."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_with_extra",
    "methods": {
      "biweekly_with_extra": {
        "label": "Bi-weekly schedule with extra payments",
        "description": "Estimate payoff and interest when making 26 payments per year (bi-weekly) plus optional recurring extra payments and an optional lump-sum prepayment applied at loan start.",
        "variables": {
          "payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "per year",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_rate / 100 / payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "format": "decimal",
            "display": true
          },
          "n_periods": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Scheduled number of payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "base_payment": {
            "expression": "loan_amount * periodic_rate / (1 - (1 + periodic_rate) ** (-n_periods))",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "n_periods"
            ],
            "label": "Standard periodic payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "A": {
            "expression": "base_payment + extra_per_period",
            "dependencies": [
              "base_payment",
              "extra_per_period"
            ],
            "label": "Actual periodic payment (base + recurring extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "principal_after_lump": {
            "expression": "max(0, loan_amount - lump_sum)",
            "dependencies": [
              "loan_amount",
              "lump_sum"
            ],
            "label": "Outstanding principal after lump-sum prepayment at start",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "payoff_periods": {
            "expression": "-log(1 - principal_after_lump * periodic_rate / A) / log(1 + periodic_rate)",
            "dependencies": [
              "principal_after_lump",
              "periodic_rate",
              "A"
            ],
            "label": "Estimated number of periods until payoff",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "payoff_years": {
            "expression": "payoff_periods / payments_per_year",
            "dependencies": [
              "payoff_periods",
              "payments_per_year"
            ],
            "label": "Estimated years until payoff",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "A * payoff_periods + lump_sum",
            "dependencies": [
              "A",
              "payoff_periods",
              "lump_sum"
            ],
            "label": "Total amount paid (payments + lump sum)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "original_total_interest": {
            "expression": "base_payment * n_periods - loan_amount",
            "dependencies": [
              "base_payment",
              "n_periods",
              "loan_amount"
            ],
            "label": "Total interest if no extras (original schedule)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "interest_saved": {
            "expression": "original_total_interest - total_interest",
            "dependencies": [
              "original_total_interest",
              "total_interest"
            ],
            "label": "Estimated interest saved vs original schedule",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "base_payment",
            "label": "Base bi-weekly payment (no extras)",
            "variable": "base_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "actual_periodic_payment",
            "label": "Actual bi-weekly payment (including extra)",
            "variable": "A",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_periods",
            "label": "Estimated payoff (periods)",
            "variable": "payoff_periods",
            "format": "decimal"
          },
          {
            "id": "payoff_years",
            "label": "Estimated payoff (years)",
            "variable": "payoff_years",
            "format": "decimal"
          },
          {
            "id": "total_interest",
            "label": "Estimated total interest paid",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "interest_saved",
            "label": "Estimated interest saved vs scheduled payments",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
