      "compare_monthly_vs_biweekly": {
        "label": "Compare monthly vs bi-weekly (summary)",
        "description": "Run both monthly and bi-weekly calculations with the same inputs to see differences in payoff time and interest. Uses same numeric formulas as the dedicated methods.",
        "variables": {
          "monthly_payments_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Monthly payments per year",
            "format": "integer",
            "display": false
          },
          "biweekly_payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Bi-weekly payments per year",
            "format": "integer",
            "display": false
          },
          "monthly_periodic_rate": {
            "expression": "annual_rate / 100 / monthly_payments_per_year",
            "dependencies": [
              "annual_rate",
              "monthly_payments_per_year"
            ],
            "label": "Monthly periodic rate",
            "format": "decimal",
            "display": false
          },
          "biweekly_periodic_rate": {
            "expression": "annual_rate / 100 / biweekly_payments_per_year",
            "dependencies": [
              "annual_rate",
              "biweekly_payments_per_year"
            ],
            "label": "Bi-weekly periodic rate",
            "format": "decimal",
            "display": false
          },
          "monthly_base_payment": {
            "expression": "loan_amount * monthly_periodic_rate / (1 - (1 + monthly_periodic_rate) ** (-(term_years * monthly_payments_per_year)))",
            "dependencies": [
              "loan_amount",
              "monthly_periodic_rate",
              "term_years",
              "monthly_payments_per_year"
            ],
            "label": "Monthly base payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "biweekly_base_payment": {
            "expression": "loan_amount * biweekly_periodic_rate / (1 - (1 + biweekly_periodic_rate) ** (-(term_years * biweekly_payments_per_year)))",
            "dependencies": [
              "loan_amount",
              "biweekly_periodic_rate",
              "term_years",
              "biweekly_payments_per_year"
            ],
            "label": "Bi-weekly base payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "monthly_total_interest": {
            "expression": "(monthly_base_payment + extra_per_period) * ( -log(1 - (max(0, loan_amount - lump_sum) * monthly_periodic_rate) / (monthly_base_payment + extra_per_period) ) / log(1 + monthly_periodic_rate) ) + lump_sum - loan_amount",
            "dependencies": [
              "monthly_base_payment",
              "monthly_periodic_rate",
              "extra_per_period",
              "loan_amount",
              "lump_sum"
            ],
            "label": "Estimated total interest (monthly schedule)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "biweekly_total_interest": {
            "expression": "(biweekly_base_payment + extra_per_period) * ( -log(1 - (max(0, loan_amount - lump_sum) * biweekly_periodic_rate) / (biweekly_base_payment + extra_per_period) ) / log(1 + biweekly_periodic_rate) ) + lump_sum - loan_amount",
            "dependencies": [
              "biweekly_base_payment",
              "biweekly_periodic_rate",
              "extra_per_period",
              "loan_amount",
              "lump_sum"
            ],
            "label": "Estimated total interest (bi-weekly schedule)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "interest_difference": {
            "expression": "monthly_total_interest - biweekly_total_interest",
