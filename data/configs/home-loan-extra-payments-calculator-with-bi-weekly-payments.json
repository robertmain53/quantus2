    "glossary": [
      {
        "term": "Amortization",
        "definition": "The process of repaying a loan through scheduled payments that cover interest and principal over time."
      },
      {
        "term": "Periodic rate",
        "definition": "The interest rate applied each payment period; calculated as annual rate divided by number of payments per year."
      },
      {
        "term": "Bi-weekly payments",
        "definition": "A schedule that typically makes 26 payments per year (every two weeks). Some implementations split a monthly payment in half; others treat bi-weekly as separate periodic payments with its own periodic rate."
      },
      {
        "term": "One-time extra payment",
        "definition": "A single additional principal payment applied at a chosen payment number, reducing the remaining principal immediately."
      }
    ]
  },
