{
  "version": "1.0.0",
  "metadata": {
    "title": "Home Loan Extra Payments Calculator with Bi-Weekly Support (Advanced)",
    "description": "Interactive amortization and payoff estimator that models monthly or bi-weekly payment schedules, recurring extra payments, and one-time principal reductions. Provides estimated payment amounts, payoff timing, interest saved, and sensitivity to payment frequency. For estimates only — always confirm with lender statements."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "amortization_standard",
    "methods": {
      "amortization_standard": {
        "label": "Standard monthly/periodic amortization",
        "description": "Calculates the regular payment, total paid and total interest for a level-payment amortizing loan using the entered payments per year.",
        "variables": {
          "n_periods": {
            "expression": "form.term_years * form.payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "period_rate": {
            "expression": "form.annual_rate/100/form.payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": true
          },
          "base_payment": {
            "expression": "form.principal * period_rate / (1 - (1 + period_rate) ^ (-n_periods))",
            "dependencies": [
              "principal",
              "period_rate",
              "n_periods"
            ],
            "label": "Scheduled payment (per period)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_payment": {
            "expression": "base_payment * n_periods",
            "dependencies": [
              "base_payment",
              "n_periods"
            ],
            "label": "Total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_payment - form.principal",
            "dependencies": [
              "total_payment",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "base_payment",
            "label": "Scheduled payment (per period)",
            "variable": "base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "n_periods",
            "label": "Number of payments (periods)",
            "variable": "n_periods",
            "format": "integer",
            "unit": "periods"
          },
          {
            "id": "total_payment",
            "label": "Total paid over life of loan",
            "variable": "total_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "biweekly_nominal26": {
        "label": "Bi-weekly (26 payments/year) amortization",
        "description": "Standard amortization when payments occur at the periodic rate corresponding to payments per year (enter 26 for bi-weekly). Shows periodic payment and total cost at that schedule.",
        "variables": {
          "n_periods": {
            "expression": "form.term_years * form.payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "period_rate": {
            "expression": "form.annual_rate/100/form.payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": true
          },
          "periodic_payment": {
            "expression": "form.principal * period_rate / (1 - (1 + period_rate) ^ (-n_periods))",
            "dependencies": [
              "principal",
              "period_rate",
              "n_periods"
            ],
            "label": "Payment amount per period",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "equivalent_annualized": {
            "expression": "periodic_payment * form.payments_per_year",
            "dependencies": [
              "periodic_payment",
              "payments_per_year"
            ],
            "label": "Annual payment (sum)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "periodic_payment * n_periods - form.principal",
            "dependencies": [
              "periodic_payment",
              "n_periods",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment",
            "label": "Payment per period",
            "variable": "periodic_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "equivalent_annualized",
            "label": "Equivalent annual payment (sum)",
            "variable": "equivalent_annualized",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "n_periods",
            "label": "Number of payments",
            "variable": "n_periods",
            "unit": "periods",
            "format": "integer"
          }
        ]
      },
      "extra_recurring": {
        "label": "Recurring extra payment applied to each scheduled payment",
        "description": "Models the effect of adding a fixed extra amount to every payment (same frequency as payments_per_year). Estimates shorter payoff and interest saved.",
        "variables": {
          "n_periods": {
            "expression": "form.term_years * form.payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Original total number of payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "period_rate": {
            "expression": "form.annual_rate/100/form.payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": true
          },
          "base_payment": {
            "expression": "form.principal * period_rate / (1 - (1 + period_rate) ^ (-n_periods))",
            "dependencies": [
              "principal",
              "period_rate",
              "n_periods"
            ],
            "label": "Scheduled payment (no extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "base_payment + form.extra_amount",
            "dependencies": [
              "base_payment",
              "extra_amount"
            ],
            "label": "Scheduled payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_new": {
            "expression": "-ln(1 - period_rate * form.principal / payment_with_extra) / ln(1 + period_rate)",
            "dependencies": [
              "period_rate",
              "principal",
              "payment_with_extra"
            ],
            "label": "Estimated new number of periods to repay",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "payoff_time_years": {
            "expression": "n_new / form.payments_per_year",
            "dependencies": [
              "n_new",
              "payments_per_year"
            ],
            "label": "Estimated payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_interest_new": {
            "expression": "payment_with_extra * n_new - form.principal",
            "dependencies": [
              "payment_with_extra",
              "n_new",
              "principal"
            ],
            "label": "Total interest with extra payments",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": " (base_payment * n_periods - form.principal) - total_interest_new",
            "dependencies": [
              "base_payment",
              "n_periods",
              "principal",
              "total_interest_new"
            ],
            "label": "Estimated interest saved versus base schedule",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment_with_extra",
            "label": "Payment including recurring extra",
            "variable": "payment_with_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "n_new",
            "label": "Estimated number of payments to repay",
            "variable": "n_new",
            "unit": "periods",
            "format": "integer"
          },
          {
            "id": "payoff_time_years",
            "label": "Estimated payoff time (years)",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "interest_saved",
            "label": "Estimated interest saved",
            "variable": "interest_saved",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest_new",
            "label": "Total interest with extra payments",
            "variable": "total_interest_new",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "extra_one_time": {
        "label": "One-time extra payment applied at a chosen period",
        "description": "Computes remaining balance at the chosen period, applies a one-time principal reduction, then re-calculates remaining schedule and interest paid.",
        "variables": {
          "n_periods": {
            "expression": "form.term_years * form.payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Original total number of payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "period_rate": {
            "expression": "form.annual_rate/100/form.payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": true
          },
          "base_payment": {
            "expression": "form.principal * period_rate / (1 - (1 + period_rate) ^ (-n_periods))",
            "dependencies": [
              "principal",
              "period_rate",
              "n_periods"
            ],
            "label": "Scheduled payment (no extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "k": {
            "expression": "form.extra_start_period",
            "dependencies": [
              "extra_start_period"
            ],
            "label": "Period when one-time payment occurs",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "balance_after_k": {
            "expression": "form.principal*(1 + period_rate) ^ k - base_payment * ( ((1 + period_rate) ^ k - 1) / period_rate )",
            "dependencies": [
              "principal",
              "period_rate",
              "k",
              "base_payment"
            ],
            "label": "Estimated outstanding balance just before one-time payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "new_principal": {
            "expression": "balance_after_k - form.extra_amount",
            "dependencies": [
              "balance_after_k",
              "extra_amount"
            ],
            "label": "Remaining principal after one-time reduction",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_remaining": {
            "expression": "-ln(1 - period_rate * new_principal / base_payment) / ln(1 + period_rate)",
            "dependencies": [
              "period_rate",
              "new_principal",
              "base_payment"
            ],
            "label": "Estimated remaining number of periods after one-time payment",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "payoff_time_years": {
            "expression": " (k + n_remaining) / form.payments_per_year",
            "dependencies": [
              "k",
              "n_remaining",
              "payments_per_year"
            ],
            "label": "Estimated payoff time (years) after one-time payment",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_interest_after": {
            "expression": " base_payment * k + form.extra_amount + base_payment * n_remaining - form.principal",
            "dependencies": [
              "base_payment",
              "k",
              "extra_amount",
              "n_remaining",
              "principal"
            ],
            "label": "Total interest paid after one-time payment strategy",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "(base_payment * n_periods - form.principal) - total_interest_after",
            "dependencies": [
              "base_payment",
              "n_periods",
              "principal",
              "total_interest_after"
            ],
            "label": "Estimated interest saved versus base schedule",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "balance_after_k",
            "label": "Balance before one-time payment",
            "variable": "balance_after_k",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "new_principal",
            "label": "Principal after one-time payment",
            "variable": "new_principal",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "n_remaining",
            "label": "Remaining number of payments",
            "variable": "n_remaining",
            "unit": "periods",
            "format": "integer"
          },
          {
            "id": "payoff_time_years",
            "label": "Estimated payoff time (years)",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "interest_saved",
            "label": "Estimated interest saved",
            "variable": "interest_saved",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest_after",
            "label": "Total interest paid after one-time payment",
            "variable": "total_interest_after",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
