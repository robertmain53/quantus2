    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate — the yearly rate charged for borrowing, expressed as a percentage; used here to derive periodic interest rates."
      },
      {
        "term": "True bi‑weekly",
        "definition": "A schedule with a payment every 14 days (26 payments per year), usually resulting in extra principal paid each year compared to monthly."
      },
      {
        "term": "Converted bi‑weekly",
        "definition": "A schedule created by halving the monthly payment, resulting in 24 payments per year. It does not inherently add extra annual principal compared to monthly payments."
      },
      {
        "term": "Amortization",
        "definition": "The process of paying down principal and interest over time according to a schedule."
      },
      {
        "term": "Financed fees",
        "definition": "Fees (tax, registration, add‑ons) rolled into the loan principal; they increase the principal balance on which interest accrues."
      }
    ]
  },
