{
  "version": "1.0.0",
  "metadata": {
    "title": "Auto Loan Amortization — Bi‑Weekly & Monthly Scenarios",
    "description": "Accurate amortization estimates for auto loans with standard monthly, converted bi‑weekly, and true bi‑weekly schedules. Includes fees, down payment, and trade‑in, with clear assumptions and standards-based accuracy notes."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "true_biweekly",
    "methods": {
      "standard_monthly": {
        "label": "Standard Monthly Amortization",
        "description": "Classic monthly amortization using a fixed monthly payment over the term.",
        "variables": {
          "loan_balance": {
            "expression": "loan_amount - down_payment - trade_in + fees",
            "dependencies": [
              "loan_amount",
              "down_payment",
              "trade_in",
              "fees"
            ],
            "label": "Principal financed (including fees)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "monthly_rate": {
            "expression": "annual_interest_rate/100/12",
            "dependencies": [
              "annual_interest_rate"
            ],
            "label": "Monthly interest rate",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "n_payments": {
            "expression": "term_years * 12",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of monthly payments",
            "unit": "integer",
            "format": "integer",
            "display": false
          },
          "monthly_payment": {
            "expression": "(loan_balance * monthly_rate) / (1 - (1 + monthly_rate) ^ (-n_payments))",
            "dependencies": [
              "loan_balance",
              "monthly_rate",
              "n_payments"
            ],
            "label": "Monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "monthly_payment * n_payments",
            "dependencies": [
              "monthly_payment",
              "n_payments"
            ],
            "label": "Total paid (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_balance",
            "dependencies": [
              "total_paid",
              "loan_balance"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_payment",
            "label": "Monthly payment",
            "variable": "monthly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_payments",
            "label": "Number of payments",
            "variable": "n_payments",
            "format": "integer"
          },
          {
            "id": "total_paid",
            "label": "Total paid",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "converted_biweekly": {
        "label": "Converted Bi‑Weekly (Half of Monthly)",
        "description": "Bi‑weekly payments derived by splitting the monthly payment in half (24 payments per year). No extra payments beyond halved monthly payments.",
        "variables": {
          "loan_balance": {
            "expression": "loan_amount - down_payment - trade_in + fees",
            "dependencies": [
              "loan_amount",
              "down_payment",
              "trade_in",
              "fees"
            ],
            "label": "Principal financed (including fees)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "monthly_rate": {
            "expression": "annual_interest_rate/100/12",
            "dependencies": [
              "annual_interest_rate"
            ],
            "label": "Monthly interest rate",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "n_monthly": {
            "expression": "term_years * 12",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of monthly payments",
            "unit": "integer",
            "format": "integer",
            "display": false
          },
          "monthly_payment": {
            "expression": "(loan_balance * monthly_rate) / (1 - (1 + monthly_rate) ^ (-n_monthly))",
            "dependencies": [
              "loan_balance",
              "monthly_rate",
              "n_monthly"
            ],
            "label": "Monthly payment (base)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "biweekly_payment_24": {
            "expression": "monthly_payment / 2",
            "dependencies": [
              "monthly_payment"
            ],
            "label": "Bi‑weekly payment (24 per year)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_payments_24": {
            "expression": "term_years * 24",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of bi‑weekly payments (24/yr)",
            "unit": "integer",
            "format": "integer",
            "display": false
          },
          "total_paid_24": {
            "expression": "biweekly_payment_24 * n_payments_24",
            "dependencies": [
              "biweekly_payment_24",
              "n_payments_24"
            ],
            "label": "Total paid (24 payments/yr)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest_24": {
            "expression": "total_paid_24 - loan_balance",
            "dependencies": [
              "total_paid_24",
              "loan_balance"
            ],
            "label": "Total interest (24 payments/yr)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "biweekly_payment_24",
            "label": "Bi‑weekly payment (24/yr)",
            "variable": "biweekly_payment_24",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_payments_24",
            "label": "Number of payments",
            "variable": "n_payments_24",
            "format": "integer"
          },
          {
            "id": "total_paid_24",
            "label": "Total paid",
            "variable": "total_paid_24",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest_24",
            "label": "Total interest",
            "variable": "total_interest_24",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "true_biweekly": {
        "label": "True Bi‑Weekly (Every 2 Weeks — 26 Payments/Year)",
        "description": "Payments every 14 days (26 payments per year). Because there are 26 payments, this schedule typically reduces principal faster and shortens term versus monthly or 24‑payment bi‑weekly.",
        "variables": {
          "loan_balance": {
            "expression": "loan_amount - down_payment - trade_in + fees",
            "dependencies": [
              "loan_amount",
              "down_payment",
              "trade_in",
              "fees"
            ],
            "label": "Principal financed (including fees)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "period_rate": {
            "expression": "annual_interest_rate/100/26",
            "dependencies": [
              "annual_interest_rate"
            ],
            "label": "Bi‑weekly interest rate (per period)",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "n_payments": {
            "expression": "term_years * 26",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of bi‑weekly payments",
            "unit": "integer",
            "format": "integer",
            "display": false
          },
          "biweekly_payment": {
            "expression": "(loan_balance * period_rate) / (1 - (1 + period_rate) ^ (-n_payments))",
            "dependencies": [
              "loan_balance",
              "period_rate",
              "n_payments"
            ],
            "label": "Bi‑weekly payment (26 per year)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "biweekly_payment * n_payments",
            "dependencies": [
              "biweekly_payment",
              "n_payments"
            ],
            "label": "Total paid (26 payments/yr)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_balance",
            "dependencies": [
              "total_paid",
              "loan_balance"
            ],
            "label": "Total interest (26 payments/yr)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "term_equivalent_months": {
            "expression": "n_payments / (26/12)",
            "dependencies": [
              "n_payments"
            ],
            "label": "Approximate equivalent term in months",
            "unit": "months",
            "format": "decimal",
            "display": false
          }
        },
        "outputs": [
          {
            "id": "biweekly_payment",
            "label": "Bi‑weekly payment (26/yr)",
            "variable": "biweekly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_payments",
            "label": "Number of payments",
            "variable": "n_payments",
            "format": "integer"
          },
          {
            "id": "total_paid",
            "label": "Total paid",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
