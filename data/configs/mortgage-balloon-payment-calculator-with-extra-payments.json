    "glossary": [
      {
        "term": "Amortization",
        "definition": "The schedule of principal and interest payments that fully repays a loan over a stated period."
      },
      {
        "term": "Balloon payment",
        "definition": "A single large payment due at the end of a loan term when the regular payments did not fully amortize the principal."
      },
      {
        "term": "Extra recurring payment",
        "definition": "A regularly scheduled additional payment above the required payment intended to reduce principal and interest."
      },
      {
        "term": "One-time extra payment",
        "definition": "A single principal payment applied at a specific period to reduce the outstanding balance."
      },
      {
        "term": "Biweekly equivalent",
        "definition": "An approximate conversion between biweekly and monthly payment amounts and rates used for modeling."
      }
    ]
  },
