{
  "version": "1.0.0",
  "metadata": {
    "title": "Mortgage Balloon Payment Calculator with Extra Payments",
    "description": "Estimate the balloon payment and impact of recurring or one-time extra payments for common balloon mortgage structures. Supports amortizing schedules, interest-only balloons, and biweekly-style schedules with recurring extras. Includes accuracy caveats and references to measurement and calculation standards."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "standard_balloon",
    "methods": {
      "standard_balloon": {
        "label": "Standard amortizing schedule with balloon",
        "description": "Calculates the scheduled payment using the chosen amortization period, then projects the remaining principal at the balloon date while applying recurring and one-time extra payments converted to monthly equivalents.",
        "variables": {
          "monthlyRate": {
            "expression": "annual_interest_rate / 12 / 100",
            "dependencies": [
              "annual_interest_rate"
            ],
            "label": "Monthly interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "nAmort": {
            "expression": "amortization_years * 12",
            "dependencies": [
              "amortization_years"
            ],
            "label": "Amortization months",
            "format": "integer",
            "display": false
          },
          "regularPayment": {
            "expression": "principal * monthlyRate / (1 - (1 + monthlyRate)^(-nAmort))",
            "dependencies": [
              "principal",
              "monthlyRate",
              "nAmort"
            ],
            "label": "Scheduled monthly payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "nBalloon": {
            "expression": "balloon_months",
            "dependencies": [
              "balloon_months"
            ],
            "label": "Months until balloon",
            "format": "integer",
            "display": true
          },
          "extraRecurringMonthly": {
            "expression": "extra_recurring_frequency == 'monthly' ? extra_recurring_amount : (extra_recurring_frequency == 'biweekly' ? extra_recurring_amount * 26 / 12 : extra_recurring_amount / 12)",
            "dependencies": [
              "extra_recurring_amount",
              "extra_recurring_frequency"
            ],
            "label": "Extra recurring payment converted to monthly equivalent",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "adjustedPayment": {
            "expression": "regularPayment + extraRecurringMonthly",
            "dependencies": [
              "regularPayment",
              "extraRecurringMonthly"
            ],
            "label": "Adjusted monthly payment (including recurring extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "approxBalanceFromStandardFormula": {
            "expression": "principal*(1+monthlyRate)^nBalloon - adjustedPayment * (((1+monthlyRate)^nBalloon - 1) / monthlyRate)",
            "dependencies": [
              "principal",
              "monthlyRate",
              "nBalloon",
              "adjustedPayment"
            ],
            "label": "Approximate remaining balance using closed-form formula",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "balanceAtBalloon": {
            "expression": "extra_one_time_amount > 0 ? approxBalanceFromStandardFormula - extra_one_time_amount * (1+monthlyRate)^(nBalloon - extra_one_time_month) : approxBalanceFromStandardFormula",
            "dependencies": [
              "approxBalanceFromStandardFormula",
              "extra_one_time_amount",
              "extra_one_time_month",
              "monthlyRate",
              "nBalloon"
            ],
            "label": "Estimated balance at balloon date (approximate)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "balloonPayment": {
            "expression": "balanceAtBalloon",
            "dependencies": [
              "balanceAtBalloon"
            ],
            "label": "Balloon payment due at end of balloon period",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "totalPaymentsApplied": {
            "expression": "adjustedPayment * nBalloon + extra_one_time_amount",
            "dependencies": [
              "adjustedPayment",
              "nBalloon",
              "extra_one_time_amount"
            ],
            "label": "Total payments applied before balloon (scheduled + recurring + one-time)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "principalReduction": {
            "expression": "principal - balanceAtBalloon",
            "dependencies": [
              "principal",
              "balanceAtBalloon"
            ],
            "label": "Principal reduction before balloon",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "totalInterestPaid": {
            "expression": "totalPaymentsApplied - principalReduction",
            "dependencies": [
              "totalPaymentsApplied",
              "principalReduction"
            ],
            "label": "Approximate interest paid before balloon",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "balloon_payment",
            "label": "Balloon payment due",
            "variable": "balloonPayment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "adjusted_monthly_payment",
            "label": "Adjusted monthly payment (incl. recurring extras)",
            "variable": "adjustedPayment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "balance_at_balloon",
            "label": "Estimated balance at balloon",
            "variable": "balanceAtBalloon",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest_paid",
            "label": "Approximate total interest paid before balloon",
            "variable": "totalInterestPaid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "months_until_balloon",
            "label": "Months until balloon",
            "variable": "nBalloon",
            "format": "integer"
          }
        ]
      },
      "interest_only_balloon": {
        "label": "Interest-only payments until balloon",
        "description": "Calculates interest-only periodic payments and adjusts principal for recurring and one-time extra payments applied to principal when provided. Returns approximate remaining principal at balloon date.",
        "variables": {
          "monthlyRate": {
            "expression": "annual_interest_rate / 12 / 100",
            "dependencies": [
              "annual_interest_rate"
            ],
            "label": "Monthly interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "nBalloon": {
            "expression": "balloon_months",
            "dependencies": [
              "balloon_months"
            ],
            "label": "Months until balloon",
            "format": "integer",
            "display": false
          },
          "interestOnlyPayment": {
            "expression": "principal * monthlyRate",
            "dependencies": [
              "principal",
              "monthlyRate"
            ],
            "label": "Interest-only monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "extraRecurringMonthly": {
            "expression": "extra_recurring_frequency == 'monthly' ? extra_recurring_amount : (extra_recurring_frequency == 'biweekly' ? extra_recurring_amount * 26 / 12 : extra_recurring_amount / 12)",
            "dependencies": [
              "extra_recurring_amount",
              "extra_recurring_frequency"
            ],
            "label": "Extra recurring payment (monthly equivalent applied to principal)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "approxPrincipalReductionFromExtras": {
            "expression": "extraRecurringMonthly * nBalloon + extra_one_time_amount",
            "dependencies": [
              "extraRecurringMonthly",
              "nBalloon",
              "extra_one_time_amount"
            ],
            "label": "Approximate principal reduction from extras before balloon",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "balanceAtBalloon": {
            "expression": "principal - approxPrincipalReductionFromExtras",
            "dependencies": [
              "principal",
              "approxPrincipalReductionFromExtras"
            ],
            "label": "Estimated balance at balloon (approximate)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "balloonPayment": {
            "expression": "balanceAtBalloon",
            "dependencies": [
              "balanceAtBalloon"
            ],
            "label": "Balloon payment due",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "balloon_payment_interest_only",
            "label": "Balloon payment (interest-only scenario)",
            "variable": "balloonPayment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "interest_only_monthly",
            "label": "Interest-only monthly payment",
            "variable": "interestOnlyPayment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "balance_at_balloon_interest_only",
            "label": "Estimated balance at balloon (interest-only)",
            "variable": "balanceAtBalloon",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "biweekly_with_extra": {
        "label": "Biweekly-style schedule (approximate) with extras",
        "description": "Models a biweekly payment rhythm by converting to equivalent periodic rate and counts. Uses approximate conversion to project remaining principal at the balloon date while applying biweekly and other extra payments.",
        "variables": {
          "biweeklyRate": {
            "expression": "annual_interest_rate / 26 / 100",
            "dependencies": [
              "annual_interest_rate"
            ],
            "label": "Biweekly interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "nBiweeklyBalloon": {
            "expression": "floor(balloon_months * 26 / 12)",
            "dependencies": [
              "balloon_months"
            ],
            "label": "Biweekly periods until balloon (approx.)",
            "format": "integer",
            "display": false
          },
          "nBiweeklyAmort": {
            "expression": "amortization_years * 26",
            "dependencies": [
              "amortization_years"
            ],
            "label": "Total biweekly amortization periods (approx.)",
            "format": "integer",
            "display": false
          },
          "regularBiweeklyPayment": {
            "expression": "principal * biweeklyRate / (1 - (1 + biweeklyRate)^(-nBiweeklyAmort))",
            "dependencies": [
              "principal",
              "biweeklyRate",
              "nBiweeklyAmort"
            ],
            "label": "Scheduled biweekly payment (no extras, approx.)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "extraRecurringBiweeklyEquivalent": {
            "expression": "extra_recurring_frequency == 'biweekly' ? extra_recurring_amount : (extra_recurring_frequency == 'monthly' ? extra_recurring_amount * 12 / 26 : extra_recurring_amount / 26)",
            "dependencies": [
              "extra_recurring_amount",
              "extra_recurring_frequency"
            ],
            "label": "Extra recurring payment converted to biweekly equivalent",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "adjustedBiweeklyPayment": {
            "expression": "regularBiweeklyPayment + extraRecurringBiweeklyEquivalent",
            "dependencies": [
              "regularBiweeklyPayment",
              "extraRecurringBiweeklyEquivalent"
            ],
            "label": "Adjusted biweekly payment including extras",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "approxBalanceAtBalloon": {
            "expression": "principal*(1+biweeklyRate)^nBiweeklyBalloon - adjustedBiweeklyPayment * (((1+biweeklyRate)^nBiweeklyBalloon - 1)/biweeklyRate) - extra_one_time_amount * (1+biweeklyRate)^(nBiweeklyBalloon - floor(extra_one_time_month * 26 / 12))",
            "dependencies": [
              "principal",
              "biweeklyRate",
              "nBiweeklyBalloon",
              "adjustedBiweeklyPayment",
              "extra_one_time_amount",
              "extra_one_time_month"
            ],
            "label": "Estimated balance at balloon in biweekly model (approx.)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "balloonPayment": {
            "expression": "approxBalanceAtBalloon",
            "dependencies": [
              "approxBalanceAtBalloon"
            ],
            "label": "Balloon payment due (biweekly model)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "balloon_payment_biweekly",
            "label": "Balloon payment (biweekly estimate)",
            "variable": "balloonPayment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "adjusted_biweekly_payment",
            "label": "Adjusted biweekly payment (incl. extras)",
            "variable": "adjustedBiweeklyPayment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "balance_at_balloon_biweekly",
            "label": "Estimated balance at balloon (biweekly)",
            "variable": "approxBalanceAtBalloon",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
