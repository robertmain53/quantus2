{
  "version": "1.0.0",
  "metadata": {
    "title": "Home Loan Interest Calculator — Bi‑Weekly & Monthly Amortization",
    "description": "Calculate scheduled payments, payoff time, total interest, and savings from switching to bi‑weekly or accelerated bi‑weekly payment schedules. Designed for consumer clarity, with explicit assumptions and accuracy caveats."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_26",
    "methods": {
      "monthly_standard": {
        "label": "Standard Monthly Amortization",
        "description": "Conventional fixed-rate mortgage paid monthly (12 payments per year). Extra per-period payments, if given, are treated as an addition to each scheduled payment and reduce payoff time.",
        "variables": {
          "payments_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "periods/year",
            "format": "integer",
            "display": false
          },
          "N": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Scheduled number of payments",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "r": {
            "expression": "annual_rate / 100 / payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": false
          },
          "scheduled_payment": {
            "expression": "principal * r / (1 - (1 + r) ** (-N))",
            "dependencies": [
              "principal",
              "r",
              "N"
            ],
            "label": "Scheduled payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "scheduled_payment + extra_payment_per_period",
            "dependencies": [
              "scheduled_payment",
              "extra_payment_per_period"
            ],
            "label": "Per‑period payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_periods": {
            "expression": "extra_payment_per_period == 0 ? N : -ln(1 - r * principal / payment_with_extra) / ln(1 + r)",
            "dependencies": [
              "extra_payment_per_period",
              "N",
              "r",
              "principal",
              "payment_with_extra"
            ],
            "label": "Estimated number of payments to payoff",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "total_years": {
            "expression": "total_periods / payments_per_year",
            "dependencies": [
              "total_periods",
              "payments_per_year"
            ],
            "label": "Estimated years to payoff",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "payment_with_extra * total_periods",
            "dependencies": [
              "payment_with_extra",
              "total_periods"
            ],
            "label": "Total amount paid (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled payment (no extras)",
            "variable": "scheduled_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Payment including extra per period",
            "variable": "payment_with_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_years",
            "label": "Estimated years to payoff",
            "variable": "total_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest",
            "label": "Estimated total interest paid",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "biweekly_26": {
        "label": "Bi‑Weekly (26 payments/year)",
        "description": "Calculate as 26 equal payments per year. This method treats each bi‑weekly payment as a full periodic payment with periodic rate = APR/26. Enter extra contributions as an amount added to each bi‑weekly payment.",
        "variables": {
          "payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "periods/year",
            "format": "integer",
            "display": false
          },
          "N": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Scheduled number of payments",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "r": {
            "expression": "annual_rate / 100 / payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "decimal",
            "format": "decimal",
            "display": false
          },
          "scheduled_payment": {
            "expression": "principal * r / (1 - (1 + r) ** (-N))",
            "dependencies": [
              "principal",
              "r",
              "N"
            ],
            "label": "Bi‑weekly scheduled payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "scheduled_payment + extra_payment_per_period",
            "dependencies": [
              "scheduled_payment",
              "extra_payment_per_period"
            ],
            "label": "Bi‑weekly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_periods": {
            "expression": "extra_payment_per_period == 0 ? N : -ln(1 - r * principal / payment_with_extra) / ln(1 + r)",
            "dependencies": [
              "extra_payment_per_period",
              "N",
              "r",
              "principal",
              "payment_with_extra"
            ],
            "label": "Estimated number of bi‑weekly payments to payoff",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "total_years": {
            "expression": "total_periods / payments_per_year",
            "dependencies": [
              "total_periods",
              "payments_per_year"
            ],
            "label": "Estimated years to payoff",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "payment_with_extra * total_periods",
            "dependencies": [
              "payment_with_extra",
              "total_periods"
            ],
            "label": "Total amount paid (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Bi‑weekly scheduled payment (no extras)",
            "variable": "scheduled_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Bi‑weekly payment including extra",
            "variable": "payment_with_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_years",
            "label": "Estimated years to payoff",
            "variable": "total_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest",
            "label": "Estimated total interest paid",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "accelerated_biweekly": {
        "label": "Accelerated Bi‑Weekly (half‑monthly payment)",
        "description": "Accelerated bi‑weekly means you pay half of your standard monthly payment every two weeks. Because there are 26 bi‑weekly periods, this results in an extra monthly payment each year and typically shortens the loan significantly.",
        "variables": {
          "payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "periods/year",
            "format": "integer",
            "display": false
          },
          "monthly_payments_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Monthly periods per year",
            "unit": "periods/year",
            "format": "integer",
            "display": false
          },
          "N_monthly": {
            "expression": "term_years * monthly_payments_per_year",
            "dependencies": [
              "term_years",
              "monthly_payments_per_year"
            ],
            "label": "Scheduled number of monthly payments",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "r_monthly": {
            "expression": "annual_rate / 100 / monthly_payments_per_year",
            "dependencies": [
              "annual_rate",
              "monthly_payments_per_year"
            ],
            "label": "Monthly periodic rate",
            "unit": "decimal",
            "format": "decimal",
            "display": false
          },
          "monthly_payment": {
            "expression": "principal * r_monthly / (1 - (1 + r_monthly) ** (-N_monthly))",
            "dependencies": [
              "principal",
              "r_monthly",
              "N_monthly"
            ],
            "label": "Standard monthly payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "accelerated_biweekly_payment": {
            "expression": "monthly_payment / 2 + extra_payment_per_period",
            "dependencies": [
              "monthly_payment",
              "extra_payment_per_period"
            ],
            "label": "Bi‑weekly payment when paying half the monthly amount (including extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "r_biweekly_equiv": {
            "expression": "annual_rate / 100 / payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Bi‑weekly periodic rate (for payoff estimate)",
            "unit": "decimal",
            "format": "decimal",
            "display": false
          },
          "total_periods": {
            "expression": "accelerated_biweekly_payment == 0 ? term_years * payments_per_year : -ln(1 - r_biweekly_equiv * principal / accelerated_biweekly_payment) / ln(1 + r_biweekly_equiv)",
            "dependencies": [
              "accelerated_biweekly_payment",
              "term_years",
              "payments_per_year",
              "r_biweekly_equiv",
              "principal"
            ],
            "label": "Estimated number of bi‑weekly payments to payoff",
            "unit": "periods",
            "format": "decimal",
            "display": true
          },
          "total_years": {
            "expression": "total_periods / payments_per_year",
            "dependencies": [
              "total_periods",
              "payments_per_year"
            ],
            "label": "Estimated years to payoff",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "accelerated_biweekly_payment * total_periods",
            "dependencies": [
              "accelerated_biweekly_payment",
              "total_periods"
            ],
            "label": "Total amount paid (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_payment",
            "label": "Equivalent standard monthly payment",
            "variable": "monthly_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "accelerated_biweekly_payment",
            "label": "Bi‑weekly payment (half monthly + extras)",
            "variable": "accelerated_biweekly_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_years",
            "label": "Estimated years to payoff",
            "variable": "total_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest",
            "label": "Estimated total interest paid",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
  "form": {
    "fields": [
