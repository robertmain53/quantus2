    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate — the nominal annual interest rate for the loan, expressed as a percentage."
      },
      {
        "term": "Periodic rate",
        "definition": "The interest rate applied each payment period: APR divided by the number of payment periods per year (for example, APR/12 for monthly)."
      },
      {
        "term": "Scheduled payment",
        "definition": "The regular payment calculated by the amortization formula that, if paid each period, fully repays the loan over the scheduled term."
      },
      {
        "term": "Accelerated bi‑weekly",
        "definition": "A payment schedule where you pay half of the monthly payment every two weeks (26 half‑payments per year), effectively making an extra monthly payment annually."
      }
    ]
  },
