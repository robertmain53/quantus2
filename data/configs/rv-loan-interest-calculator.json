{
  "version": "1.0.0",
  "metadata": {
    "title": "RV Loan Interest Calculator — Monthly, Bi‑weekly & Balloon Options",
    "description": "Estimate payments, total interest, and payoff timing for RV loans. Supports standard monthly amortization, bi‑weekly schedules (standard and accelerated) and balloon payments. Includes optional per‑payment extra contributions."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "monthly_amortization",
    "methods": {
      "monthly_amortization": {
        "label": "Monthly amortization (standard)",
        "description": "Standard fixed-rate monthly amortization. Extra per-payment contributions are applied to each payment. Balloon balance (if any) is paid at the end of term.",
        "variables": {
          "periodic_rate": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Periodic interest rate (monthly)",
            "unit": "",
            "format": "decimal",
            "display": false
          },
          "num_payments": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of payments (months)",
            "unit": "months",
            "format": "integer",
            "display": false
          },
          "base_payment": {
            "expression": "(principal*periodic_rate)/(1 - pow(1+periodic_rate,-num_payments))",
            "dependencies": [
              "principal",
              "periodic_rate",
              "num_payments"
            ],
            "label": "Calculated monthly payment (before extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "(base_payment + extra_payment) * num_payments + balloon_balance",
            "dependencies": [
              "base_payment",
              "extra_payment",
              "num_payments",
              "balloon_balance"
            ],
            "label": "Estimated total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Estimated total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_years": {
            "expression": "num_payments/12",
            "dependencies": [
              "num_payments"
            ],
            "label": "Scheduled payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment",
            "label": "Monthly payment (incl. extras)",
            "variable": "base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_payments",
            "label": "Total scheduled payments",
            "variable": "num_payments",
            "format": "integer"
          },
          {
            "id": "estimated_total_interest",
            "label": "Estimated total interest",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_total_paid",
            "label": "Estimated total paid",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_payoff_years",
            "label": "Scheduled payoff (years)",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      },
      "biweekly_amortization": {
        "label": "Bi‑weekly amortization (standard)",
        "description": "Fixed-rate bi‑weekly schedule with 26 payments per year. Extra per-payment contributions are applied to each bi‑weekly payment. Balloon balance, if provided, is due at end of term.",
        "variables": {
          "periodic_rate": {
            "expression": "annual_rate/100/26",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Periodic interest rate (bi‑weekly)",
            "unit": "",
            "format": "decimal",
            "display": false
          },
          "num_payments": {
            "expression": "term_years*26",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of payments (bi‑weekly)",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "base_payment": {
            "expression": "(principal*periodic_rate)/(1 - pow(1+periodic_rate,-num_payments))",
            "dependencies": [
              "principal",
              "periodic_rate",
              "num_payments"
            ],
            "label": "Calculated bi‑weekly payment (before extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "(base_payment + extra_payment) * num_payments + balloon_balance",
            "dependencies": [
              "base_payment",
              "extra_payment",
              "num_payments",
              "balloon_balance"
            ],
            "label": "Estimated total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Estimated total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_years": {
            "expression": "num_payments/26",
            "dependencies": [
              "num_payments"
            ],
            "label": "Scheduled payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment",
            "label": "Bi‑weekly payment (incl. extras)",
            "variable": "base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_payments",
            "label": "Total scheduled payments",
            "variable": "num_payments",
            "format": "integer"
          },
          {
            "id": "estimated_total_interest",
            "label": "Estimated total interest",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_total_paid",
            "label": "Estimated total paid",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_payoff_years",
            "label": "Scheduled payoff (years)",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      },
      "biweekly_accelerated": {
        "label": "Accelerated bi‑weekly (monthly payment / 2 model)",
        "description": "Accelerated bi‑weekly method derives bi‑weekly payments by splitting the standard monthly payment in half (resulting in 26 half‑monthly payments per year). This typically shortens the effective term compared to monthly payments.",
        "variables": {
          "monthly_rate": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Monthly rate used to derive monthly payment",
            "unit": "",
            "format": "decimal",
            "display": false
          },
          "monthly_num": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Monthly number of payments",
            "unit": "months",
            "format": "integer",
            "display": false
          },
          "monthly_payment": {
            "expression": "(principal*monthly_rate)/(1 - pow(1+monthly_rate,-monthly_num))",
            "dependencies": [
              "principal",
              "monthly_rate",
              "monthly_num"
            ],
            "label": "Equivalent monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "accelerated_payment": {
            "expression": "monthly_payment/2",
            "dependencies": [
              "monthly_payment"
            ],
            "label": "Accelerated bi‑weekly payment (half of monthly)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "num_payments": {
            "expression": "term_years*26",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of bi‑weekly payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "total_paid": {
            "expression": "(accelerated_payment + extra_payment) * num_payments + balloon_balance",
            "dependencies": [
              "accelerated_payment",
              "extra_payment",
              "num_payments",
              "balloon_balance"
            ],
            "label": "Estimated total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Estimated total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_years": {
            "expression": "num_payments/26",
            "dependencies": [
              "num_payments"
            ],
            "label": "Estimated payoff (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment",
            "label": "Bi‑weekly accelerated payment (incl. extras)",
            "variable": "accelerated_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_payments",
            "label": "Total scheduled payments (26/year)",
            "variable": "num_payments",
            "format": "integer"
          },
          {
            "id": "estimated_total_interest",
            "label": "Estimated total interest",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_total_paid",
            "label": "Estimated total paid",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_payoff_years",
            "label": "Estimated payoff (years)",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      },
      "balloon_payment": {
        "label": "Monthly amortization with balloon balance",
        "description": "Monthly payments calculated so that a specified balloon balance remains due at term end. Balloon is included in total paid.",
        "variables": {
          "periodic_rate": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Periodic interest rate (monthly)",
            "unit": "",
            "format": "decimal",
            "display": false
          },
          "num_payments": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of payments (months)",
            "unit": "months",
            "format": "integer",
            "display": false
          },
          "discounted_balloon": {
            "expression": "balloon_balance / pow(1+periodic_rate,num_payments)",
            "dependencies": [
              "balloon_balance",
              "periodic_rate",
              "num_payments"
            ],
            "label": "Present value of balloon",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "base_payment": {
            "expression": "((principal - discounted_balloon) * periodic_rate) / (1 - pow(1+periodic_rate,-num_payments))",
            "dependencies": [
              "principal",
              "discounted_balloon",
              "periodic_rate",
              "num_payments"
            ],
            "label": "Monthly payment (amortizing to balloon)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "(base_payment + extra_payment) * num_payments + balloon_balance",
            "dependencies": [
              "base_payment",
              "extra_payment",
              "num_payments",
              "balloon_balance"
            ],
            "label": "Estimated total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Estimated total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_years": {
            "expression": "num_payments/12",
            "dependencies": [
              "num_payments"
            ],
            "label": "Scheduled payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment",
            "label": "Monthly payment (incl. extras)",
            "variable": "base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "balloon_due",
            "label": "Balloon due at end of term",
            "variable": "balloon_balance",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_total_interest",
            "label": "Estimated total interest",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_total_paid",
            "label": "Estimated total paid",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_payoff_years",
            "label": "Scheduled payoff (years)",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      }
    }
