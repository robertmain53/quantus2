    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate; the nominal annual interest rate without adjustment for compounding frequency in this calculator."
      },
      {
        "term": "Amortization",
        "definition": "The process of paying down a loan over time via regular payments of principal and interest."
      },
      {
        "term": "Biweekly",
        "definition": "A payment cadence of once every two weeks (26 payments per year). This calculator models biweekly as 26 equal periods per year."
      },
      {
        "term": "One-time principal reduction",
        "definition": "A single extra payment applied directly to the loan principal, lowering the outstanding balance immediately."
      }
    ],
    "summary": [
      "Choose the method that matches how you will actually make extra payments: monthly extras, biweekly additions, or a single one-time payment.",
      "Results are estimates; verify with your loan servicer before changing payment arrangements. This tool adheres to standard numeric methods and cites standards organizations for transparency."
    ]
  },
