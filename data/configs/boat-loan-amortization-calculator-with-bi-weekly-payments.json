{
  "version": "1.0.0",
  "metadata": {
    "title": "Boat Loan Amortization — Bi‑Weekly & Alternative Frequencies",
    "description": "Interactive, standards‑informed amortization calculator for boat loans. Compare monthly, bi‑weekly (equivalent) and true bi‑weekly schedules, estimate payoff time with extra payments, and produce key outputs including per‑period payment, payoff duration, total paid and interest. Includes accuracy caveats and references to engineering and quality standards."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_true",
    "methods": {
      "monthly": {
        "label": "Standard monthly amortization",
        "description": "Conventional amortization with 12 payments per year. Use this to compare to bi‑weekly options or when the lender calculates interest monthly.",
        "variables": {
          "payments_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "per year",
            "format": "integer",
            "display": true
          },
          "period_rate": {
            "expression": "annual_rate/100 / payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": true
          },
          "n_periods": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of payments",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "base_payment": {
            "expression": "principal * period_rate / (1 - pow(1+period_rate, -n_periods))",
            "dependencies": [
              "principal",
              "period_rate",
              "n_periods"
            ],
            "label": "Scheduled payment (per period)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "effective_payment": {
            "expression": "base_payment + extra_payment",
            "dependencies": [
              "base_payment",
              "extra_payment"
            ],
            "label": "Payment including regular extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "periods_to_payoff": {
            "expression": "-log(1 - principal * period_rate / effective_payment) / log(1+period_rate)",
            "dependencies": [
              "principal",
              "period_rate",
              "effective_payment"
            ],
            "label": "Estimated periods to payoff (using effective payment)",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "years_to_payoff": {
            "expression": "periods_to_payoff / payments_per_year",
            "dependencies": [
              "periods_to_payoff",
              "payments_per_year"
            ],
            "label": "Estimated years to payoff",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "effective_payment * periods_to_payoff + extra_one_time",
            "dependencies": [
              "effective_payment",
              "periods_to_payoff",
              "extra_one_time"
            ],
            "label": "Estimated total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal - extra_one_time",
            "dependencies": [
              "total_paid",
              "principal",
              "extra_one_time"
            ],
            "label": "Estimated total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "base_payment",
            "label": "Scheduled payment",
            "variable": "base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "effective_payment",
            "label": "Payment with regular extra",
            "variable": "effective_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "years_to_payoff",
            "label": "Years to payoff (estimate)",
            "variable": "years_to_payoff",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest",
            "label": "Total interest (estimate)",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "biweekly_equivalent": {
        "label": "Bi‑weekly (monthly amortization, split payments)",
        "description": "Some lenders calculate amortization monthly but accept bi‑weekly payments by splitting the monthly payment in half. This method shows the simple 'half‑payment' approach which reduces principal faster than paying monthly but follows the lender's monthly interest calculation.",
        "variables": {
          "payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Deposits per year (bi‑weekly)",
            "unit": "per year",
            "format": "integer",
            "display": true
          },
          "period_rate_monthly": {
            "expression": "annual_rate/100 / 12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Monthly periodic rate",
            "unit": "%",
            "format": "decimal",
            "display": true
          },
          "n_months": {
            "expression": "term_years * 12",
            "dependencies": [
              "term_years"
            ],
            "label": "Total months",
            "unit": "months",
            "format": "integer",
            "display": true
          },
          "monthly_payment": {
            "expression": "principal * period_rate_monthly / (1 - pow(1+period_rate_monthly, -n_months))",
            "dependencies": [
              "principal",
              "period_rate_monthly",
              "n_months"
            ],
            "label": "Monthly scheduled payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "biweekly_payment": {
            "expression": "monthly_payment / 2 + extra_payment",
            "dependencies": [
              "monthly_payment",
              "extra_payment"
            ],
            "label": "Bi‑weekly payment (split monthly plus extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "approx_years_to_payoff": {
            "expression": "term_years - (extra_payment * payments_per_year) / principal",
            "dependencies": [
              "term_years",
              "extra_payment",
              "payments_per_year",
              "principal"
            ],
            "label": "Approximate years to payoff (heuristic)",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_interest_est": {
            "expression": "monthly_payment * n_months - principal - extra_one_time",
            "dependencies": [
              "monthly_payment",
              "n_months",
              "principal",
              "extra_one_time"
            ],
            "label": "Estimated interest (based on monthly schedule)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "biweekly_payment",
            "label": "Bi‑weekly payment (split monthly)",
            "variable": "biweekly_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "approx_years_to_payoff",
            "label": "Approximate years to payoff",
            "variable": "approx_years_to_payoff",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest_est",
            "label": "Estimated total interest (monthly basis)",
            "variable": "total_interest_est",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "biweekly_true": {
        "label": "True bi‑weekly amortization (26 periods/year)",
        "description": "Interest computed per bi‑weekly period (26 periods/year). This produces the accelerated payoff most commonly associated with true bi‑weekly schedules.",
        "variables": {
          "payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year (bi‑weekly)",
            "unit": "per year",
            "format": "integer",
            "display": true
          },
          "period_rate": {
            "expression": "annual_rate/100 / payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": true
          },
          "n_periods": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of payments",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "base_payment": {
            "expression": "principal * period_rate / (1 - pow(1+period_rate, -n_periods))",
            "dependencies": [
              "principal",
              "period_rate",
              "n_periods"
            ],
            "label": "Scheduled bi‑weekly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "effective_payment": {
            "expression": "base_payment + extra_payment",
            "dependencies": [
              "base_payment",
              "extra_payment"
            ],
            "label": "Bi‑weekly payment with regular extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "periods_to_payoff": {
            "expression": "-log(1 - principal * period_rate / effective_payment) / log(1+period_rate)",
            "dependencies": [
              "principal",
              "period_rate",
              "effective_payment"
            ],
            "label": "Estimated bi‑weekly periods to payoff",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "years_to_payoff": {
            "expression": "periods_to_payoff / payments_per_year",
            "dependencies": [
              "periods_to_payoff",
              "payments_per_year"
            ],
            "label": "Estimated years to payoff",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "effective_payment * periods_to_payoff + extra_one_time",
            "dependencies": [
              "effective_payment",
