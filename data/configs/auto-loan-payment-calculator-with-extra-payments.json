    "glossary": [
      {
        "term": "Principal",
        "definition": "The original amount borrowed or the remaining loan balance before interest."
      },
      {
        "term": "Amortization",
        "definition": "The process of paying off debt over time through regular payments of principal and interest."
      },
      {
        "term": "APR",
        "definition": "Annual Percentage Rate: the yearly cost of borrowing expressed as a percentage, used here as the nominal rate for amortization."
      },
      {
        "term": "Lump-sum prepayment",
        "definition": "A single additional payment applied to principal at a chosen payment date to reduce the remaining balance."
      }
    ]
