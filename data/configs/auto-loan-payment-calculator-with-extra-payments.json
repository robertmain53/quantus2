{
  "version": "1.0.0",
  "metadata": {
    "title": "Auto Loan Payment Calculator with Extra Payments (Advanced)",
    "description": "Interactive auto-loan payoff calculator supporting recurring extra payments, biweekly schedules, and one-time lump-sum prepayments. Estimates time to payoff, total interest paid, and interest saved compared with the original schedule."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "monthly_with_recurring_extra",
    "methods": {
      "monthly_with_recurring_extra": {
        "label": "Monthly payments with recurring extra payment",
        "description": "Standard amortizing monthly schedule plus a fixed extra payment applied each payment period.",
        "variables": {
          "r": {
            "expression": "annual_rate_percent / 100 / 12",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Monthly interest rate",
            "unit": "",
            "format": "decimal",
            "display": true
          },
          "n": {
            "expression": "term_years * 12",
            "dependencies": [
              "term_years"
            ],
            "label": "Total scheduled payments (months)",
            "unit": "months",
            "format": "integer",
            "display": true
          },
          "base_payment": {
            "expression": "principal * r * pow(1 + r, n) / (pow(1 + r, n) - 1)",
            "dependencies": [
              "principal",
              "r",
              "n"
            ],
            "label": "Scheduled monthly payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "base_payment + recurring_extra",
            "dependencies": [
              "base_payment",
              "recurring_extra"
            ],
            "label": "Monthly payment including recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_months": {
            "expression": "- ln(1 - principal * r / payment_with_extra) / ln(1 + r)",
            "dependencies": [
              "principal",
              "r",
              "payment_with_extra"
            ],
            "label": "Estimated months to payoff with extra payments",
            "unit": "months",
            "format": "decimal",
            "display": true
          },
          "orig_total_payments": {
            "expression": "base_payment * n",
            "dependencies": [
              "base_payment",
              "n"
            ],
            "label": "Total paid over original schedule",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_paid_with_extra": {
            "expression": "payment_with_extra * payoff_months",
            "dependencies": [
              "payment_with_extra",
              "payoff_months"
            ],
            "label": "Total paid with recurring extras",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest_with_extra": {
            "expression": "total_paid_with_extra - principal",
            "dependencies": [
              "total_paid_with_extra",
              "principal"
            ],
            "label": "Total interest paid with extras",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "(orig_total_payments - principal) - total_interest_with_extra",
            "dependencies": [
              "orig_total_payments",
              "principal",
              "total_interest_with_extra"
            ],
            "label": "Interest saved versus original schedule",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_payment",
            "label": "Scheduled monthly payment (no extras)",
            "variable": "base_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "monthly_payment_with_extra",
            "label": "Monthly payment including recurring extra",
            "variable": "payment_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payoff_time_months",
            "label": "Estimated payoff time (months)",
            "variable": "payoff_months",
            "unit": "months",
            "format": "decimal"
          },
          {
            "id": "total_interest_paid_with_extra",
            "label": "Total interest paid (with extras)",
            "variable": "total_interest_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "interest_saved_vs_original",
            "label": "Interest saved (vs original schedule)",
            "variable": "interest_saved",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "biweekly_schedule": {
        "label": "Biweekly payments (26/year) with extras",
        "description": "Equivalent amortization using 26 payments per year. Useful for simulating biweekly autopay or half-month payments.",
        "variables": {
          "r_bi": {
            "expression": "annual_rate_percent / 100 / 26",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Biweekly interest rate",
            "unit": "",
            "format": "decimal",
            "display": true
          },
          "n_bi": {
            "expression": "term_years * 26",
            "dependencies": [
              "term_years"
            ],
            "label": "Total scheduled payments (biweekly periods)",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "base_payment_bi": {
            "expression": "principal * r_bi * pow(1 + r_bi, n_bi) / (pow(1 + r_bi, n_bi) - 1)",
            "dependencies": [
              "principal",
              "r_bi",
              "n_bi"
            ],
            "label": "Scheduled biweekly payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_bi_with_extra": {
            "expression": "base_payment_bi + recurring_extra",
            "dependencies": [
              "base_payment_bi",
              "recurring_extra"
            ],
            "label": "Biweekly payment including recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_payments_bi": {
            "expression": "- ln(1 - principal * r_bi / payment_bi_with_extra) / ln(1 + r_bi)",
            "dependencies": [
              "principal",
              "r_bi",
              "payment_bi_with_extra"
            ],
            "label": "Estimated number of biweekly payments to payoff",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "total_paid_bi_with_extra": {
            "expression": "payment_bi_with_extra * payoff_payments_bi",
            "dependencies": [
              "payment_bi_with_extra",
              "payoff_payments_bi"
            ],
            "label": "Total paid (biweekly schedule with extras)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_interest_bi_with_extra": {
            "expression": "total_paid_bi_with_extra - principal",
            "dependencies": [
              "total_paid_bi_with_extra",
              "principal"
            ],
            "label": "Total interest paid (biweekly with extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "biweekly_payment",
            "label": "Scheduled biweekly payment (no extras)",
            "variable": "base_payment_bi",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "biweekly_payment_with_extra",
            "label": "Biweekly payment including extra",
            "variable": "payment_bi_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "biweekly_payments_to_payoff",
            "label": "Estimated number of biweekly payments to payoff",
            "variable": "payoff_payments_bi",
            "unit": "payments",
            "format": "decimal"
          },
          {
            "id": "total_interest_bi",
            "label": "Total interest paid (biweekly with extras)",
            "variable": "total_interest_bi_with_extra",
            "unit": "USD",
            "format": "currency"
          }
        ]
      },
      "one_time_lump_sum": {
        "label": "One-time lump-sum prepayment applied at a chosen payment",
        "description": "Apply a single lump-sum payment at a specified payment number, then continue regular payments to estimate remaining term and interest.",
        "variables": {
          "r": {
            "expression": "annual_rate_percent / 100 / 12",
            "dependencies": [
              "annual_rate_percent"
            ],
            "label": "Monthly interest rate",
            "unit": "",
            "format": "decimal",
            "display": true
          },
          "n": {
            "expression": "term_years * 12",
            "dependencies": [
              "term_years"
            ],
            "label": "Total scheduled payments (months)",
            "unit": "months",
            "format": "integer",
            "display": true
          },
          "base_payment": {
            "expression": "principal * r * pow(1 + r, n) / (pow(1 + r, n) - 1)",
            "dependencies": [
              "principal",
              "r",
              "n"
            ],
            "label": "Scheduled monthly payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "m": {
            "expression": "one_time_extra_payment_number",
            "dependencies": [
              "one_time_extra_payment_number"
            ],
            "label": "Payment number when lump sum is applied",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "balance_after_m": {
            "expression": "principal * pow(1 + r, m) - base_payment * (pow(1 + r, m) - 1) / r",
            "dependencies": [
              "principal",
              "r",
              "m",
              "base_payment"
            ],
            "label": "Remaining balance immediately before lump-sum payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "new_principal_after_lump": {
            "expression": "balance_after_m - one_time_extra_amount",
            "dependencies": [
              "balance_after_m",
              "one_time_extra_amount"
            ],
            "label": "Principal after lump-sum prepayment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_months_after": {
            "expression": "- ln(1 - new_principal_after_lump * r / base_payment) / ln(1 + r)",
            "dependencies": [
              "new_principal_after_lump",
              "r",
              "base_payment"
            ],
            "label": "Estimated months to payoff after lump-sum",
            "unit": "months",
            "format": "decimal",
            "display": true
          },
          "total_payments_with_lump": {
            "expression": "m + payoff_months_after",
            "dependencies": [
              "m",
              "payoff_months_after"
            ],
            "label": "Estimated total payments (including months before lump and after)",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "total_interest_with_lump": {
            "expression": "base_payment * total_payments_with_lump - principal - one_time_extra_amount",
            "dependencies": [
              "base_payment",
              "total_payments_with_lump",
              "principal",
              "one_time_extra_amount"
            ],
            "label": "Estimated total interest paid with lump-sum",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "remaining_balance_before_lump",
            "label": "Estimated remaining balance just before lump-sum",
            "variable": "balance_after_m",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "new_principal",
            "label": "Principal after applying lump-sum",
            "variable": "new_principal_after_lump",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "remaining_months_after_lump",
            "label": "Estimated remaining months after lump-sum",
            "variable": "payoff_months_after",
            "unit": "months",
            "format": "decimal"
          },
          {
            "id": "total_interest_with_lump_output",
            "label": "Estimated total interest paid (with lump-sum)",
            "variable": "total_interest_with_lump",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
