    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate; the annual rate charged for borrowing expressed as a percentage. This tool expects APR as a nominal annual rate."
      },
      {
        "term": "Amortization",
        "definition": "The process of paying off principal and interest over time with scheduled payments."
      },
      {
        "term": "Periodic (effective) rate",
        "definition": "Interest rate applicable to a single payment period, derived from APR and compounding frequency."
      },
      {
        "term": "True bi‑weekly",
        "definition": "A payment schedule that makes 26 equal payments per year (every two weeks)."
      },
      {
        "term": "Half‑month bi‑weekly",
        "definition": "A method where the monthly payment is split into two equal amounts and paid every two weeks, resulting in 26 payments per year in many years."
      }
    ]
