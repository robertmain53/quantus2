  "version": "1.0.0",
  "metadata": {
    "title": "Business Loan Amortization — Bi‑Weekly & Alternative Frequencies",
    "description": "Accurate amortization for business loans with support for monthly, bi‑weekly (two common methods), and weekly payment schedules. Compare standard periodic amortization, true bi‑weekly amortization (26 payments/year), and the half‑month bi‑weekly method (monthly payment split). Includes extra payment handling and total interest summary."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "standard",
    "methods": {
      "standard": {
        "label": "Standard periodic amortization (user-selected frequency)",
        "description": "Calculates the fixed periodic payment using the effective periodic rate derived from the annual rate and compounding. Use this method when your payment schedule and compounding frequency match or you want a payment calculated for the selected payments per year.",
        "variables": {
          "n_periods": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "r_period": {
            "expression": "pow(1 + apr/100 / compounding_per_year, compounding_per_year / payments_per_year) - 1",
            "dependencies": [
              "apr",
              "compounding_per_year",
              "payments_per_year"
            ],
            "label": "Effective periodic interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "base_payment": {
            "expression": "principal * r_period / (1 - pow(1 + r_period, -n_periods))",
            "dependencies": [
              "principal",
              "r_period",
              "n_periods"
            ],
            "label": "Calculated periodic payment (before extra payment)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "periodic_payment": {
            "expression": "base_payment + extra_payment",
            "dependencies": [
              "base_payment",
              "extra_payment"
            ],
            "label": "Scheduled periodic payment (includes extra payment)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_payments_amount": {
            "expression": "periodic_payment * n_periods",
            "dependencies": [
              "periodic_payment",
              "n_periods"
            ],
            "label": "Total paid over loan term",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_payments_amount - principal",
            "dependencies": [
              "total_payments_amount",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payoff_time_years": {
            "expression": "n_periods / payments_per_year",
            "dependencies": [
              "n_periods",
              "payments_per_year"
            ],
            "label": "Implied payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment",
            "label": "Periodic payment",
            "variable": "periodic_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_payments_amount",
            "label": "Total paid (principal + interest)",
            "variable": "total_payments_amount",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_periods",
            "label": "Number of payments",
            "variable": "n_periods",
            "unit": "periods",
            "format": "integer"
          },
          {
            "id": "payoff_time_years",
            "label": "Payoff time",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      },
      "true_biweekly": {
        "label": "True bi‑weekly amortization (26 payments/year)",
        "description": "Computes a fixed payment per bi‑weekly period assuming 26 payments per year. Select this when your plan actually makes 26 equal payments each year. Set payments per year to 26 for consistency.",
        "variables": {
          "payments_per_year_fixed": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year (fixed for true bi‑weekly)",
            "unit": "periods/year",
            "format": "integer",
            "display": false
          },
          "n_periods": {
            "expression": "term_years * payments_per_year_fixed",
            "dependencies": [
              "term_years",
              "payments_per_year_fixed"
            ],
            "label": "Total number of bi‑weekly payments",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "r_period": {
            "expression": "pow(1 + apr/100 / compounding_per_year, compounding_per_year / payments_per_year_fixed) - 1",
            "dependencies": [
              "apr",
              "compounding_per_year",
              "payments_per_year_fixed"
            ],
            "label": "Effective bi‑weekly interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "base_payment": {
            "expression": "principal * r_period / (1 - pow(1 + r_period, -n_periods))",
            "dependencies": [
              "principal",
              "r_period",
              "n_periods"
            ],
            "label": "Bi‑weekly payment before extra",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "periodic_payment": {
            "expression": "base_payment + extra_payment",
            "dependencies": [
              "base_payment",
              "extra_payment"
            ],
            "label": "Scheduled bi‑weekly payment (includes extra payment)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_payments_amount": {
            "expression": "periodic_payment * n_periods",
            "dependencies": [
              "periodic_payment",
              "n_periods"
            ],
            "label": "Total paid over loan term",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_payments_amount - principal",
            "dependencies": [
              "total_payments_amount",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payoff_time_years": {
            "expression": "n_periods / payments_per_year_fixed",
            "dependencies": [
              "n_periods",
              "payments_per_year_fixed"
            ],
            "label": "Implied payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment",
            "label": "Bi‑weekly payment",
            "variable": "periodic_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_payments_amount",
            "label": "Total paid (principal + interest)",
            "variable": "total_payments_amount",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_periods",
            "label": "Number of payments",
            "variable": "n_periods",
            "unit": "periods",
            "format": "integer"
          },
          {
            "id": "payoff_time_years",
            "label": "Payoff time",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      },
      "half_month_biweekly": {
        "label": "Half‑month bi‑weekly method (split monthly payment)",
        "description": "Calculates the monthly payment first and then divides it by two for a bi‑weekly schedule (commonly called the half‑month method). This often results in slightly accelerated payoff because 26 half‑monthly payments exceed 12 full monthly payments in many years. Use when your lender accepts half of the monthly payment every two weeks.",
        "variables": {
          "n_months": {
            "expression": "term_years * 12",
            "dependencies": [
              "term_years"
            ],
            "label": "Total number of months",
            "unit": "months",
            "format": "integer",
            "display": false
          },
          "r_monthly": {
            "expression": "pow(1 + apr/100 / compounding_per_year, compounding_per_year / 12) - 1",
            "dependencies": [
              "apr",
              "compounding_per_year"
            ],
            "label": "Effective monthly interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "monthly_payment": {
            "expression": "principal * r_monthly / (1 - pow(1 + r_monthly, -n_months))",
            "dependencies": [
              "principal",
              "r_monthly",
              "n_months"
            ],
            "label": "Monthly payment (before extra)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "biweekly_payment": {
            "expression": "monthly_payment / 2 + extra_payment",
            "dependencies": [
              "monthly_payment",
              "extra_payment"
            ],
            "label": "Bi‑weekly payment (half of monthly, including extra payment)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "n_periods_biweekly": {
            "expression": "term_years * 26",
            "dependencies": [
              "term_years"
            ],
            "label": "Assumed number of bi‑weekly payments (26/year)",
            "unit": "periods",
            "format": "integer",
            "display": true
          },
          "total_payments_amount": {
            "expression": "biweekly_payment * n_periods_biweekly",
            "dependencies": [
              "biweekly_payment",
              "n_periods_biweekly"
            ],
            "label": "Total paid over loan term",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_payments_amount - principal",
            "dependencies": [
              "total_payments_amount",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "payoff_time_years": {
            "expression": "n_periods_biweekly / 26",
            "dependencies": [
              "n_periods_biweekly"
            ],
            "label": "Implied payoff time (years, based on 26/year)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "biweekly_payment",
            "label": "Bi‑weekly payment (half‑month method)",
            "variable": "biweekly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "monthly_payment",
            "label": "Monthly payment used",
            "variable": "monthly_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_payments_amount",
            "label": "Total paid (principal + interest)",
            "variable": "total_payments_amount",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "n_periods_biweekly",
            "label": "Number of bi‑weekly payments (assumed)",
            "variable": "n_periods_biweekly",
            "unit": "periods",
            "format": "integer"
          },
          {
            "id": "payoff_time_years",
            "label": "Payoff time",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      }
    }
  },
