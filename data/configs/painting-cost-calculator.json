{
  "version": "1.0.0",
  "metadata": {
    "title": "Painting Cost Calculator (Quick & Detailed Modes)",
    "description": "Estimate paint, labor, and total project cost for interior and exterior painting. Two modes: quick per-sqft estimate and detailed room-by-room calculation. Includes waste, coats, primer, and optional trim/doors/windows adjustments."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "quick_estimate",
    "methods": {
      "quick_estimate": {
        "label": "Quick per-square-foot estimate",
        "description": "Fast estimate using total paintable area, coats, coverage, and per-unit costs. Good for rapid budgeting.",
        "variables": {
          "effective_area": {
            "expression": "area_sqft * (1 + waste_percent)",
            "dependencies": [
              "area_sqft",
              "waste_percent"
            ],
            "label": "Effective paintable area (including waste)",
            "unit": "sqft",
            "format": "decimal",
            "display": true
          },
          "gallons_needed": {
            "expression": "(effective_area * coats) / coverage_sqft_per_gallon",
            "dependencies": [
              "effective_area",
              "coats",
              "coverage_sqft_per_gallon"
            ],
            "label": "Estimated gallons of paint",
            "unit": "gallons",
            "format": "decimal",
            "display": true
          },
          "paint_cost": {
            "expression": "gallons_needed * paint_cost_per_gallon",
            "dependencies": [
              "gallons_needed",
              "paint_cost_per_gallon"
            ],
            "label": "Paint material cost",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "labor_cost": {
            "expression": "area_sqft * labor_cost_per_sqft",
            "dependencies": [
              "area_sqft",
              "labor_cost_per_sqft"
            ],
            "label": "Estimated labor cost",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_cost": {
            "expression": "paint_cost + labor_cost + prep_cost_flat + primer_cost",
            "dependencies": [
              "paint_cost",
              "labor_cost",
              "prep_cost_flat",
              "primer_cost"
            ],
            "label": "Total project cost",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "cost_per_sqft": {
            "expression": "total_cost / max(area_sqft,1)",
            "dependencies": [
              "total_cost",
              "area_sqft"
            ],
            "label": "Total cost per sqft",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "gallons_needed",
            "label": "Estimated gallons",
            "variable": "gallons_needed",
            "unit": "gallons",
            "format": "decimal"
          },
          {
            "id": "paint_cost",
            "label": "Paint cost",
            "variable": "paint_cost",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "labor_cost",
            "label": "Labor cost",
            "variable": "labor_cost",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_cost",
            "label": "Total estimated project cost",
            "variable": "total_cost",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "cost_per_sqft",
            "label": "Cost per square foot",
            "variable": "cost_per_sqft",
            "unit": "currency",
            "format": "currency"
          }
        ]
      },
      "detailed_estimate": {
        "label": "Detailed room-by-room estimate",
        "description": "Breaks project into rooms, deducts doors/windows, includes trim painting and separate primer/repair lines for higher accuracy.",
        "variables": {
          "area_from_rooms": {
            "expression": "room_count * avg_room_wall_area + ceiling_area",
            "dependencies": [
              "room_count",
              "avg_room_wall_area",
              "ceiling_area"
            ],
            "label": "Aggregated wall area from rooms plus ceilings",
            "unit": "sqft",
            "format": "decimal",
            "display": true
          },
          "opening_area": {
            "expression": "door_count * door_area + window_count * window_area",
            "dependencies": [
              "door_count",
              "door_area",
              "window_count",
              "window_area"
            ],
            "label": "Total area of doors and windows",
            "unit": "sqft",
            "format": "decimal",
            "display": true
          },
          "net_paint_area": {
            "expression": "area_from_rooms - opening_area",
            "dependencies": [
              "area_from_rooms",
              "opening_area"
            ],
            "label": "Net paintable area after openings",
            "unit": "sqft",
            "format": "decimal",
            "display": true
          },
          "gallons_needed_detailed": {
            "expression": "(net_paint_area * coats * (1 + waste_percent)) / coverage_sqft_per_gallon",
            "dependencies": [
              "net_paint_area",
              "coats",
              "waste_percent",
              "coverage_sqft_per_gallon"
            ],
            "label": "Estimated gallons (detailed)",
            "unit": "gallons",
            "format": "decimal",
            "display": true
          },
          "trim_paint_gallons": {
            "expression": "trim_linear_ft * trim_coverage_gallon_per_ft",
            "dependencies": [
              "trim_linear_ft",
              "trim_coverage_gallon_per_ft"
            ],
            "label": "Paint gallons for trim",
            "unit": "gallons",
            "format": "decimal",
            "display": true
          },
          "paint_cost_detailed": {
            "expression": "gallons_needed_detailed * paint_cost_per_gallon + trim_paint_gallons * paint_cost_per_gallon",
            "dependencies": [
              "gallons_needed_detailed",
              "trim_paint_gallons",
              "paint_cost_per_gallon"
            ],
            "label": "Paint material cost (detailed)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "labor_cost_detailed": {
            "expression": "net_paint_area * labor_cost_per_sqft + trim_linear_ft * labor_cost_per_trim_ft + repair_hours * labor_hourly_rate",
            "dependencies": [
              "net_paint_area",
              "labor_cost_per_sqft",
              "trim_linear_ft",
              "labor_cost_per_trim_ft",
              "repair_hours",
              "labor_hourly_rate"
            ],
            "label": "Labor cost including trim and repair",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_cost_detailed": {
            "expression": "paint_cost_detailed + labor_cost_detailed + prep_cost_flat + primer_cost + specialty_surface_prep",
            "dependencies": [
              "paint_cost_detailed",
              "labor_cost_detailed",
              "prep_cost_flat",
              "primer_cost",
              "specialty_surface_prep"
            ],
            "label": "Total detailed project cost",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "detailed_cost_per_sqft": {
            "expression": "total_cost_detailed / max(net_paint_area,1)",
            "dependencies": [
              "total_cost_detailed",
              "net_paint_area"
            ],
            "label": "Detailed cost per sqft",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "gallons_needed_detailed",
            "label": "Estimated gallons (detailed)",
            "variable": "gallons_needed_detailed",
            "unit": "gallons",
            "format": "decimal"
          },
          {
            "id": "paint_cost_detailed",
            "label": "Paint cost (detailed)",
            "variable": "paint_cost_detailed",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "labor_cost_detailed",
            "label": "Labor cost (detailed)",
            "variable": "labor_cost_detailed",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_cost_detailed",
            "label": "Total project cost (detailed)",
            "variable": "total_cost_detailed",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "detailed_cost_per_sqft",
            "label": "Cost per square foot (detailed)",
            "variable": "detailed_cost_per_sqft",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
