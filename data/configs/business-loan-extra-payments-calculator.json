    "glossary": [
      {
        "term": "Principal",
        "definition": "The original loan amount borrowed, not including interest."
      },
      {
        "term": "Periodic interest rate",
        "definition": "The interest rate applied each payment period: annual APR divided by number of payments per year."
      },
      {
        "term": "Amortization",
        "definition": "The process of spreading loan payments over multiple periods so each payment covers interest due and reduces principal."
      },
      {
        "term": "Bi‑weekly",
        "definition": "A payment cadence with 26 payments per year (every two weeks). Note: some lenders use semi‑monthly (24 payments) which is different."
      }
    ]
  },
