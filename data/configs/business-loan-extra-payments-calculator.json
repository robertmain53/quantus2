{
  "version": "1.0.0",
  "metadata": {
    "title": "Business Loan Extra Payments Calculator (Bi‑Weekly & Comparison)",
    "description": "Simulate business loan amortization with bi‑weekly schedules and extra payments. Estimate periodic payment, payoff time, total interest, interest saved, and time saved. Uses IEEE numeric conventions and provides accuracy guidance and references to standards."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_with_extras",
    "methods": {
      "biweekly_with_extras": {
        "label": "Bi‑weekly schedule (26 payments / year) with extra payments",
        "description": "Calculates base bi‑weekly payment, effect of recurring principal extra payments, estimated new payoff count, total interest and time saved. Recurring extra payments assumed to begin immediately unless user offsets start period.",
        "variables": {
          "payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year",
            "format": "integer",
            "display": true
          },
          "periodic_rate": {
            "expression": "(annual_rate_pct/100)/payments_per_year",
            "dependencies": [
              "annual_rate_pct",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "format": "decimal",
            "display": true
          },
          "n_payments": {
            "expression": "term_years*payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Original number of payments",
            "format": "integer",
            "display": true
          },
          "base_payment": {
            "expression": "principal*(periodic_rate)/(1 - pow(1+periodic_rate, -n_payments))",
            "dependencies": [
              "principal",
              "periodic_rate",
              "n_payments"
            ],
            "label": "Scheduled bi‑weekly payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "base_payment + extra_amount",
            "dependencies": [
              "base_payment",
              "extra_amount"
            ],
            "label": "Bi‑weekly payment with recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_payments_new": {
            "expression": "-ln(1 - principal*periodic_rate / payment_with_extra) / ln(1+periodic_rate)",
            "dependencies": [
              "principal",
              "periodic_rate",
              "payment_with_extra"
            ],
            "label": "Estimated number of payments until payoff with extras",
            "format": "decimal",
            "display": true
          },
          "total_paid_no_extra": {
            "expression": "base_payment * n_payments",
            "dependencies": [
              "base_payment",
              "n_payments"
            ],
            "label": "Total paid (no extra)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_interest_no_extra": {
            "expression": "total_paid_no_extra - principal",
            "dependencies": [
              "total_paid_no_extra",
              "principal"
            ],
            "label": "Total interest (no extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid_with_extra": {
            "expression": "payment_with_extra * n_payments_new",
            "dependencies": [
              "payment_with_extra",
              "n_payments_new"
            ],
            "label": "Total paid (with extra)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_interest_with_extra": {
            "expression": "total_paid_with_extra - principal",
            "dependencies": [
              "total_paid_with_extra",
              "principal"
            ],
            "label": "Total interest (with extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_saved": {
            "expression": "total_interest_no_extra - total_interest_with_extra",
            "dependencies": [
              "total_interest_no_extra",
              "total_interest_with_extra"
            ],
            "label": "Estimated interest saved",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "time_saved_years": {
            "expression": "(n_payments - n_payments_new)/payments_per_year",
            "dependencies": [
              "n_payments",
              "n_payments_new",
              "payments_per_year"
            ],
            "label": "Estimated time saved",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment",
            "label": "Bi‑weekly payment (no extra)",
            "variable": "base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Bi‑weekly payment (with recurring extra)",
            "variable": "payment_with_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_payments_to_payoff",
            "label": "Estimated payments until payoff (with extras)",
            "variable": "n_payments_new",
            "format": "decimal"
          },
          {
            "id": "total_interest_no_extra",
            "label": "Total interest (no extra)",
            "variable": "total_interest_no_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest_with_extra",
            "label": "Total interest (with extra)",
            "variable": "total_interest_with_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "interest_saved",
            "label": "Estimated interest saved",
            "variable": "interest_saved",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "time_saved_years",
            "label": "Estimated time saved (years)",
            "variable": "time_saved_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      },
      "monthly_vs_biweekly_compare": {
        "label": "Compare Monthly (12/yr) vs Bi‑weekly (26/yr)",
        "description": "Compute base schedules for monthly and bi‑weekly frequencies to compare total interest and estimated time to pay off without extras. Useful for seeing structural differences between payment cadences.",
        "variables": {
          "monthly_payments_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Monthly payments per year",
            "format": "integer",
            "display": true
          },
          "monthly_periodic_rate": {
            "expression": "(annual_rate_pct/100)/monthly_payments_per_year",
            "dependencies": [
              "annual_rate_pct",
              "monthly_payments_per_year"
            ],
            "label": "Monthly periodic rate",
            "format": "decimal",
            "display": true
          },
          "monthly_n_payments": {
            "expression": "term_years*monthly_payments_per_year",
            "dependencies": [
              "term_years",
              "monthly_payments_per_year"
            ],
            "label": "Monthly number of payments",
            "format": "integer",
            "display": true
          },
          "monthly_base_payment": {
            "expression": "principal*(monthly_periodic_rate)/(1 - pow(1+monthly_periodic_rate, -monthly_n_payments))",
            "dependencies": [
              "principal",
              "monthly_periodic_rate",
              "monthly_n_payments"
            ],
            "label": "Monthly payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "monthly_total_paid": {
            "expression": "monthly_base_payment * monthly_n_payments",
            "dependencies": [
              "monthly_base_payment",
              "monthly_n_payments"
            ],
            "label": "Total paid on monthly schedule",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "monthly_total_interest": {
            "expression": "monthly_total_paid - principal",
            "dependencies": [
              "monthly_total_paid",
              "principal"
            ],
            "label": "Total interest (monthly)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "bi_payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Bi‑weekly payments per year",
            "format": "integer",
            "display": true
          },
          "bi_periodic_rate": {
            "expression": "(annual_rate_pct/100)/bi_payments_per_year",
            "dependencies": [
              "annual_rate_pct",
              "bi_payments_per_year"
            ],
            "label": "Bi‑weekly periodic rate",
            "format": "decimal",
            "display": true
          },
          "bi_n_payments": {
            "expression": "term_years*bi_payments_per_year",
            "dependencies": [
              "term_years",
              "bi_payments_per_year"
            ],
            "label": "Bi‑weekly number of payments",
            "format": "integer",
            "display": true
          },
          "bi_base_payment": {
            "expression": "principal*(bi_periodic_rate)/(1 - pow(1+bi_periodic_rate, -bi_n_payments))",
            "dependencies": [
              "principal",
              "bi_periodic_rate",
              "bi_n_payments"
            ],
            "label": "Bi‑weekly payment (no extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "bi_total_paid": {
            "expression": "bi_base_payment * bi_n_payments",
            "dependencies": [
              "bi_base_payment",
              "bi_n_payments"
            ],
            "label": "Total paid on bi‑weekly schedule",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "bi_total_interest": {
            "expression": "bi_total_paid - principal",
            "dependencies": [
              "bi_total_paid",
              "principal"
            ],
            "label": "Total interest (bi‑weekly)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "interest_difference": {
            "expression": "monthly_total_interest - bi_total_interest",
            "dependencies": [
              "monthly_total_interest",
              "bi_total_interest"
            ],
            "label": "Interest difference (monthly - bi‑weekly)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "approx_time_difference_years": {
            "expression": "(monthly_n_payments - bi_n_payments)/12",
            "dependencies": [
              "monthly_n_payments",
              "bi_n_payments"
            ],
            "label": "Approx difference in years between schedules",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_payment",
            "label": "Monthly payment (no extra)",
            "variable": "monthly_base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "biweekly_payment",
            "label": "Bi‑weekly payment (no extra)",
            "variable": "bi_base_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "monthly_total_interest",
            "label": "Total interest (monthly)",
            "variable": "monthly_total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "bi_total_interest",
            "label": "Total interest (bi‑weekly)",
            "variable": "bi_total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "interest_difference",
            "label": "Interest difference (monthly - bi‑weekly)",
            "variable": "interest_difference",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "approx_time_difference_years",
            "label": "Approx time difference (years)",
            "variable": "approx_time_difference_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      }
    }
  },
  "form": {
    "fields": [
      {
        "id": "principal",
        "label": "Loan principal (amount borrowed)",
        "type": "number",
        "default": 100000,
        "min": 0,
        "step": 100
      },
      {
        "id": "annual_rate_pct",
        "label": "Annual interest rate (APR, %)",
        "type": "number",
        "default": 6,
        "min": 0,
        "max": 100,
        "step": 0.01
      },
      {
        "id": "term_years",
        "label": "Term (years)",
        "type": "integer",
        "default": 5,
        "min": 1,
        "max": 50,
        "step": 1
      },
      {
        "id": "extra_amount",
        "label": "Recurring extra payment amount (per payment period)",
        "type": "number",
        "default": 0,
        "min": 0,
        "step": 1
      },
      {
        "id": "extra_start_period",
        "label": "Start extra after how many payments (1 = first payment)",
        "type": "integer",
        "default": 1,
        "min": 1,
        "step": 1
      }
    ]
  },
  "page_content": {
    "introduction": [
      "This calculator models business loan amortization for bi‑weekly (26 payments per year) schedules and provides tools to see how recurring extra principal payments change payoff time and total interest. It also contains a comparison mode between standard monthly and bi‑weekly payment cadences.",
      "Results are estimates based on standard amortization mathematics. Use the tool to test different extra payment amounts, terms, and rates to plan cash flow and verify lender statements."
    ],
    "methodology": [
      "Calculations use conventional amortization formulas and an algebraic rearrangement to estimate the number of payments when recurring extras are applied. Numeric operations follow IEEE 754 floating‑point norms for stability. Data handling and recommended practices reference NIST and ISO guidance for accuracy, reproducibility, and safe storage.",
      "Outputs are rounded and presented as estimates. For final payoff figures, confirm with your lender because actual schedules can include fees, daily interest accrual, or different compounding conventions not captured here."
    ],
    "how_is_calculated": [
      "Periodic interest rate = (annual_rate_pct / 100) / payments_per_year.",
      "Scheduled payment (no extras) = P * r / (1 - (1+r)^-N), where P = principal, r = periodic_rate, N = number of payments.",
      "When a recurring extra is added, the estimated number of payments to payoff is computed using: n = -ln(1 - r*P / (payment_with_extra)) / ln(1+r).",
      "Total interest = total payments made - principal. Interest saved is difference between original schedule interest and interest after extras."
    ],
    "examples": [
      "Example: $100,000 loan, 6% APR, 5 years. Bi‑weekly scheduled payment (no extras) computed with payments_per_year=26. Add a recurring $50 extra per bi‑weekly payment to see new payoff estimate and interest saved.",
      "Compare mode: same loan compared on monthly (12/yr) vs bi‑weekly (26/yr) schedules to show structural interest differences when no extras are applied."
    ],
    "faqs": [
      {
        "question": "Are these results exact for my loan?",
        "answer": "These are estimates based on standard amortization and assume interest compounds at the periodic rate used here. Actual lender schedules may differ due to daily interest, fees, prepayment rules, or timing. Use lender payoff quotes for legally binding numbers."
      },
      {
        "question": "Does bi‑weekly always save interest?",
        "answer": "Bi‑weekly can reduce interest if it results in extra principal applied sooner (for example 26 payments instead of 12). The savings depend on whether the lender treats bi‑weekly payments as extra principal or simply a payment schedule. Confirm with your lender how payments are applied."
      },
      {
        "question": "How accurate are the time and interest savings estimates?",
        "answer": "Estimates follow proven algebraic formulas and IEEE numeric conventions, but are sensitive to rounding and payment timing. For critical decisions, cross‑check results with an amortization schedule from your lender or a certified accountant."
      },
      {
        "question": "What if I make a one‑time extra payment instead of recurring extras?",
        "answer": "This tool models recurring extras. A one‑time extra reduces the principal immediately and will shorten the remaining schedule; for a precise one‑time scenario, use a tailored amortization schedule or consult an amortization table."
      }
    ],
