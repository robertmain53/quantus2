{
    "version": "1.0.0",
    "metadata": {
        "title": "Ultimate Engine Horsepower Estimator & Dyno Simulator",
        "description": "Estimate engine horsepower from torque, VE and boost, or fuel and airflow data, with crank and wheel outputs plus SAE-style environmental corrections."
    },
    "logic": {
        "type": "advanced",
        "defaultMethod": "dyno_direct",
        "methods": {
            "dyno_direct": {
                "label": "Dyno Mode – Torque and RPM",
                "description": "Compute crank and wheel horsepower from measured torque, engine speed, drivetrain loss, and ambient conditions.",
                "variables": {
                    "drivetrain_loss_fraction": {
                        "expression": "drivetrain_loss_percent / 100",
                        "dependencies": [
                            "drivetrain_loss_percent"
                        ],
                        "label": "Drivetrain loss fraction",
                        "unit": "",
                        "format": "decimal",
                        "display": false
                    },
                    "hp_crank_raw": {
                        "expression": "torque_ftlb * rpm / 5252",
                        "dependencies": [
                            "torque_ftlb",
                            "rpm"
                        ],
                        "label": "Crank horsepower at current conditions",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "hp_wheel_raw": {
                        "expression": "hp_crank_raw * (1 - drivetrain_loss_fraction)",
                        "dependencies": [
                            "hp_crank_raw",
                            "drivetrain_loss_fraction"
                        ],
                        "label": "Wheel horsepower at current conditions",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "temp_k": {
                        "expression": "ambient_temp_c + 273.15",
                        "dependencies": [
                            "ambient_temp_c"
                        ],
                        "label": "Ambient temperature in kelvin",
                        "unit": "K",
                        "format": "decimal",
                        "display": false
                    },
                    "density_ratio": {
                        "expression": "(ambient_pressure_kpa / 101.325) / (temp_k / 293.15)",
                        "dependencies": [
                            "ambient_pressure_kpa",
                            "temp_k"
                        ],
                        "label": "Air density ratio vs standard day",
                        "unit": "",
                        "format": "decimal",
                        "display": false
                    },
                    "hp_crank_corrected": {
                        "expression": "hp_crank_raw / density_ratio",
                        "dependencies": [
                            "hp_crank_raw",
                            "density_ratio"
                        ],
                        "label": "Crank horsepower corrected to standard conditions",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "hp_wheel_corrected": {
                        "expression": "hp_wheel_raw / density_ratio",
                        "dependencies": [
                            "hp_wheel_raw",
                            "density_ratio"
                        ],
                        "label": "Wheel horsepower corrected to standard conditions",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "kw_crank_corrected": {
                        "expression": "hp_crank_corrected * 0.7457",
                        "dependencies": [
                            "hp_crank_corrected"
                        ],
                        "label": "Crank power corrected to standard conditions",
                        "unit": "kW",
                        "format": "decimal",
                        "display": true
                    },
                    "kw_wheel_corrected": {
                        "expression": "hp_wheel_corrected * 0.7457",
                        "dependencies": [
                            "hp_wheel_corrected"
                        ],
                        "label": "Wheel power corrected to standard conditions",
                        "unit": "kW",
                        "format": "decimal",
                        "display": true
                    }
                },
                "outputs": [
                    {
                        "id": "hp_crank_today",
                        "label": "Crank horsepower (today)",
                        "variable": "hp_crank_raw",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "hp_wheel_today",
                        "label": "Wheel horsepower (today)",
                        "variable": "hp_wheel_raw",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "hp_crank_corrected",
                        "label": "Crank horsepower (corrected)",
                        "variable": "hp_crank_corrected",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "hp_wheel_corrected",
                        "label": "Wheel horsepower (corrected)",
                        "variable": "hp_wheel_corrected",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "kw_crank_corrected",
                        "label": "Crank power (corrected)",
                        "variable": "kw_crank_corrected",
                        "unit": "kW",
                        "format": "decimal"
                    },
                    {
                        "id": "kw_wheel_corrected",
                        "label": "Wheel power (corrected)",
                        "variable": "kw_wheel_corrected",
                        "unit": "kW",
                        "format": "decimal"
                    }
                ]
            },
            "ve_boost": {
                "label": "VE and Boost Model",
                "description": "Estimate theoretical crank and wheel horsepower from displacement, volumetric efficiency, boost, and peak power RPM with environmental corrections.",
                "variables": {
                    "cid": {
                        "expression": "displacement_l * 61.0237",
                        "dependencies": [
                            "displacement_l"
                        ],
                        "label": "Engine displacement",
                        "unit": "cid",
                        "format": "decimal",
                        "display": false
                    },
                    "ve_adjust_factor": {
                        "expression": "ve_adjust_percent / 100",
                        "dependencies": [
                            "ve_adjust_percent"
                        ],
                        "label": "Volumetric efficiency adjustment factor",
                        "unit": "",
                        "format": "decimal",
                        "display": false
                    },
                    "ve_effective": {
                        "expression": "ve_base * (1 + ve_adjust_factor)",
                        "dependencies": [
                            "ve_base",
                            "ve_adjust_factor"
                        ],
                        "label": "Effective volumetric efficiency",
                        "unit": "",
                        "format": "decimal",
                        "display": true
                    },
                    "map_psi": {
                        "expression": "14.7 + boost_psi",
                        "dependencies": [
                            "boost_psi"
                        ],
                        "label": "Manifold absolute pressure",
                        "unit": "psi",
                        "format": "decimal",
                        "display": true
                    },
                    "hp_crank_corrected": {
                        "expression": "cid * rpm_peak * ve_effective * (map_psi / 14.7) / 3456",
                        "dependencies": [
                            "cid",
                            "rpm_peak",
                            "ve_effective",
                            "map_psi"
                        ],
                        "label": "Theoretical crank horsepower at standard conditions",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "temp_k": {
                        "expression": "ambient_temp_c + 273.15",
                        "dependencies": [
                            "ambient_temp_c"
                        ],
                        "label": "Ambient temperature in kelvin",
                        "unit": "K",
                        "format": "decimal",
                        "display": false
                    },
                    "density_ratio": {
                        "expression": "(ambient_pressure_kpa / 101.325) / (temp_k / 293.15)",
                        "dependencies": [
                            "ambient_pressure_kpa",
                            "temp_k"
                        ],
                        "label": "Air density ratio vs standard day",
                        "unit": "",
                        "format": "decimal",
                        "display": false
                    },
                    "hp_crank_today": {
                        "expression": "hp_crank_corrected * density_ratio",
                        "dependencies": [
                            "hp_crank_corrected",
                            "density_ratio"
                        ],
                        "label": "Theoretical crank horsepower at current conditions",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "drivetrain_loss_fraction": {
                        "expression": "drivetrain_loss_percent / 100",
                        "dependencies": [
                            "drivetrain_loss_percent"
                        ],
                        "label": "Drivetrain loss fraction",
                        "unit": "",
                        "format": "decimal",
                        "display": false
                    },
                    "hp_wheel_corrected": {
                        "expression": "hp_crank_corrected * (1 - drivetrain_loss_fraction)",
                        "dependencies": [
                            "hp_crank_corrected",
                            "drivetrain_loss_fraction"
                        ],
                        "label": "Theoretical wheel horsepower at standard conditions",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "hp_wheel_today": {
                        "expression": "hp_crank_today * (1 - drivetrain_loss_fraction)",
                        "dependencies": [
                            "hp_crank_today",
                            "drivetrain_loss_fraction"
                        ],
                        "label": "Theoretical wheel horsepower at current conditions",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "kw_crank_corrected": {
                        "expression": "hp_crank_corrected * 0.7457",
                        "dependencies": [
                            "hp_crank_corrected"
                        ],
                        "label": "Theoretical crank power at standard conditions",
                        "unit": "kW",
                        "format": "decimal",
                        "display": true
                    },
                    "kw_wheel_corrected": {
                        "expression": "hp_wheel_corrected * 0.7457",
                        "dependencies": [
                            "hp_wheel_corrected"
                        ],
                        "label": "Theoretical wheel power at standard conditions",
                        "unit": "kW",
                        "format": "decimal",
                        "display": true
                    }
                },
                "outputs": [
                    {
                        "id": "hp_crank_corrected_ve",
                        "label": "Crank horsepower (corrected, VE model)",
                        "variable": "hp_crank_corrected",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "hp_crank_today_ve",
                        "label": "Crank horsepower (today, VE model)",
                        "variable": "hp_crank_today",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "hp_wheel_corrected_ve",
                        "label": "Wheel horsepower (corrected, VE model)",
                        "variable": "hp_wheel_corrected",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "hp_wheel_today_ve",
                        "label": "Wheel horsepower (today, VE model)",
                        "variable": "hp_wheel_today",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "kw_crank_corrected_ve",
                        "label": "Crank power (corrected, VE model)",
                        "variable": "kw_crank_corrected",
                        "unit": "kW",
                        "format": "decimal"
                    },
                    {
                        "id": "kw_wheel_corrected_ve",
                        "label": "Wheel power (corrected, VE model)",
                        "variable": "kw_wheel_corrected",
                        "unit": "kW",
                        "format": "decimal"
                    }
                ]
            },
            "tuner_maf_injector": {
                "label": "Tuner Mode – MAF and Injectors",
                "description": "Estimate supported horsepower from air mass flow and fuel system capacity using BSFC and AFR assumptions.",
                "variables": {
                    "drivetrain_loss_fraction": {
                        "expression": "drivetrain_loss_percent / 100",
                        "dependencies": [
                            "drivetrain_loss_percent"
                        ],
                        "label": "Drivetrain loss fraction",
                        "unit": "",
                        "format": "decimal",
                        "display": false
                    },
                    "air_lb_per_min": {
                        "expression": "maf_lb_per_min",
                        "dependencies": [
                            "maf_lb_per_min"
                        ],
                        "label": "Air mass flow rate",
                        "unit": "lb/min",
                        "format": "decimal",
                        "display": true
                    },
                    "fuel_lb_per_min_maf": {
                        "expression": "air_lb_per_min / afr",
                        "dependencies": [
                            "air_lb_per_min",
                            "afr"
                        ],
                        "label": "Fuel flow from MAF",
                        "unit": "lb/min",
                        "format": "decimal",
                        "display": false
                    },
                    "fuel_lb_per_hr_maf": {
                        "expression": "fuel_lb_per_min_maf * 60",
                        "dependencies": [
                            "fuel_lb_per_min_maf"
                        ],
                        "label": "Fuel flow from MAF",
                        "unit": "lb/hr",
                        "format": "decimal",
                        "display": false
                    },
                    "hp_crank_maf": {
                        "expression": "fuel_lb_per_hr_maf / bsfc_lb_hp_hr",
                        "dependencies": [
                            "fuel_lb_per_hr_maf",
                            "bsfc_lb_hp_hr"
                        ],
                        "label": "Crank horsepower from MAF",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "hp_wheel_maf": {
                        "expression": "hp_crank_maf * (1 - drivetrain_loss_fraction)",
                        "dependencies": [
                            "hp_crank_maf",
                            "drivetrain_loss_fraction"
                        ],
                        "label": "Wheel horsepower from MAF",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "flow_l_min_per_injector": {
                        "expression": "injector_flow_cc_min / 1000",
                        "dependencies": [
                            "injector_flow_cc_min"
                        ],
                        "label": "Injector flow per injector",
                        "unit": "L/min",
                        "format": "decimal",
                        "display": false
                    },
                    "flow_kg_min_per_injector": {
                        "expression": "flow_l_min_per_injector * fuel_density_kg_l",
                        "dependencies": [
                            "flow_l_min_per_injector",
                            "fuel_density_kg_l"
                        ],
                        "label": "Fuel mass flow per injector",
                        "unit": "kg/min",
                        "format": "decimal",
                        "display": false
                    },
                    "flow_lb_hr_per_injector": {
                        "expression": "flow_kg_min_per_injector * 2.20462 * 60",
                        "dependencies": [
                            "flow_kg_min_per_injector"
                        ],
                        "label": "Fuel mass flow per injector",
                        "unit": "lb/hr",
                        "format": "decimal",
                        "display": false
                    },
                    "duty_fraction": {
                        "expression": "injector_duty_cycle_percent / 100",
                        "dependencies": [
                            "injector_duty_cycle_percent"
                        ],
                        "label": "Injector duty fraction",
                        "unit": "",
                        "format": "decimal",
                        "display": false
                    },
                    "total_fuel_lb_hr_inj": {
                        "expression": "flow_lb_hr_per_injector * injector_count * duty_fraction",
                        "dependencies": [
                            "flow_lb_hr_per_injector",
                            "injector_count",
                            "duty_fraction"
                        ],
                        "label": "Total fuel flow from injectors",
                        "unit": "lb/hr",
                        "format": "decimal",
                        "display": false
                    },
                    "hp_crank_injectors": {
                        "expression": "total_fuel_lb_hr_inj / bsfc_lb_hp_hr",
                        "dependencies": [
                            "total_fuel_lb_hr_inj",
                            "bsfc_lb_hp_hr"
                        ],
                        "label": "Crank horsepower from injectors",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "hp_wheel_injectors": {
                        "expression": "hp_crank_injectors * (1 - drivetrain_loss_fraction)",
                        "dependencies": [
                            "hp_crank_injectors",
                            "drivetrain_loss_fraction"
                        ],
                        "label": "Wheel horsepower from injectors",
                        "unit": "hp",
                        "format": "decimal",
                        "display": true
                    },
                    "kw_crank_maf": {
                        "expression": "hp_crank_maf * 0.7457",
                        "dependencies": [
                            "hp_crank_maf"
                        ],
                        "label": "Crank power from MAF",
                        "unit": "kW",
                        "format": "decimal",
                        "display": true
                    },
                    "kw_crank_injectors": {
                        "expression": "hp_crank_injectors * 0.7457",
                        "dependencies": [
                            "hp_crank_injectors"
                        ],
                        "label": "Crank power from injectors",
                        "unit": "kW",
                        "format": "decimal",
                        "display": true
                    }
                },
                "outputs": [
                    {
                        "id": "hp_crank_maf",
                        "label": "Crank horsepower from MAF",
                        "variable": "hp_crank_maf",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "hp_wheel_maf",
                        "label": "Wheel horsepower from MAF",
                        "variable": "hp_wheel_maf",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "hp_crank_injectors",
                        "label": "Crank horsepower from injectors",
                        "variable": "hp_crank_injectors",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "hp_wheel_injectors",
                        "label": "Wheel horsepower from injectors",
                        "variable": "hp_wheel_injectors",
                        "unit": "hp",
                        "format": "decimal"
                    },
                    {
                        "id": "kw_crank_maf",
                        "label": "Crank power from MAF",
                        "variable": "kw_crank_maf",
                        "unit": "kW",
                        "format": "decimal"
                    },
                    {
                        "id": "kw_crank_injectors",
                        "label": "Crank power from injectors",
                        "variable": "kw_crank_injectors",
                        "unit": "kW",
                        "format": "decimal"
                    }
                ]
            }
        }
    },
