{
  "version": "1.0.0",
  "metadata": {
    "title": "RV Loan Payment & Bi‑Weekly Payment Calculator (Advanced)",
    "description": "Calculate RV loan payments, compare monthly vs bi‑weekly (26 or 24) schedules, and estimate effects of recurring extra payments. Includes amortization totals, payoff time, and interest saved estimates."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "monthly_amortization",
    "methods": {
      "monthly_amortization": {
        "label": "Monthly amortization (12 payments / year)",
        "description": "Standard amortization using 12 payments per year. Produces scheduled monthly payment, total interest, and total paid over the term.",
        "variables": {
          "payments_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "per year",
            "format": "integer",
            "display": false
          },
          "r": {
            "expression": "apr / 100 / payments_per_year",
            "dependencies": [
              "apr",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "decimal",
            "display": false
          },
          "n": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Number of payments",
            "unit": "periods",
            "format": "integer",
            "display": false
          },
          "base_payment": {
            "expression": "(r * loan_amount) / (1 - (1 + r) ^ (-n))",
            "dependencies": [
              "r",
              "loan_amount",
              "n"
            ],
            "label": "Monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "base_payment * n",
            "dependencies": [
              "base_payment",
              "n"
            ],
            "label": "Total paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Total interest",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_time_years": {
            "expression": "n / payments_per_year",
            "dependencies": [
              "n",
              "payments_per_year"
            ],
            "label": "Payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_payment",
            "label": "Monthly payment",
            "variable": "base_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "monthly_total_interest",
            "label": "Total interest (monthly schedule)",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "monthly_total_paid",
            "label": "Total paid (monthly schedule)",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "monthly_payoff_years",
            "label": "Payoff time (monthly)",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      },
