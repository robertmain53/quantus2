            "label": "Total payment per period (including extra)",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "n_new": {
            "expression": "-ln(1 - r * loan_amount / p_total) / ln(1 + r)",
            "dependencies": [
              "r",
              "loan_amount",
              "p_total"
