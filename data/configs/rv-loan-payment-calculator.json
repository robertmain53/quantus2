          "payoff_time_years_new": {
            "expression": "n_new / payments_per_year",
            "dependencies": [
              "n_new",
              "payments_per_year"
            ],
            "label": "Estimated payoff time (years) with extra",
            "unit": "years",
            "format": "decimal",
            "display": true
