    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate, the annualized rate charged on the loan expressed as a percentage. This calculator converts APR into a periodic rate for computations."
      },
      {
        "term": "Periodic rate",
        "definition": "The interest rate applied each payment period: APR / payments per year."
      },
      {
        "term": "Amortization",
        "definition": "The process of paying off a debt over time through regular payments of principal and interest."
      },
      {
        "term": "Accelerated bi‑weekly (26/yr)",
        "definition": "A schedule that makes 26 payments per year, resulting in extra principal paid annually compared with 12 monthly payments."
      }
