  "version": "1.0.0",
  "metadata": {
    "title": "Auto Loan Interest & Bi‑Weekly Payments Calculator (Advanced)",
    "description": "Estimate scheduled and accelerated payments, interest, and payoff time for auto loans using monthly, bi‑weekly, weekly, or custom payment frequencies. Includes financed fees, upfront fees, and optional extra payments per period. Results are estimates for planning only."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly",
    "methods": {
      "biweekly": {
        "label": "Bi‑weekly payments (26 per year)",
        "description": "Standard bi‑weekly schedule: 26 payments per year.",
        "variables": {
          "payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "per year",
            "format": "integer",
            "display": false
          },
          "period_rate": {
            "expression": "annual_rate / 100 / payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "%",
            "format": "percent",
            "display": true
          },
          "n": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Number of scheduled payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "principal_effective": {
            "expression": "principal + fees_financed",
            "dependencies": [
              "principal",
              "fees_financed"
            ],
            "label": "Principal including financed fees",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "base_payment": {
            "expression": "period_rate==0 ? principal_effective / n : principal_effective * period_rate / (1 - (1+period_rate)^(-n))",
            "dependencies": [
              "period_rate",
              "principal_effective",
              "n"
            ],
            "label": "Scheduled payment per period (excludes optional extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "base_payment + extra_payment",
            "dependencies": [
              "base_payment",
              "extra_payment"
            ],
            "label": "Payment per period including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_effective": {
            "expression": "payment_with_extra<=0 ? n : (period_rate==0 ? principal_effective / payment_with_extra : -ln(1 - (period_rate * principal_effective) / payment_with_extra) / ln(1+period_rate))",
            "dependencies": [
              "payment_with_extra",
              "period_rate",
              "principal_effective",
              "n"
            ],
            "label": "Estimated number of payments until payoff with extra",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "payment_with_extra * n_effective + fees_upfront",
            "dependencies": [
              "payment_with_extra",
              "n_effective",
              "fees_upfront"
            ],
            "label": "Estimated total amount paid (includes upfront fees)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "payment_with_extra * n_effective - principal_effective",
            "dependencies": [
              "payment_with_extra",
              "n_effective",
              "principal_effective"
            ],
            "label": "Estimated total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_years": {
            "expression": "n_effective / payments_per_year",
            "dependencies": [
              "n_effective",
              "payments_per_year"
            ],
            "label": "Estimated payoff time in years",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled payment per period",
            "variable": "base_payment",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Payment per period (with extra)",
            "variable": "payment_with_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "estimated_payoff_years",
            "label": "Estimated payoff time (years)",
            "variable": "payoff_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest",
            "label": "Total interest estimated",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
