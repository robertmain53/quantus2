    "glossary": [
      {
        "term": "Principal",
        "definition": "The original amount of the loan, excluding interest and fees."
      },
      {
        "term": "Interest-only period",
        "definition": "A time window during which the borrower pays only interest and does not reduce principal."
      },
      {
        "term": "Amortization",
        "definition": "The process of paying down principal over time via periodic payments that include both principal and interest."
      },
      {
        "term": "APR (Annual Percentage Rate)",
        "definition": "The annual rate charged for borrowing, expressed as a percentage; this estimator uses the nominal interest rate for periodic payment calculations."
      }
