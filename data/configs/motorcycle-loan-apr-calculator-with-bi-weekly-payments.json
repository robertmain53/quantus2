    "glossary": [
      {
        "term": "APR (Annual Percentage Rate)",
        "definition": "The annual cost of borrowing expressed as a percentage; includes interest and may include certain fees depending on disclosure rules."
      },
      {
        "term": "Periodic rate",
        "definition": "Interest rate applied for a single payment period. For monthly it is APR/12; for bi-weekly it is APR/26."
      },
      {
        "term": "Amortization",
        "definition": "The process of spreading loan principal and interest payments over time so that after the final payment the loan balance is zero."
      },
      {
        "term": "Accelerated bi-weekly",
        "definition": "A payment strategy commonly implemented by paying half of the monthly payment every two weeks, which results in 26 payments per year and typically reduces total interest compared to monthly payments."
      }
    ]
  },
