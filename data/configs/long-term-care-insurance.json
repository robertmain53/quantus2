{
  "version": "1.0.0",
  "metadata": {
    "title": "Long Term Care Insurance Needs & Premium Estimator",
    "description": "An advanced, multi-method calculator to estimate the present-value need for long-term care (LTC) coverage and a simple premium proxy. Includes inflation, benefit escalation, discounting, existing savings and family contributions. Designed for scenario comparison and informed conversations with licensed advisors."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "coverage_need",
    "methods": {
      "coverage_need": {
        "label": "Estimated Coverage Need (Present Value)",
        "description": "Projects future care cost at expected onset, escalates benefits, discounts to present value, subtracts existing resources to produce an estimated additional coverage need.",
        "variables": {
          "years_until_onset": {
            "expression": "max(expected_onset_age - current_age, 0)",
            "dependencies": [
              "expected_onset_age",
              "current_age"
            ],
            "label": "Years until expected need",
            "unit": "years",
            "format": "integer",
            "display": true
          },
          "projected_start_monthly": {
            "expression": "current_monthly_cost * pow(1 + annual_inflation, years_until_onset)",
            "dependencies": [
              "current_monthly_cost",
              "annual_inflation",
              "years_until_onset"
            ],
            "label": "Projected monthly cost at onset",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "ratio": {
            "expression": "(1 + benefit_escalation) / (1 + discount_rate)",
            "dependencies": [
              "benefit_escalation",
              "discount_rate"
            ],
            "label": "Growth/discount ratio",
            "format": "decimal",
            "display": false
          },
          "pv_factor": {
            "expression": "if(ratio == 1, benefit_years, (1 - pow(ratio, benefit_years)) / (1 - ratio))",
            "dependencies": [
              "ratio",
              "benefit_years"
            ],
            "label": "Present-value series factor (geometric)",
            "format": "decimal",
            "display": false
          },
          "present_value_total": {
            "expression": "projected_start_monthly / pow(1 + discount_rate, years_until_onset) * pv_factor * 12",
            "dependencies": [
              "projected_start_monthly",
              "discount_rate",
              "years_until_onset",
              "pv_factor"
            ],
            "label": "Present value of expected care (all benefits)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "total_family_contribution": {
            "expression": "family_contribution_monthly * 12 * benefit_years",
            "dependencies": [
              "family_contribution_monthly",
              "benefit_years"
            ],
            "label": "Total expected family contribution",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "coverage_needed": {
            "expression": "max(present_value_total - existing_ltc_savings - total_family_contribution, 0)",
            "dependencies": [
              "present_value_total",
              "existing_ltc_savings",
              "total_family_contribution"
            ],
            "label": "Estimated additional coverage needed",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "covered_pct": {
            "expression": "if(present_value_total > 0, min(100, 100 * (existing_ltc_savings + total_family_contribution) / present_value_total), 0)",
            "dependencies": [
              "present_value_total",
              "existing_ltc_savings",
              "total_family_contribution"
            ],
            "label": "Percent of need covered by savings/family",
            "unit": "%",
            "format": "percent",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "coverage_needed",
            "label": "Estimated additional coverage needed",
            "variable": "coverage_needed",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "projected_start_monthly",
            "label": "Projected monthly care cost at expected onset",
            "variable": "projected_start_monthly",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "present_value_total",
            "label": "Present value of expected care (all benefits)",
            "variable": "present_value_total",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "covered_pct",
            "label": "Percent of need covered now (savings + family)",
            "variable": "covered_pct",
            "unit": "%",
            "format": "percent"
          }
        ]
      },
      "premium_estimate": {
        "label": "Simple Annual Premium Proxy",
        "description": "Provides a transparent, illustrative annual premium estimate using a rate-per-$1,000 of coverage applied to the coverage need calculated using the same economic assumptions. This is a proxy only — actual premiums depend on underwriting, product features and insurer pricing.",
        "variables": {
          "years_until_onset_p": {
            "expression": "max(expected_onset_age - current_age, 0)",
            "dependencies": [
              "expected_onset_age",
              "current_age"
            ],
            "label": "Years until expected need",
            "unit": "years",
            "format": "integer",
            "display": false
          },
          "projected_start_monthly_p": {
            "expression": "current_monthly_cost * pow(1 + annual_inflation, years_until_onset_p)",
            "dependencies": [
              "current_monthly_cost",
              "annual_inflation",
              "years_until_onset_p"
            ],
            "label": "Projected monthly cost at onset (premium method)",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "ratio_p": {
            "expression": "(1 + benefit_escalation) / (1 + discount_rate)",
            "dependencies": [
              "benefit_escalation",
              "discount_rate"
            ],
            "label": "Growth/discount ratio",
            "format": "decimal",
            "display": false
          },
          "pv_factor_p": {
            "expression": "if(ratio_p == 1, benefit_years, (1 - pow(ratio_p, benefit_years)) / (1 - ratio_p))",
            "dependencies": [
              "ratio_p",
              "benefit_years"
            ],
            "label": "PV series factor (premium method)",
            "format": "decimal",
            "display": false
          },
          "present_value_total_p": {
            "expression": "projected_start_monthly_p / pow(1 + discount_rate, years_until_onset_p) * pv_factor_p * 12",
            "dependencies": [
              "projected_start_monthly_p",
              "discount_rate",
              "years_until_onset_p",
              "pv_factor_p"
            ],
            "label": "Present value of expected care (premium method)",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "coverage_needed_p": {
            "expression": "max(present_value_total_p - existing_ltc_savings - (family_contribution_monthly * 12 * benefit_years), 0)",
            "dependencies": [
              "present_value_total_p",
              "existing_ltc_savings",
              "family_contribution_monthly",
              "benefit_years"
            ],
            "label": "Estimated additional coverage needed (premium method)",
            "unit": "USD",
            "format": "currency",
            "display": false
          },
          "annual_premium": {
            "expression": "(coverage_needed_p / 1000) * rate_per_thousand",
            "dependencies": [
              "coverage_needed_p",
              "rate_per_thousand"
            ],
            "label": "Illustrative annual premium (proxy)",
            "unit": "USD",
            "format": "currency",
            "display": true
          },
          "monthly_premium_equivalent": {
            "expression": "annual_premium / 12",
            "dependencies": [
              "annual_premium"
            ],
            "label": "Illustrative monthly premium equivalent",
            "unit": "USD",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "annual_premium",
            "label": "Illustrative annual premium",
            "variable": "annual_premium",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "monthly_premium_equivalent",
            "label": "Illustrative monthly premium equivalent",
            "variable": "monthly_premium_equivalent",
            "unit": "USD",
            "format": "currency"
          }
        ]
      }
    }
  },
