    "glossary": [
      {
        "term": "Present value",
        "definition": "The current-dollar equivalent of a future stream of payments, obtained by discounting future payments at a chosen discount rate."
      },
      {
        "term": "Benefit period",
        "definition": "The number of years an LTC policy will pay benefits after a qualifying event (e.g., 3 years, 5 years, lifetime)."
      },
      {
        "term": "Inflation protection / benefit escalation",
        "definition": "The annual percentage increase applied to policy benefits to help keep pace with rising care costs."
      },
      {
        "term": "Replacement ratio (covered_pct)",
        "definition": "Percent of the present-value need covered by existing savings and expected family contributions."
      }
    ]
