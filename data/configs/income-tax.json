    "glossary": [
      {
        "term": "Earned income",
        "definition": "Income received from employment, self-employment, and certain disability benefits that count toward the EITC phase-in calculation."
      },
      {
        "term": "Adjusted gross income (AGI)",
        "definition": "Gross income minus specific adjustments. For EITC phase-out the greater of AGI or earned income is used as the base."
      },
      {
        "term": "Phase-in rate",
        "definition": "The percentage of earned income used to build the EITC up to the statutory maximum for the filer profile."
      },
      {
        "term": "Phase-out threshold",
        "definition": "The income level above which the EITC begins to be reduced for higher-income taxpayers."
      },
      {
        "term": "Investment income limit",
        "definition": "A statutory cap on taxable investment income; taxpayers with investment income above this limit are generally ineligible for the EITC."
      }
    ],
    "summary": [
      "This estimator implements a standard phase-in → maximum → phase-out model to provide quick, transparent EITC estimates.",
      "Use the IRS EITC Assistant or a qualified tax preparer for filing-year exact calculations and to confirm eligibility for complex situations."
    ]
