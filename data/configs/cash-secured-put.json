    "glossary": [
      {
        "term": "Cash-secured put",
        "definition": "A short put option position where the seller holds sufficient cash to buy the underlying at the strike if assigned."
      },
      {
        "term": "Break-even price",
        "definition": "Strike price minus premium received; the underlying price at which the position's net result is zero at expiration (ignoring commissions and taxes)."
      },
      {
        "term": "Net credit",
        "definition": "Total premium received minus estimated commissions and fees."
      },
      {
        "term": "Return on cash",
        "definition": "Net credit divided by the cash required (reserve) for the position; shown per period."
      },
      {
        "term": "Annualized return (approx.)",
        "definition": "A linearized projection of the period return to a 365-day basis; an approximation for comparison, not a guarantee."
      }
    ]
  },
