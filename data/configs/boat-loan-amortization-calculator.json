{
  "version": "1.0.0",
  "metadata": {
    "title": "Boat Loan Amortization Calculator — Multiple Frequencies (monthly, bi‑weekly, accelerated bi‑weekly)",
    "description": "Calculate periodic payments, total paid, and total interest for boat loans using monthly, bi‑weekly standard, or accelerated bi‑weekly schedules. Includes extra payment support and clear accuracy, rounding, and regulatory caveats."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_accelerated",
    "methods": {
      "monthly": {
        "label": "Standard monthly payments",
        "description": "Conventional monthly amortization using the loan APR divided into monthly periods.",
        "variables": {
          "principal": {
            "expression": "principal",
            "dependencies": [
              "principal"
            ],
            "label": "Loan principal",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "rate_per_period": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Periodic interest rate (monthly)",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "n_payments": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of monthly payments",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "payment": {
            "expression": "(rate_per_period==0) ? (principal/n_payments) : (principal*rate_per_period/(1-(1+rate_per_period)**(-n_payments)))",
            "dependencies": [
              "principal",
              "rate_per_period",
              "n_payments"
            ],
            "label": "Base monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_plus_extra": {
            "expression": "payment + extra_payment",
            "dependencies": [
              "payment",
              "extra_payment"
            ],
            "label": "Monthly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "payment_plus_extra * n_payments",
            "dependencies": [
              "payment_plus_extra",
              "n_payments"
            ],
            "label": "Total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment_period",
            "label": "Monthly payment (incl. extras)",
            "variable": "payment_plus_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid",
            "label": "Total paid over term",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "num_payments",
            "label": "Number of payments",
            "variable": "n_payments",
            "format": "integer"
          }
        ]
      },
      "biweekly_standard": {
        "label": "Bi‑weekly — standard amortization",
        "description": "Bi‑weekly payments with the loan amortized over bi‑weekly periods (26 payments per year). Each payment is calculated for the bi‑weekly period using APR/26.",
        "variables": {
          "rate_per_period": {
            "expression": "annual_rate/100/26",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Periodic interest rate (bi‑weekly)",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "n_payments": {
            "expression": "term_years*26",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of bi‑weekly payments",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "payment": {
            "expression": "(rate_per_period==0) ? (principal/n_payments) : (principal*rate_per_period/(1-(1+rate_per_period)**(-n_payments)))",
            "dependencies": [
              "principal",
              "rate_per_period",
              "n_payments"
            ],
            "label": "Base bi‑weekly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_plus_extra": {
            "expression": "payment + extra_payment",
            "dependencies": [
              "payment",
              "extra_payment"
            ],
            "label": "Bi‑weekly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "payment_plus_extra * n_payments",
            "dependencies": [
              "payment_plus_extra",
              "n_payments"
            ],
            "label": "Total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment_period",
            "label": "Bi‑weekly payment (incl. extras)",
            "variable": "payment_plus_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid",
            "label": "Total paid over term",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "num_payments",
            "label": "Number of payments",
            "variable": "n_payments",
            "format": "integer"
          }
        ]
      },
      "biweekly_accelerated": {
        "label": "Accelerated bi‑weekly (half monthly payment every two weeks)",
        "description": "Accelerated bi‑weekly where each payment is half the standard monthly payment and is paid every two weeks (26 payments per year). This typically produces an extra full monthly payment per year versus monthly schedule and shortens the effective term.",
        "variables": {
          "monthly_rate": {
            "expression": "annual_rate/100/12",
            "dependencies": [
              "annual_rate"
            ],
            "label": "Monthly periodic rate",
            "unit": "%",
            "format": "percent",
            "display": false
          },
          "monthly_n": {
            "expression": "term_years*12",
            "dependencies": [
              "term_years"
            ],
            "label": "Monthly number of payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "monthly_payment": {
            "expression": "(monthly_rate==0) ? (principal/monthly_n) : (principal*monthly_rate/(1-(1+monthly_rate)**(-monthly_n)))",
            "dependencies": [
              "principal",
              "monthly_rate",
              "monthly_n"
            ],
            "label": "Equivalent monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "biweekly_payment": {
            "expression": "monthly_payment/2",
            "dependencies": [
              "monthly_payment"
            ],
            "label": "Bi‑weekly payment (half of monthly)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_payments": {
            "expression": "term_years*26",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of bi‑weekly payments",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "payment_plus_extra": {
            "expression": "biweekly_payment + extra_payment",
            "dependencies": [
              "biweekly_payment",
              "extra_payment"
            ],
            "label": "Bi‑weekly payment including extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "payment_plus_extra * n_payments",
            "dependencies": [
              "payment_plus_extra",
              "n_payments"
            ],
            "label": "Total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - principal",
            "dependencies": [
              "total_paid",
              "principal"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "payment_period",
            "label": "Bi‑weekly payment (incl. extras)",
            "variable": "payment_plus_extra",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_paid",
            "label": "Total paid over term",
            "variable": "total_paid",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest",
            "variable": "total_interest",
            "unit": "USD",
            "format": "currency"
          },
          {
            "id": "num_payments",
            "label": "Number of payments",
            "variable": "n_payments",
            "format": "integer"
          }
        ]
      }
    }
  },
  "form": {
    "fields": [
      {
        "id": "principal",
        "label": "Loan principal (amount borrowed)",
        "type": "number",
        "default": 30000,
        "min": 0,
        "step": 50
      },
      {
        "id": "annual_rate",
        "label": "Annual interest rate (APR %)",
        "type": "number",
        "default": 6.5,
        "min": 0,
        "step": 0.01
      },
      {
        "id": "term_years",
        "label": "Term (years)",
        "type": "number",
        "default": 10,
        "min": 0.25,
        "step": 0.25
      },
      {
        "id": "payment_frequency",
        "label": "Preferred frequency (used to choose method)",
        "type": "select",
        "default": "biweekly_accelerated",
        "options": [
          {
            "label": "Monthly",
            "value": "monthly"
          },
          {
            "label": "Bi‑weekly — standard",
            "value": "biweekly_standard"
          },
          {
            "label": "Accelerated bi‑weekly (half monthly every 2 weeks)",
            "value": "biweekly_accelerated"
          }
        ]
      },
      {
        "id": "extra_payment",
        "label": "Additional payment per period (optional)",
        "type": "number",
        "default": 0,
        "min": 0,
        "step": 1
      }
    ]
  },
  "page_content": {
    "introduction": [
      "This calculator estimates periodic payments, total amount paid, and total interest for a boat loan under three common amortization approaches: monthly, bi‑weekly (standard), and accelerated bi‑weekly (half of the monthly payment every two weeks). Use the extra payment field to model additional principal paid each period.",
      "Results are numerical estimates intended for planning. They exclude lender fees, taxes, insurance, repossession costs, and other charges that may be included in a loan agreement. Confirm final terms with your lender."
    ],
    "methodology": [
      "Calculations use standard amortization formulas for fixed‑rate installment loans. Periodic rates are derived from the APR divided by the number of periods per year (12 for monthly, 26 for bi‑weekly). For accelerated bi‑weekly the tool computes the half‑monthly payment and applies it every two weeks (26 payments/year), which typically reduces principal faster than monthly payments.",
      "Numerical accuracy and rounding follow good engineering practice. Results are computed with double precision arithmetic where available; final displayed values are rounded to two decimal places for currency. This tool follows validation and quality assurance principles aligned with ISO quality process guidance and IEEE numerical computation recommendations. Data handling and integrity guidance references NIST best practices for information integrity."
    ],
    "how_is_calculated": [
      "Periodic interest rate = APR / 100 / periods_per_year.",
      "Number of periods = term_years * periods_per_year.",
      "Periodic payment (if rate is greater than zero) = principal * r / (1 - (1 + r)^(-n)); if the rate equals zero, payment = principal / n.",
      "Accelerated bi‑weekly payment (this tool) equals half the monthly payment, applied every two weeks (26 payments per year).",
      "Total paid = periodic payment (including extra) * number of periods. Total interest = total paid - principal."
    ],
    "examples": [
      "Example 1: $30,000 loan, 6.5% APR, 10 years. Monthly payment computed by monthly method; accelerated bi‑weekly shows faster principal reduction and lower total interest over the term.",
      "Example 2: Same loan with $20 extra per bi‑weekly period reduces term and interest; enter extra_payment to see impact."
    ],
    "faqs": [
      {
        "question": "Does accelerated bi‑weekly always save interest?",
        "answer": "Typically yes: accelerated bi‑weekly (half the monthly payment every two weeks) results in 26 half‑payments per year, which is equivalent to 13 full monthly payments per year instead of 12, yielding extra principal reduction and lower total interest. Exact savings depend on APR, term, and any extra payments."
      },
      {
        "question": "Is APR the same as the periodic interest rate used here?",
        "answer": "APR is annual percentage rate. This calculator converts APR into a periodic rate by dividing APR by the number of periods per year (12 or 26). Some lenders quote APR differently (including fees); consult your loan documents for the effective rate and any finance charges."
      },
      {
        "question": "Are lender fees, taxes, or insurance included?",
        "answer": "No. This tool models amortization on the principal and APR only. Fees, insurance, taxes, and escrow items are excluded and must be added separately or clarified with your lender."
      },
      {
        "question": "How accurate are these numbers?",
        "answer": "Values are theoretical estimates using standard amortization formulas and double precision arithmetic. Rounding and lender rounding conventions can produce small differences. For exact payoff schedules or regulatory disclosures, refer to lender statements."
      },
      {
        "question": "What if the APR is zero?",
        "answer": "If the APR is 0, the calculator divides principal evenly over the number of periods. No interest will be shown."
      }
    ],
