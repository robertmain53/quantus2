    "glossary": [
      {
        "term": "APR",
        "definition": "Annual Percentage Rate. The annual cost of borrowing expressed as a percentage, used here to derive the periodic interest rate."
      },
      {
        "term": "Principal",
        "definition": "The amount of money borrowed on which interest is calculated."
      },
      {
        "term": "Amortization",
        "definition": "The process of spreading loan payments over time so each payment partly reduces interest and partly reduces principal."
      },
      {
        "term": "Bi‑weekly (standard)",
        "definition": "Payments made every two weeks with amount calculated for the bi‑weekly period using APR/26."
      },
      {
        "term": "Accelerated bi‑weekly",
        "definition": "A payment plan where the borrower pays half of the monthly payment every two weeks (26 payments per year), typically accelerating principal reduction."
      }
    ]
