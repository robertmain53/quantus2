{
  "version": "1.0.0",
  "metadata": {
    "title": "RV Loan Payment Calculator â€” Extra Payments",
    "description": "Estimate RV loan payments, amortization impact, payoff time and interest saved when you add recurring or one-time extra principal payments. Includes safeguards, limits and accuracy notes."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "with_extra_payments",
    "methods": {
      "standard_amortization": {
        "label": "Standard amortization (no extra payments)",
        "description": "Calculates scheduled payment, total interest and payoff time using standard amortization.",
        "variables": {
          "r": {
            "expression": "annual_interest_rate / 100 / payments_per_year",
            "dependencies": [
              "annual_interest_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "format": "percent",
            "display": true
          },
          "n": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of payments",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "scheduled_payment": {
            "expression": "(r * principal) / (1 - (1 + r) ** (-n))",
            "dependencies": [
              "r",
              "principal",
              "n"
            ],
            "label": "Scheduled payment per period",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "original_total_interest": {
            "expression": "scheduled_payment * n - principal",
            "dependencies": [
              "scheduled_payment",
              "n",
              "principal"
            ],
            "label": "Total interest (no extra payments)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_time_years": {
            "expression": "n / payments_per_year",
            "dependencies": [
              "n",
              "payments_per_year"
            ],
            "label": "Payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled payment per period",
            "variable": "scheduled_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "original_total_interest",
            "label": "Total interest (no extra payments)",
            "variable": "original_total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payoff_time_years",
            "label": "Payoff time (years)",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      },
      "with_extra_payments": {
        "label": "With extra payments (recurring and/or one-time)",
        "description": "Estimates effect of recurring extra principal payments and a single one-time extra principal payment applied at a chosen payment number. Returns adjusted payoff time, total interest and interest saved compared to standard amortization.",
        "variables": {
          "r": {
            "expression": "annual_interest_rate / 100 / payments_per_year",
            "dependencies": [
              "annual_interest_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "format": "percent",
            "display": true
          },
          "n": {
            "expression": "term_years * payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Original total payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "scheduled_payment": {
            "expression": "(r * principal) / (1 - (1 + r) ** (-n))",
            "dependencies": [
              "r",
              "principal",
              "n"
            ],
            "label": "Scheduled payment per period",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "balance_before_one_time": {
            "expression": "principal * (1 + r) ** (one_time_payment_number - 1) - scheduled_payment * (((1 + r) ** (one_time_payment_number - 1) - 1) / r)",
            "dependencies": [
              "principal",
              "r",
              "scheduled_payment",
              "one_time_payment_number"
            ],
            "label": "Estimated remaining balance immediately before one-time extra payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "principal_after_one_time": {
            "expression": "max(balance_before_one_time - one_time_extra_amount, 0)",
            "dependencies": [
              "balance_before_one_time",
              "one_time_extra_amount"
            ],
            "label": "Principal after applying one-time extra payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "scheduled_payment + recurring_extra_amount",
            "dependencies": [
              "scheduled_payment",
              "recurring_extra_amount"
            ],
            "label": "Payment per period including recurring extra",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_after": {
            "expression": "- ln(1 - r * principal_after_one_time / payment_with_extra) / ln(1 + r)",
            "dependencies": [
              "r",
              "principal_after_one_time",
              "payment_with_extra"
            ],
            "label": "Remaining number of payments after applying one-time extra",
            "unit": "payments",
            "format": "decimal",
            "display": false
          },
          "estimated_payoff_payments": {
            "expression": "(one_time_payment_number - 1) + n_after",
            "dependencies": [
              "one_time_payment_number",
              "n_after"
            ],
            "label": "Estimated total number of payments until payoff",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "payoff_time_years": {
            "expression": "estimated_payoff_payments / payments_per_year",
            "dependencies": [
              "estimated_payoff_payments",
              "payments_per_year"
            ],
            "label": "Estimated payoff time",
            "unit": "years",
            "format": "decimal",
            "display": true
          },
          "interest_before_one_time": {
            "expression": "scheduled_payment * (one_time_payment_number - 1) - (principal - balance_before_one_time)",
            "dependencies": [
              "scheduled_payment",
              "one_time_payment_number",
              "principal",
              "balance_before_one_time"
            ],
            "label": "Interest paid before one-time extra",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_interest_after_one_time": {
            "expression": "payment_with_extra * n_after - principal_after_one_time",
            "dependencies": [
              "payment_with_extra",
              "n_after",
              "principal_after_one_time"
            ],
            "label": "Interest from after one-time extra until payoff",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "total_interest": {
            "expression": "interest_before_one_time + total_interest_after_one_time",
            "dependencies": [
              "interest_before_one_time",
              "total_interest_after_one_time"
            ],
            "label": "Estimated total interest with extra payments",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "original_total_interest": {
            "expression": "scheduled_payment * n - principal",
            "dependencies": [
              "scheduled_payment",
              "n",
              "principal"
            ],
            "label": "Total interest without extra payments",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "interest_saved": {
            "expression": "original_total_interest - total_interest",
            "dependencies": [
              "original_total_interest",
              "total_interest"
            ],
            "label": "Estimated interest saved",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "scheduled_payment",
            "label": "Scheduled payment per period (no extra)",
            "variable": "scheduled_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Payment per period including recurring extra",
            "variable": "payment_with_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "estimated_payoff_payments",
            "label": "Estimated number of payments until payoff",
            "variable": "estimated_payoff_payments",
            "unit": "payments",
            "format": "decimal"
          },
          {
            "id": "payoff_time_years",
            "label": "Estimated payoff time (years)",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "total_interest",
            "label": "Estimated total interest (with extra payments)",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "interest_saved",
            "label": "Estimated interest saved vs no extra",
            "variable": "interest_saved",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
