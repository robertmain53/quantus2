    "glossary": [
      {
        "term": "APR (Annual Percentage Rate)",
        "definition": "Nominal annual interest rate used for loan disclosure; may not reflect intra‑year compounding."
      },
      {
        "term": "Effective Annual Rate (EAR)",
        "definition": "Annual interest rate that accounts for compounding within the year; calculated from periodic rate as (1 + periodic)^(periods per year) − 1."
      },
      {
        "term": "True bi‑weekly",
        "definition": "An amortization schedule using a periodic rate for 26 payments per year (payments every two weeks)."
      },
      {
        "term": "Split bi‑weekly (accelerated)",
        "definition": "Take the standard monthly payment and divide by two, paying that amount every two weeks, resulting in 26 half‑payments per year and typically faster payoff."
      },
      {
        "term": "Extra payment",
        "definition": "Additional recurring principal applied each payment period; reduces principal and overall interest when applied."
      }
    ],
    "summary": [
      "Use the monthly method to see lender‑standard amortization. Use true bi‑weekly or split bi‑weekly to compare accelerated payoff options.",
      "This calculator provides estimates; consult your lender for precise schedules, fees, and the exact application of payments."
    ]
  },
