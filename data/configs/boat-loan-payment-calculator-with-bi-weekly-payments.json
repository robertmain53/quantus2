{
  "version": "1.0.0",
  "metadata": {
    "title": "Boat Loan Payment Calculator — Bi‑Weekly and Monthly Options",
    "description": "Calculate scheduled payments, total paid, and total interest for a boat loan using monthly payments, true bi‑weekly (26/year) amortization, or accelerated bi‑weekly (split monthly payment). Includes extra payment support and effective annual rate estimates."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "biweekly_true",
    "methods": {
      "monthly": {
        "label": "Monthly payments (standard amortization)",
        "description": "Standard loan amortization with monthly payments (12 payments per year). Use this to compare against bi‑weekly schedules.",
        "variables": {
          "r": {
            "expression": "annual_interest_rate_percent / 100",
            "dependencies": [
              "annual_interest_rate_percent"
            ],
            "label": "Annual interest rate (decimal)",
            "display": false
          },
          "i_month": {
            "expression": "r / 12",
            "dependencies": [
              "r"
            ],
            "label": "Monthly interest rate",
            "display": false
          },
          "n_month": {
            "expression": "term_years * 12",
            "dependencies": [
              "term_years"
            ],
            "label": "Total number of monthly payments",
            "unit": "months",
            "format": "integer",
            "display": false
          },
          "monthly_payment": {
            "expression": "loan_amount * (i_month * (1 + i_month) ^ n_month) / ((1 + i_month) ^ n_month - 1)",
            "dependencies": [
              "loan_amount",
              "i_month",
              "n_month"
            ],
            "label": "Monthly payment (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "monthly_payment + extra_payment",
            "dependencies": [
              "monthly_payment",
              "extra_payment"
            ],
            "label": "Monthly payment including extra principal",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_payments": {
            "expression": "n_month",
            "dependencies": [
              "n_month"
            ],
            "label": "Number of payments",
            "unit": "months",
            "format": "integer",
            "display": true
          },
          "total_paid": {
            "expression": "payment_with_extra * total_payments",
            "dependencies": [
              "payment_with_extra",
              "total_payments"
            ],
            "label": "Total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "effective_annual_rate": {
            "expression": "(1 + r/12) ^ 12 - 1",
            "dependencies": [
              "r"
            ],
            "label": "Effective annual rate (EAR)",
            "unit": "%",
            "format": "percent",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_payment",
            "label": "Monthly payment",
            "variable": "monthly_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Monthly payment (with extra)",
            "variable": "payment_with_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_payments",
            "label": "Payments (count)",
            "variable": "total_payments",
            "format": "integer"
          },
          {
            "id": "total_paid",
            "label": "Total paid over life of loan",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "effective_annual_rate",
            "label": "Effective annual rate (EAR)",
            "variable": "effective_annual_rate",
            "unit": "%",
            "format": "percent"
          }
        ]
      },
      "biweekly_true": {
        "label": "Bi‑weekly (true) — 26 payments per year",
        "description": "Amortization with payments every two weeks (26 payments per year). Uses the bi‑weekly periodic rate to compute level payments over the total 26*years periods.",
        "variables": {
          "r": {
            "expression": "annual_interest_rate_percent / 100",
            "dependencies": [
              "annual_interest_rate_percent"
            ],
            "label": "Annual interest rate (decimal)",
            "display": false
          },
          "i_bw": {
            "expression": "r / 26",
            "dependencies": [
              "r"
            ],
            "label": "Bi‑weekly periodic rate",
            "display": false
          },
          "n_bw": {
            "expression": "term_years * 26",
            "dependencies": [
              "term_years"
            ],
            "label": "Total number of bi‑weekly payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "biweekly_payment": {
            "expression": "loan_amount * (i_bw * (1 + i_bw) ^ n_bw) / ((1 + i_bw) ^ n_bw - 1)",
            "dependencies": [
              "loan_amount",
              "i_bw",
              "n_bw"
            ],
            "label": "Bi‑weekly payment (principal + interest)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "biweekly_payment + extra_payment",
            "dependencies": [
              "biweekly_payment",
              "extra_payment"
            ],
            "label": "Bi‑weekly payment including extra principal",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_payments": {
            "expression": "n_bw",
            "dependencies": [
              "n_bw"
            ],
            "label": "Number of payments",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "total_paid": {
            "expression": "payment_with_extra * total_payments",
            "dependencies": [
              "payment_with_extra",
              "total_payments"
            ],
            "label": "Total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "effective_annual_rate": {
            "expression": "(1 + r/26) ^ 26 - 1",
            "dependencies": [
              "r"
            ],
            "label": "Effective annual rate (EAR)",
            "unit": "%",
            "format": "percent",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "biweekly_payment",
            "label": "Bi‑weekly payment",
            "variable": "biweekly_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payment_with_extra",
            "label": "Bi‑weekly payment (with extra)",
            "variable": "payment_with_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_payments",
            "label": "Payments (count)",
            "variable": "total_payments",
            "format": "integer"
          },
          {
            "id": "total_paid",
            "label": "Total paid over life of loan",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "effective_annual_rate",
            "label": "Effective annual rate (EAR)",
            "variable": "effective_annual_rate",
            "unit": "%",
            "format": "percent"
          }
        ]
      },
      "biweekly_split": {
        "label": "Bi‑weekly (split monthly payment) — accelerated",
        "description": "Split the standard monthly payment in half and pay every two weeks. This results in 26 payments a year and typically shortens the loan and reduces interest compared with monthly payments.",
        "variables": {
          "r": {
            "expression": "annual_interest_rate_percent / 100",
            "dependencies": [
              "annual_interest_rate_percent"
            ],
            "label": "Annual interest rate (decimal)",
            "display": false
          },
          "i_month": {
            "expression": "r / 12",
            "dependencies": [
              "r"
            ],
            "label": "Monthly interest rate",
            "display": false
          },
          "n_month": {
            "expression": "term_years * 12",
            "dependencies": [
              "term_years"
            ],
            "label": "Total number of monthly payments",
            "unit": "months",
            "format": "integer",
            "display": false
          },
          "monthly_payment": {
            "expression": "loan_amount * (i_month * (1 + i_month) ^ n_month) / ((1 + i_month) ^ n_month - 1)",
            "dependencies": [
              "loan_amount",
              "i_month",
              "n_month"
            ],
            "label": "Equivalent monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": false
          },
          "biweekly_split_payment": {
            "expression": "monthly_payment / 2",
            "dependencies": [
              "monthly_payment"
            ],
            "label": "Bi‑weekly payment = monthly payment / 2",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "biweekly_split_payment + extra_payment",
            "dependencies": [
              "biweekly_split_payment",
              "extra_payment"
            ],
            "label": "Bi‑weekly payment including extra principal",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "n_bw": {
            "expression": "term_years * 26",
            "dependencies": [
              "term_years"
            ],
            "label": "Number of bi‑weekly payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "total_payments": {
            "expression": "n_bw",
            "dependencies": [
              "n_bw"
