{
  "version": "1.0.0",
  "metadata": {
    "title": "Personal Loan Amortization — Bi‑Weekly & Accelerated Options",
    "description": "Interactive amortization engine for personal loans that compares standard bi‑weekly, accelerated bi‑weekly (split monthly payment), and a monthly baseline. Includes extra payment handling, payoff time, total interest, and clear accuracy and standards notes."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "standard_biweekly",
    "methods": {
      "standard_biweekly": {
        "label": "Standard bi‑weekly (26 payments/year)",
        "description": "Calculates a fixed periodic payment using 26 payments per year. Supports an optional constant extra payment applied to each bi‑weekly installment.",
        "variables": {
          "payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "payments/year",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_rate/100/payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Periodic interest rate",
            "unit": "",
            "format": "decimal",
            "display": true
          },
          "total_payments": {
            "expression": "term_years*payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of payments",
            "unit": "payments",
            "format": "integer",
            "display": true
          },
          "base_payment": {
            "expression": "(loan_amount*periodic_rate)/(1 - (1+periodic_rate)^(-total_payments))",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "total_payments"
            ],
            "label": "Calculated bi‑weekly payment (without extras)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payment_with_extra": {
            "expression": "base_payment + extra_payment",
            "dependencies": [
              "base_payment",
              "extra_payment"
            ],
            "label": "Bi‑weekly payment (with extra)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "payment_with_extra * total_payments",
            "dependencies": [
              "payment_with_extra",
              "total_payments"
            ],
            "label": "Total amount paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_time_years": {
            "expression": "total_payments / payments_per_year",
            "dependencies": [
              "total_payments",
              "payments_per_year"
            ],
            "label": "Payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment",
            "label": "Bi‑weekly payment",
            "variable": "payment_with_extra",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_paid",
            "label": "Total paid over life of loan",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payoff_time_years",
            "label": "Payoff time (years)",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          },
          {
            "id": "number_of_payments",
            "label": "Number of payments",
            "variable": "total_payments",
            "unit": "payments",
            "format": "integer"
          }
        ]
      },
      "accelerated_biweekly": {
        "label": "Accelerated bi‑weekly (split monthly payment)",
        "description": "Computes the bi‑weekly payment equal to half the standard monthly payment and derives the resulting faster payoff and interest savings using 26 payments/year periodic rate.",
        "variables": {
          "monthly_payments_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Monthly payments per year",
            "unit": "payments/year",
            "format": "integer",
            "display": false
          },
          "monthly_rate": {
            "expression": "annual_rate/100/monthly_payments_per_year",
            "dependencies": [
              "annual_rate",
              "monthly_payments_per_year"
            ],
            "label": "Monthly periodic rate",
            "unit": "",
            "format": "decimal",
            "display": false
          },
          "total_months": {
            "expression": "term_years*monthly_payments_per_year",
            "dependencies": [
              "term_years",
              "monthly_payments_per_year"
            ],
            "label": "Total months",
            "unit": "months",
            "format": "integer",
            "display": false
          },
          "monthly_payment": {
            "expression": "(loan_amount*monthly_rate)/(1 - (1+monthly_rate)^(-total_months))",
            "dependencies": [
              "loan_amount",
              "monthly_rate",
              "total_months"
            ],
            "label": "Standard monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "biweekly_payment": {
            "expression": "monthly_payment / 2",
            "dependencies": [
              "monthly_payment"
            ],
            "label": "Accelerated bi‑weekly payment (half monthly)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payments_per_year": {
            "expression": "26",
            "dependencies": [],
            "label": "Payments per year (bi‑weekly)",
            "unit": "payments/year",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_rate/100/payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Bi‑weekly periodic rate",
            "unit": "",
            "format": "decimal",
            "display": true
          },
          "number_of_payments": {
            "expression": "-ln(1 - (periodic_rate*loan_amount)/biweekly_payment)/ln(1+periodic_rate)",
            "dependencies": [
              "periodic_rate",
              "loan_amount",
              "biweekly_payment"
            ],
            "label": "Estimated number of bi‑weekly payments",
            "unit": "payments",
            "format": "decimal",
            "display": true
          },
          "total_paid": {
            "expression": "biweekly_payment * number_of_payments",
            "dependencies": [
              "biweekly_payment",
              "number_of_payments"
            ],
            "label": "Total paid under accelerated schedule",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Total interest paid",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "payoff_time_years": {
            "expression": "number_of_payments / payments_per_year",
            "dependencies": [
              "number_of_payments",
              "payments_per_year"
            ],
            "label": "Payoff time (years)",
            "unit": "years",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "periodic_payment",
            "label": "Bi‑weekly payment (accelerated)",
            "variable": "biweekly_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "number_of_payments",
            "label": "Estimated number of payments",
            "variable": "number_of_payments",
            "unit": "payments",
            "format": "decimal"
          },
          {
            "id": "total_paid",
            "label": "Total paid",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest paid",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "payoff_time_years",
            "label": "Payoff time (years)",
            "variable": "payoff_time_years",
            "unit": "years",
            "format": "decimal"
          }
        ]
      },
      "monthly_baseline": {
        "label": "Monthly baseline (12 payments/year)",
        "description": "Monthly payment reference used for comparison. Useful to show savings from switching to bi‑weekly options.",
        "variables": {
          "payments_per_year": {
            "expression": "12",
            "dependencies": [],
            "label": "Payments per year",
            "unit": "payments/year",
            "format": "integer",
            "display": false
          },
          "periodic_rate": {
            "expression": "annual_rate/100/payments_per_year",
            "dependencies": [
              "annual_rate",
              "payments_per_year"
            ],
            "label": "Monthly periodic rate",
            "unit": "",
            "format": "decimal",
            "display": false
          },
          "total_payments": {
            "expression": "term_years*payments_per_year",
            "dependencies": [
              "term_years",
              "payments_per_year"
            ],
            "label": "Total number of payments",
            "unit": "payments",
            "format": "integer",
            "display": false
          },
          "monthly_payment": {
            "expression": "(loan_amount*periodic_rate)/(1 - (1+periodic_rate)^(-total_payments))",
            "dependencies": [
              "loan_amount",
              "periodic_rate",
              "total_payments"
            ],
            "label": "Monthly payment",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_paid": {
            "expression": "monthly_payment * total_payments",
            "dependencies": [
              "monthly_payment",
              "total_payments"
            ],
            "label": "Total paid (monthly)",
            "unit": "currency",
            "format": "currency",
            "display": true
          },
          "total_interest": {
            "expression": "total_paid - loan_amount",
            "dependencies": [
              "total_paid",
              "loan_amount"
            ],
            "label": "Total interest (monthly)",
            "unit": "currency",
            "format": "currency",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "monthly_payment",
            "label": "Monthly payment",
            "variable": "monthly_payment",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_paid",
            "label": "Total paid (monthly)",
            "variable": "total_paid",
            "unit": "currency",
            "format": "currency"
          },
          {
            "id": "total_interest",
            "label": "Total interest (monthly)",
            "variable": "total_interest",
            "unit": "currency",
            "format": "currency"
          }
        ]
      }
    }
  },
