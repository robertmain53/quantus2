{
  "version": "1.0.0",
  "metadata": {
    "title": "Meeting Planner by Time Zone (up to 5 participants)",
    "description": "Calculate and compare local times for up to five participants, check whether a chosen UTC time falls within each participant's working hours, and compute a fairness score for the proposed time. Includes accuracy caveats and references to time standards."
  },
  "logic": {
    "type": "advanced",
    "defaultMethod": "convert_from_utc",
    "methods": {
      "convert_from_utc": {
        "label": "Convert a chosen UTC time to participants' local times",
        "description": "Take a UTC time (minutes since UTC midnight) and list each participant's local time in minutes and hour-of-day; report whether that local time falls inside the participant's defined working window.",
        "variables": {
          "local_min_1": {
            "expression": "utc_time_minutes + offset_1 * 60",
            "dependencies": [
              "utc_time_minutes",
              "offset_1"
            ],
            "label": "Participant 1 local time (minutes since local midnight, may be outside 0-1439 range)",
            "unit": "minutes",
            "format": "integer",
            "display": true
          },
          "local_hour_1": {
            "expression": "local_min_1 / 60",
            "dependencies": [
              "local_min_1"
            ],
            "label": "Participant 1 local hour (decimal)",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "within_work_1": {
            "expression": "(local_hour_1 >= work_start_1) * (local_hour_1 < work_end_1) * active_1",
            "dependencies": [
              "local_hour_1",
              "work_start_1",
              "work_end_1",
              "active_1"
            ],
            "label": "Participant 1 within working hours (1 = yes, 0 = no or inactive)",
            "format": "decimal",
            "display": true
          },
          "local_min_2": {
            "expression": "utc_time_minutes + offset_2 * 60",
            "dependencies": [
              "utc_time_minutes",
              "offset_2"
            ],
            "label": "Participant 2 local time (minutes)",
            "unit": "minutes",
            "format": "integer",
            "display": true
          },
          "local_hour_2": {
            "expression": "local_min_2 / 60",
            "dependencies": [
              "local_min_2"
            ],
            "label": "Participant 2 local hour (decimal)",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "within_work_2": {
            "expression": "(local_hour_2 >= work_start_2) * (local_hour_2 < work_end_2) * active_2",
            "dependencies": [
              "local_hour_2",
              "work_start_2",
              "work_end_2",
              "active_2"
            ],
            "label": "Participant 2 within working hours",
            "format": "decimal",
            "display": true
          },
          "local_min_3": {
            "expression": "utc_time_minutes + offset_3 * 60",
            "dependencies": [
              "utc_time_minutes",
              "offset_3"
            ],
            "label": "Participant 3 local time (minutes)",
            "unit": "minutes",
            "format": "integer",
            "display": true
          },
          "local_hour_3": {
            "expression": "local_min_3 / 60",
            "dependencies": [
              "local_min_3"
            ],
            "label": "Participant 3 local hour (decimal)",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "within_work_3": {
            "expression": "(local_hour_3 >= work_start_3) * (local_hour_3 < work_end_3) * active_3",
            "dependencies": [
              "local_hour_3",
              "work_start_3",
              "work_end_3",
              "active_3"
            ],
            "label": "Participant 3 within working hours",
            "format": "decimal",
            "display": true
          },
          "local_min_4": {
            "expression": "utc_time_minutes + offset_4 * 60",
            "dependencies": [
              "utc_time_minutes",
              "offset_4"
            ],
            "label": "Participant 4 local time (minutes)",
            "unit": "minutes",
            "format": "integer",
            "display": true
          },
          "local_hour_4": {
            "expression": "local_min_4 / 60",
            "dependencies": [
              "local_min_4"
            ],
            "label": "Participant 4 local hour (decimal)",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "within_work_4": {
            "expression": "(local_hour_4 >= work_start_4) * (local_hour_4 < work_end_4) * active_4",
            "dependencies": [
              "local_hour_4",
              "work_start_4",
              "work_end_4",
              "active_4"
            ],
            "label": "Participant 4 within working hours",
            "format": "decimal",
            "display": true
          },
          "local_min_5": {
            "expression": "utc_time_minutes + offset_5 * 60",
            "dependencies": [
              "utc_time_minutes",
              "offset_5"
            ],
            "label": "Participant 5 local time (minutes)",
            "unit": "minutes",
            "format": "integer",
            "display": true
          },
          "local_hour_5": {
            "expression": "local_min_5 / 60",
            "dependencies": [
              "local_min_5"
            ],
            "label": "Participant 5 local hour (decimal)",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "within_work_5": {
            "expression": "(local_hour_5 >= work_start_5) * (local_hour_5 < work_end_5) * active_5",
            "dependencies": [
              "local_hour_5",
              "work_start_5",
              "work_end_5",
              "active_5"
            ],
            "label": "Participant 5 within working hours",
            "format": "decimal",
            "display": true
          },
          "active_count": {
            "expression": "active_1 + active_2 + active_3 + active_4 + active_5",
            "dependencies": [
              "active_1",
              "active_2",
              "active_3",
              "active_4",
              "active_5"
            ],
            "label": "Number of active participants",
            "format": "integer",
            "display": true
          },
          "total_within": {
            "expression": "within_work_1 + within_work_2 + within_work_3 + within_work_4 + within_work_5",
            "dependencies": [
              "within_work_1",
              "within_work_2",
              "within_work_3",
              "within_work_4",
              "within_work_5"
            ],
            "label": "Total participants whose local time is within working hours",
            "format": "integer",
            "display": true
          },
          "fraction_within": {
            "expression": "total_within / (active_count + 0.000001)",
            "dependencies": [
              "total_within",
              "active_count"
            ],
            "label": "Fraction of active participants within working hours",
            "format": "percent",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "local_min_1",
            "label": "Participant 1 local time (minutes since local midnight)",
            "variable": "local_min_1",
            "unit": "minutes",
            "format": "integer"
          },
          {
            "id": "local_hour_1",
            "label": "Participant 1 local hour (decimal)",
            "variable": "local_hour_1",
            "unit": "hours",
            "format": "decimal"
          },
          {
            "id": "within_work_1",
            "label": "Participant 1 within working hours",
            "variable": "within_work_1",
            "format": "decimal"
          },
          {
            "id": "local_min_2",
            "label": "Participant 2 local time (minutes since local midnight)",
            "variable": "local_min_2",
            "unit": "minutes",
            "format": "integer"
          },
          {
            "id": "local_hour_2",
            "label": "Participant 2 local hour (decimal)",
            "variable": "local_hour_2",
            "unit": "hours",
            "format": "decimal"
          },
          {
            "id": "within_work_2",
            "label": "Participant 2 within working hours",
            "variable": "within_work_2",
            "format": "decimal"
          },
          {
            "id": "local_min_3",
            "label": "Participant 3 local time (minutes since local midnight)",
            "variable": "local_min_3",
            "unit": "minutes",
            "format": "integer"
          },
          {
            "id": "local_hour_3",
            "label": "Participant 3 local hour (decimal)",
            "variable": "local_hour_3",
            "unit": "hours",
            "format": "decimal"
          },
          {
            "id": "within_work_3",
            "label": "Participant 3 within working hours",
            "variable": "within_work_3",
            "format": "decimal"
          },
          {
            "id": "local_min_4",
            "label": "Participant 4 local time (minutes since local midnight)",
            "variable": "local_min_4",
            "unit": "minutes",
            "format": "integer"
          },
          {
            "id": "local_hour_4",
            "label": "Participant 4 local hour (decimal)",
            "variable": "local_hour_4",
            "unit": "hours",
            "format": "decimal"
          },
          {
            "id": "within_work_4",
            "label": "Participant 4 within working hours",
            "variable": "within_work_4",
            "format": "decimal"
          },
          {
            "id": "local_min_5",
            "label": "Participant 5 local time (minutes since local midnight)",
            "variable": "local_min_5",
            "unit": "minutes",
            "format": "integer"
          },
          {
            "id": "local_hour_5",
            "label": "Participant 5 local hour (decimal)",
            "variable": "local_hour_5",
            "unit": "hours",
            "format": "decimal"
          },
          {
            "id": "within_work_5",
            "label": "Participant 5 within working hours",
            "variable": "within_work_5",
            "format": "decimal"
          },
          {
            "id": "active_count",
            "label": "Active participants",
            "variable": "active_count",
            "format": "integer"
          },
          {
            "id": "total_within",
            "label": "Total within working hours",
            "variable": "total_within",
            "format": "integer"
          },
          {
            "id": "fraction_within",
            "label": "Fraction within working hours (%)",
            "variable": "fraction_within",
            "format": "percent"
          }
        ]
      },
      "convert_from_local_host": {
        "label": "Convert a host-local time to UTC and participants' local times",
        "description": "Given the host's local time and host UTC offset, compute UTC minutes and translate to each participant's local time. Useful when scheduling from the organizer's local clock.",
        "variables": {
          "utc_from_host_min": {
            "expression": "host_local_minutes - host_offset * 60",
            "dependencies": [
              "host_local_minutes",
              "host_offset"
            ],
            "label": "UTC time computed from host local minutes",
            "unit": "minutes",
            "format": "integer",
            "display": true
          },
          "local_min_1_from_host": {
            "expression": "utc_from_host_min + offset_1 * 60",
            "dependencies": [
              "utc_from_host_min",
              "offset_1"
            ],
            "label": "Participant 1 local time (minutes) from host-local input",
            "unit": "minutes",
            "format": "integer",
            "display": true
          },
          "local_hour_1_from_host": {
            "expression": "local_min_1_from_host / 60",
            "dependencies": [
              "local_min_1_from_host"
            ],
            "label": "Participant 1 local hour from host-local input",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "fraction_within_from_host": {
            "expression": "( (local_hour_1_from_host >= work_start_1) * (local_hour_1_from_host < work_end_1) * active_1 + ( (utc_from_host_min + offset_2 * 60) / 60 >= work_start_2) * ((utc_from_host_min + offset_2 * 60) / 60 < work_end_2) * active_2 + ( (utc_from_host_min + offset_3 * 60) / 60 >= work_start_3) * ((utc_from_host_min + offset_3 * 60) / 60 < work_end_3) * active_3 + ( (utc_from_host_min + offset_4 * 60) / 60 >= work_start_4) * ((utc_from_host_min + offset_4 * 60) / 60 < work_end_4) * active_4 + ( (utc_from_host_min + offset_5 * 60) / 60 >= work_start_5) * ((utc_from_host_min + offset_5 * 60) / 60 < work_end_5) * active_5 ) / (active_1 + active_2 + active_3 + active_4 + active_5 + 0.000001)",
            "dependencies": [
              "local_hour_1_from_host",
              "utc_from_host_min",
              "offset_2",
              "offset_3",
              "offset_4",
              "offset_5",
              "work_start_1",
              "work_end_1",
              "work_start_2",
              "work_end_2",
              "work_start_3",
              "work_end_3",
              "work_start_4",
              "work_end_4",
              "work_start_5",
              "work_end_5",
              "active_1",
              "active_2",
              "active_3",
              "active_4",
              "active_5",
              "host_local_minutes",
              "host_offset"
            ],
            "label": "Fraction of active participants within working hours for host-local input",
            "format": "percent",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "utc_from_host_min",
            "label": "UTC minutes computed from host",
            "variable": "utc_from_host_min",
            "unit": "minutes",
            "format": "integer"
          },
          {
            "id": "local_min_1_from_host",
            "label": "Participant 1 local minutes (from host-local)",
            "variable": "local_min_1_from_host",
            "unit": "minutes",
            "format": "integer"
          },
          {
            "id": "local_hour_1_from_host",
            "label": "Participant 1 local hour (from host-local)",
            "variable": "local_hour_1_from_host",
            "unit": "hours",
            "format": "decimal"
          },
          {
            "id": "fraction_within_from_host",
            "label": "Fraction within working hours (host-local input)",
            "variable": "fraction_within_from_host",
            "format": "percent"
          }
        ]
      },
      "score_current_time": {
        "label": "Score current UTC time for fairness (lower is better)",
        "description": "Compute a fairness score for the current UTC time by summing squared deviations of local time from each participant's mid-work hour. This method evaluates the provided UTC time rather than searching the full space.",
        "variables": {
          "mid_1": {
            "expression": "(work_start_1 + work_end_1) / 2",
            "dependencies": [
              "work_start_1",
              "work_end_1"
            ],
            "label": "Participant 1 mid-work hour",
            "unit": "hours",
            "format": "decimal",
            "display": true
          },
          "dev_sq_1": {
            "expression": "(local_hour_1 - mid_1) * (local_hour_1 - mid_1) * active_1",
            "dependencies": [
              "local_hour_1",
              "mid_1",
              "active_1"
            ],
            "label": "Participant 1 squared deviation from mid-work",
            "unit": "hours^2",
            "format": "decimal",
            "display": true
          },
          "dev_sq_2": {
            "expression": "(local_hour_2 - (work_start_2 + work_end_2)/2) * (local_hour_2 - (work_start_2 + work_end_2)/2) * active_2",
            "dependencies": [
              "local_hour_2",
              "work_start_2",
              "work_end_2",
              "active_2"
            ],
            "label": "Participant 2 squared deviation",
            "unit": "hours^2",
            "format": "decimal",
            "display": true
          },
          "dev_sq_3": {
            "expression": "(local_hour_3 - (work_start_3 + work_end_3)/2) * (local_hour_3 - (work_start_3 + work_end_3)/2) * active_3",
            "dependencies": [
              "local_hour_3",
              "work_start_3",
              "work_end_3",
              "active_3"
            ],
            "label": "Participant 3 squared deviation",
            "unit": "hours^2",
            "format": "decimal",
            "display": true
          },
          "dev_sq_4": {
            "expression": "(local_hour_4 - (work_start_4 + work_end_4)/2) * (local_hour_4 - (work_start_4 + work_end_4)/2) * active_4",
            "dependencies": [
              "local_hour_4",
              "work_start_4",
              "work_end_4",
              "active_4"
            ],
            "label": "Participant 4 squared deviation",
            "unit": "hours^2",
            "format": "decimal",
            "display": true
          },
          "dev_sq_5": {
            "expression": "(local_hour_5 - (work_start_5 + work_end_5)/2) * (local_hour_5 - (work_start_5 + work_end_5)/2) * active_5",
            "dependencies": [
              "local_hour_5",
              "work_start_5",
              "work_end_5",
              "active_5"
            ],
            "label": "Participant 5 squared deviation",
            "unit": "hours^2",
            "format": "decimal",
            "display": true
          },
          "fairness_score": {
            "expression": "(dev_sq_1 + dev_sq_2 + dev_sq_3 + dev_sq_4 + dev_sq_5) / (active_count + 0.000001)",
            "dependencies": [
              "dev_sq_1",
              "dev_sq_2",
              "dev_sq_3",
              "dev_sq_4",
              "dev_sq_5",
              "active_count"
            ],
            "label": "Fairness score (lower = local times closer to each participant's mid-work hour)",
            "format": "decimal",
            "display": true
          }
        },
        "outputs": [
          {
            "id": "mid_1",
            "label": "Participant 1 mid-work hour",
            "variable": "mid_1",
            "unit": "hours",
            "format": "decimal"
          },
          {
            "id": "dev_sq_1",
            "label": "Participant 1 squared deviation",
            "variable": "dev_sq_1",
            "unit": "hours^2",
            "format": "decimal"
          },
          {
            "id": "dev_sq_2",
            "label": "Participant 2 squared deviation",
            "variable": "dev_sq_2",
            "unit": "hours^2",
            "format": "decimal"
          },
          {
            "id": "dev_sq_3",
            "label": "Participant 3 squared deviation",
            "variable": "dev_sq_3",
            "unit": "hours^2",
            "format": "decimal"
          },
          {
            "id": "dev_sq_4",
            "label": "Participant 4 squared deviation",
            "variable": "dev_sq_4",
            "unit": "hours^2",
            "format": "decimal"
          },
          {
            "id": "dev_sq_5",
            "label": "Participant 5 squared deviation",
            "variable": "dev_sq_5",
            "unit": "hours^2",
            "format": "decimal"
          },
          {
            "id": "fairness_score",
            "label": "Fairness score (hours^2 averaged)",
            "variable": "fairness_score",
            "format": "decimal"
          }
        ]
      }
    }
  },
